/* 消息通知组件样式 */
.message-notification {
  position: fixed;
  top: 100rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 9999;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  animation: slideDown 0.3s ease-out;
  transform: translateY(0);
}

@keyframes slideDown {
  from {
    transform: translateY(-120%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.message-notification.hide {
  animation: slideUp 0.3s ease-out forwards;
  pointer-events: none;
}

@keyframes slideUp {
  from {
    transform: translateY(0);
    opacity: 1;
  }
  to {
    transform: translateY(-120%);
    opacity: 0;
  }
}

.message-notification-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.message-notification-avatar image {
  width: 100%;
  height: 100%;
}

.message-notification-avatar .default-avatar {
  font-size: 40rpx;
  color: #999999;
}

.message-notification-content {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.message-notification-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-notification-text {
  font-size: 24rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

