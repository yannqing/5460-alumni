/* 组织结构骨架屏样式 */
.skeleton-role-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skeleton-role-name {
  width: 180rpx;
  height: 26rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
  margin-left: 12rpx;
}

.skeleton-role-count {
  width: 60rpx;
  height: 28rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 14rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}


.org-tree {
  padding: 12rpx 0;
}

.tree-node {
  margin: 12rpx 0;
}

.tree-node:last-child {
  margin-bottom: 0;
}

/* 顶级角色卡片：圆角 + 阴影 + 渐变背景 */
.level-1 .node-header {
  background: linear-gradient(180deg,rgb(236, 230, 230) 0%, #f8f8f8 100%);
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
}

/* 子级角色：头部缩进卡片（成员区域不缩进） */
.level-2,
.level-3 {
  margin-left: 0;
}

/* 二级节点头部缩进一格 */
.level-2 .node-header {
  margin-left: 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #f2f2f2;
}

/* 三级节点再多缩进一格，层级更明显 */
.level-3 .node-header {
  margin-left: 60rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #f2f2f2;
}

.node-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 28rpx;
}

.node-header:active {
  background-color: #f5f5f5;
}

.node-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 子级左侧圆点 + 短线 */
.level-2 .node-title::before,
.level-3 .node-title::before {
  content: '';
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  border: 5rpx solid #d9d9d9;
}

.level-2 .node-title::after,
.level-3 .node-title::after {
  content: '';
  width: 40rpx;
  height: 0rpx;
  background-color: #d9d9d9;
  border-radius: 2rpx;
}

/* 左侧旧的展开三角隐藏，只保留右侧箭头 */
.expand-icon {
  display: none;
}

.role-name {
  font-size: 30rpx;
  color: #111;
  font-weight: 500;
}

.member-count-inline {
  font-size: 26rpx;
  color: #777;
}

.node-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.arrow-icon {
  font-size: 60rpx;
  color: #c0c0c0;
}

/* 展开状态：同一字符，通过旋转实现向下效果，保持同系列样式 */
.arrow-icon.expanded {
  transform: rotate(90deg);
}

.node-content {
}

.node-members {
  /* 成员区域左右内边距固定，不随层级变化；与上方卡片留更大间距 */
  padding: 32rpx 28rpx 30rpx 28rpx;
}

.org-member-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx 2rpx;
}

.org-member-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  min-width: 180rpx;
}

.org-member-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.org-member-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.org-member-role {
  font-size: 22rpx;
  color: #999;
}

