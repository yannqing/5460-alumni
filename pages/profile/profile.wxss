/* pages/profile/profile.wxss */
.profile-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 个人信息卡片 */
.user-card {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fb5 100%);
  padding: 40rpx 30rpx 30rpx;
  margin: 20rpx;
  border-radius: 24rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.3);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.edit-hint {
  font-size: 24rpx;
  opacity: 0.9;
}

.login-prompt {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.login-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 认证状态条 */
.certification-bar {
  margin-bottom: 32rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
}

.cert-status-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.cert-status-item.certified {
  cursor: pointer;
}

.cert-icon {
  font-size: 48rpx;
  flex-shrink: 0;
}

.cert-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.cert-title {
  font-size: 28rpx;
  font-weight: 600;
}

.cert-desc {
  font-size: 22rpx;
  opacity: 0.9;
}

.cert-action {
  font-size: 24rpx;
  opacity: 0.9;
  flex-shrink: 0;
}

/* 数据栏 */
.stats-section {
  display: flex;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  cursor: pointer;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.stat-divider {
  width: 1rpx;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.menu-card {
  padding: 32rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 我的券包 */
.coupon-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.tab-item.active {
  background-color: #fff0f5;
  color: #ff6b9d;
  font-weight: 500;
}

.tab-badge {
  padding: 2rpx 10rpx;
  background-color: #ff6b9d;
  color: #fff;
  border-radius: 20rpx;
  font-size: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.tab-item.active .tab-badge {
  background-color: #ff6b9d;
}

.view-all-btn {
  text-align: center;
  padding: 20rpx;
  color: #ff6b9d;
  font-size: 26rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
}

/* 校友认证入口 */
.certification-card {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  margin: 20rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.3);
  cursor: pointer;
}

.certification-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.certification-icon {
  font-size: 64rpx;
  flex-shrink: 0;
}

.certification-text {
  flex: 1;
}

.certification-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
  display: block;
}

.certification-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
}

.certification-arrow {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

/* 菜单项 */
.menu-section {
  border-top: 1rpx solid #f7f7f7;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.menu-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.menu-texts {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.menu-name {
  font-size: 28rpx;
  color: #333;
}

.menu-desc {
  font-size: 22rpx;
  color: #999;
}

.menu-right {
  flex-shrink: 0;
}

.menu-arrow {
  font-size: 40rpx;
  color: #ccc;
  font-weight: 300;
  flex-shrink: 0;
}

.merchant-item {
  background: linear-gradient(135deg, #fff0f5, #ffe4ef);
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 0;
  border: none;
}

/* 校友卡弹窗 */
.alumni-card-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.alumni-card-content {
  width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.alumni-card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.alumni-card-body {
  padding: 40rpx;
  text-align: center;
}

.card-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  margin: 0 auto 24rpx;
}

.card-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.card-school {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.card-qrcode {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 24rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-qrcode image {
  width: 100%;
  height: 100%;
}

.card-number {
  font-size: 24rpx;
  color: #999;
}

.bottom-space {
  height: 40rpx;
}
