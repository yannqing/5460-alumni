/* pages/profile/alumni-association/alumni-association.wxss */
.alumni-association-page {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
  text-align: center;
}

.error-text {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 40rpx;
}

.retry-btn {
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 40rpx;
  background-color: #40B2E6;
  color: #fff;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.join-btn {
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 40rpx;
  background-color: #40B2E6;
  color: #fff;
}

/* 校友会列表 */
.association-list {
  margin-top: 20rpx;
}

.association-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.association-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.association-logo image {
  width: 100%;
  height: 100%;
}

.association-info {
  flex: 1;
  min-width: 0;
}

.association-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.association-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.meta-separator {
  font-size: 24rpx;
  color: #ccc;
  margin: 0 12rpx;
}

.association-contact {
  display: flex;
  align-items: center;
}

.contact-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.contact-info {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.association-arrow {
  margin-left: 16rpx;
}

.arrow {
  font-size: 32rpx;
  color: #ccc;
}