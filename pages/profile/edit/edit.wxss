/* 学校选择下拉列表样式 */
.school-select-item {
  position: relative;
}

.school-input-wrapper {
  position: relative;
}

.school-input {
  width: 100%;
}

.school-dropdown-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 998;
  background-color: transparent;
}

.school-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  max-height: 400rpx;
  overflow-y: auto;
  z-index: 999;
  margin-top: 8rpx;
}

.school-dropdown-loading,
.school-dropdown-empty {
  padding: 30rpx;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
}

.school-dropdown-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.school-dropdown-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.school-dropdown-item:last-child {
  border-bottom: none;
}

.school-dropdown-item:active {
  background-color: #f5f5f5;
}

.school-dropdown-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.school-dropdown-location {
  font-size: 24rpx;
  color: #999999;
}

