.edit-container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

.form-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 18rpx 40rpx rgba(19, 31, 80, 0.05);
}

.avatar-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrap {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.avatar-wrap:active .avatar-mask,
.avatar-wrap:hover .avatar-mask {
  opacity: 1;
}

.avatar-tip {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #999;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.tag-input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tag-tip {
  font-size: 24rpx;
  color: #999;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.tag-chip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 157, 0.12);
  color: #ff4f8a;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.tag-chip .remove {
  color: #ff4f8a;
  font-size: 24rpx;
}

.textarea {
  min-height: 180rpx;
  font-size: 26rpx;
  color: #333;
  background: #f7f8fa;
  padding: 20rpx;
  border-radius: 16rpx;
}

.textarea-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.bottom-action {
  padding: 20rpx;
  background: #f7f8fa;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.btn {
  height: 88rpx;
  border-radius: 999rpx;
  font-size: 32rpx;
}

