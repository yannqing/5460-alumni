.edit-container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

.form-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 18rpx 40rpx rgba(19, 31, 80, 0.05);
}

.avatar-card {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrap {
  position: relative;
  width: 180rpx;
  height: 180rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.avatar-wrap:active .avatar-mask,
.avatar-wrap:hover .avatar-mask {
  opacity: 1;
}

.avatar-tip {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #999;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

/* 个人背景编辑 */
.background-card {
  display: flex;
  flex-direction: column;
}

.background-wrap {
  position: relative;
  width: 100%;
  height: 240rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
  border: 1rpx solid #eee;
}

.background-img {
  width: 100%;
  height: 100%;
}

.default-bg-gradient {
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #A9C7F7 0%, #C8DAFA 100%);
  position: relative;
}

.background-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  backdrop-filter: blur(2px);
}

.background-wrap:active .background-mask {
  background: rgba(0, 0, 0, 0.4);
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  justify-content: flex-end;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
  min-width: 0;
}

.save-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  padding: 8rpx;
  transition: all 0.2s;
}

.save-btn:active {
  transform: scale(0.9);
}

.save-icon {
  color: #52c41a;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.tag-input-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tag-tip {
  font-size: 24rpx;
  color: #999;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.tag-chip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 157, 0.12);
  color: #ff4f8a;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.tag-chip .remove {
  color: #ff4f8a;
  font-size: 24rpx;
}

.textarea-wrapper {
  position: relative;
}

.textarea-container {
  position: relative;
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 20rpx;
  padding-bottom: 80rpx;
}

.textarea {
  min-height: 180rpx;
  font-size: 26rpx;
  color: #333;
  background: transparent;
  padding: 0;
  border-radius: 0;
  width: 100%;
  box-sizing: border-box;
}

.textarea-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 个人简介确定按钮 */
.description-save-btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  padding: 12rpx 32rpx;
  background: #fff;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  z-index: 10;
  pointer-events: auto;
}

.description-save-btn:active {
  background: #f5f5f5;
  transform: scale(0.95);
}

.description-save-text {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.bottom-action {
  padding: 20rpx;
  background: #f7f8fa;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.btn {
  height: 88rpx;
  border-radius: 999rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  box-sizing: border-box;
  margin: 0;
  border: none;
}

.btn-primary {
  background: linear-gradient(90deg, #40B2E6 0%, #6BC5ED 100%);
  color: #ffffff;
  font-weight: 600;
}

