<!--pages/profile/my-card/my-card.wxml-->
<view class="my-card-page">
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <text class="loading-text">加载中...</text>
  </view>
  
  <!-- 名片内容 -->
  <view class="card-content" wx:else>
    <!-- 个人信息卡片 -->
    <view class="user-card">
      <view class="user-avatar-container">
        <image class="user-avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill" wx:if="{{userInfo.avatarUrl}}"></image>
        <view class="user-avatar-placeholder" wx:else></view>
      </view>
    </view>
    
    <!-- 联系方式区域 -->
    <view class="section-card">
      <view class="section-header">
        <text class="section-title">联系方式</text>
      </view>
      <view class="user-basic-info">
        <view class="user-name">{{userInfo.name || userInfo.nickname || '未设置'}}</view>
        <view class="user-nickname">{{userInfo.nickname}}</view>
      </view>
      <view class="contact-info">
        <view class="contact-item" wx:if="{{userInfo.phone}}">
          <text class="contact-label">手机</text>
          <text class="contact-value">{{userInfo.phone}}</text>
        </view>
        <view class="contact-item" wx:if="{{userInfo.wxNum}}">
          <text class="contact-label">微信</text>
          <text class="contact-value">{{userInfo.wxNum}}</text>
        </view>
        <view class="contact-item" wx:if="{{userInfo.qqNum}}">
          <text class="contact-label">QQ</text>
          <text class="contact-value">{{userInfo.qqNum}}</text>
        </view>
        <view class="contact-item" wx:if="{{userInfo.email}}">
          <text class="contact-label">邮箱</text>
          <text class="contact-value">{{userInfo.email}}</text>
        </view>
      </view>
    </view>
    
    <!-- 教育经历区域 -->
    <view class="section-card" wx:if="{{userInfo.alumniEducationList && userInfo.alumniEducationList.length > 0}}">
      <view class="section-header">
        <text class="section-title">教育经历</text>
      </view>
      <view class="education-list">
        <view class="education-item" wx:for="{{userInfo.alumniEducationList}}" wx:key="index">
          <view class="education-school" wx:if="{{item.schoolInfo}}">
            <image class="school-logo" src="{{item.schoolInfo.logo}}" mode="aspectFit" wx:if="{{item.schoolInfo.logo}}"></image>
            <text class="school-name">{{item.schoolInfo.schoolName}}</text>
          </view>
        </view>
      </view>
    </view>
    
    <!-- 个人信息详情 -->
    <view class="section-card">
      <view class="section-header">
        <text class="section-title">个人信息</text>
      </view>
      <view class="detail-info">
        <view class="detail-item" wx:if="{{userInfo.originProvince}}">
          <text class="detail-label">籍贯</text>
          <text class="detail-value">{{userInfo.originProvince}}</text>
        </view>
        <view class="detail-item" wx:if="{{userInfo.curProvince || userInfo.curCity}}">
          <text class="detail-label">所在地</text>
          <text class="detail-value">{{userInfo.curProvince}} {{userInfo.curCity}} {{userInfo.curCounty}}</text>
        </view>
        <view class="detail-item" wx:if="{{userInfo.address}}">
          <text class="detail-label">详细地址</text>
          <text class="detail-value">{{userInfo.address}}</text>
        </view>
        <view class="detail-item" wx:if="{{userInfo.signature}}">
          <text class="detail-label">个性签名</text>
          <text class="detail-value">{{userInfo.signature}}</text>
        </view>
        <view class="detail-item" wx:if="{{userInfo.description}}">
          <text class="detail-label">个人简介</text>
          <text class="detail-value">{{userInfo.description}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
