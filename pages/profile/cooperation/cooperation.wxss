/* 复用 profile 页面的菜单样式 */
page {
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.card {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx; /* 稍微圆一点 */
  overflow: hidden;
}

.menu-card {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.menu-icon {
  font-size: 36rpx;
  flex-shrink: 0;
  width: 40rpx;
  text-align: center;
}

.menu-icon-img {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  display: block;
}

.menu-name {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
  flex-shrink: 0;
}
