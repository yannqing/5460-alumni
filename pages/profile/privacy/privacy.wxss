/* pages/profile/privacy/privacy.wxss */
.privacy-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 0;
  overflow: hidden;
}

.menu-card {
  padding: 0;
}

.section-title {
  padding: 32rpx 30rpx 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.menu-icon {
  font-size: 36rpx;
  flex-shrink: 0;
  width: 40rpx;
  text-align: center;
}

.menu-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.menu-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 底部留白 */
.bottom-space {
  height: 40rpx;
}









