<!--pages/profile/privacy/privacy.wxml-->
<view class="privacy-page">
  <view class="card menu-card">
    <view class="section-title">个人信息展示设置</view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">👤</text>
        <view class="menu-content">
          <text class="menu-name">展示真实姓名</text>
          <text class="menu-desc">其他用户可以看到您的真实姓名</text>
        </view>
      </view>
      <switch checked="{{privacySettings.showRealName}}" bindchange="togglePrivacy" data-key="showRealName" color="#ff6b9d" />
    </view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">📱</text>
        <view class="menu-content">
          <text class="menu-name">展示手机号</text>
          <text class="menu-desc">其他用户可以看到您的手机号</text>
        </view>
      </view>
      <switch checked="{{privacySettings.showPhone}}" bindchange="togglePrivacy" data-key="showPhone" color="#ff6b9d" />
    </view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">💬</text>
        <view class="menu-content">
          <text class="menu-name">展示微信号</text>
          <text class="menu-desc">其他用户可以看到您的微信号</text>
        </view>
      </view>
      <switch checked="{{privacySettings.showWxNum}}" bindchange="togglePrivacy" data-key="showWxNum" color="#ff6b9d" />
    </view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">📧</text>
        <view class="menu-content">
          <text class="menu-name">展示邮箱</text>
          <text class="menu-desc">其他用户可以看到您的邮箱地址</text>
        </view>
      </view>
      <switch checked="{{privacySettings.showEmail}}" bindchange="togglePrivacy" data-key="showEmail" color="#ff6b9d" />
    </view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">📍</text>
        <view class="menu-content">
          <text class="menu-name">展示位置信息</text>
          <text class="menu-desc">其他用户可以看到您的位置信息</text>
        </view>
      </view>
      <switch checked="{{privacySettings.showLocation}}" bindchange="togglePrivacy" data-key="showLocation" color="#ff6b9d" />
    </view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">🎓</text>
        <view class="menu-content">
          <text class="menu-name">展示学校信息</text>
          <text class="menu-desc">其他用户可以看到您的学校、专业等信息</text>
        </view>
      </view>
      <switch checked="{{privacySettings.showSchoolInfo}}" bindchange="togglePrivacy" data-key="showSchoolInfo" color="#ff6b9d" />
    </view>
  </view>

  <view class="card menu-card">
    <view class="section-title">互动设置</view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">🔒</text>
        <view class="menu-content">
          <text class="menu-name">允许被搜索</text>
          <text class="menu-desc">开启后，其他用户可以通过搜索找到您</text>
        </view>
      </view>
      <switch checked="{{privacySettings.allowSearch}}" bindchange="togglePrivacy" data-key="allowSearch" color="#ff6b9d" />
    </view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">👣</text>
        <view class="menu-content">
          <text class="menu-name">允许展示足迹</text>
          <text class="menu-desc">开启后，其他用户可以看到您的足迹记录</text>
        </view>
      </view>
      <switch checked="{{privacySettings.allowFootprint}}" bindchange="togglePrivacy" data-key="allowFootprint" color="#ff6b9d" />
    </view>
    <view class="menu-item">
      <view class="menu-left">
        <text class="menu-icon">💌</text>
        <view class="menu-content">
          <text class="menu-name">允许接收私信</text>
          <text class="menu-desc">开启后，其他用户可以给您发送私信</text>
        </view>
      </view>
      <switch checked="{{privacySettings.allowMessage}}" bindchange="togglePrivacy" data-key="allowMessage" color="#ff6b9d" />
    </view>
  </view>

  <!-- 底部留白 -->
  <view class="bottom-space"></view>
</view>


