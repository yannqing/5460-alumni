.container {
  padding: 30rpx;
  background: #fff;
  min-height: 100vh;
}
.form-group {
  margin-bottom: 40rpx;
}
.form-group.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.input {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.textarea {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
}
.upload-box {
  width: 200rpx;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #ddd;
}
.placeholder {
  font-size: 60rpx;
  color: #ccc;
}
.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.submit-btn {
  background: #4bcce9;
  color: #fff;
  border-radius: 40rpx;
  margin-top: 60rpx;
}