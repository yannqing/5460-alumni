.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx; /* 留出底部按钮空间 */
}

.article-list {
  padding: 20rpx;
}

/* 卡片样式 */
.article-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

/* 头部：用户信息 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f0f0f0;
  overflow: hidden;
  flex-shrink: 0;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.publish-time {
  font-size: 24rpx;
  color: #999;
}

/* 内容区域 */
.card-body {
  display: flex;
  justify-content: space-between;
}

.text-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.article-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.5;
  
  /* 多行省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  
  /* 多行省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 有封面图时的样式调整 */
.has-cover .text-content {
  margin-right: 24rpx;
}

.article-cover-wrapper {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  flex-shrink: 0;
  overflow: hidden;
}

.article-cover {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 底部状态 */
.card-footer {
  margin-top: 16rpx;
  display: flex;
}

.article-tag {
  font-size: 20rpx;
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  min-width: 120rpx;
}

.edit-btn {
  background:rgb(241, 234, 234);
  color: #666;
}

.delete-btn {
  background: #ff4d4f;
  color: #fff;
}

/* 底部按钮 */
.footer-btn-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 40rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.add-btn {
  background: #4bcce9;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  height: 88rpx;
  line-height: 88rpx;
  box-shadow: 0 4rpx 12rpx rgba(75, 204, 233, 0.4);
}

.add-btn::after {
  border: none;
}

/* 状态提示 */
.empty-state, .loading-state, .no-more-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}