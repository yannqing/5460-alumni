.container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

.article-header {
  margin-bottom: 30rpx;
}

.user-info-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  gap: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: space-between;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex-shrink: 0;
}

.publish-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.article-title-wrapper {
  margin-bottom: 30rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.article-cover-wrapper {
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.article-cover {
  width: 100%;
  display: block;
}

.article-content {
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  margin-bottom: 30rpx;
}

.article-link-wrapper {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.article-link-label {
  color: #666;
  margin-right: 10rpx;
}

.article-link {
  color: #4e6ef2;
  word-break: break-all;
}

.loading-state, .error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

.error-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.edit-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4e6ef2;
  font-size: 32rpx;
  font-weight: 500;
  padding-bottom: env(safe-area-inset-bottom);
}