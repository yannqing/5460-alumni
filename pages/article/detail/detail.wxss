.container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

.article-header {
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 30rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.article-meta {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.article-author {
  margin-left: 20rpx;
  color: #4e6ef2;
}

.article-content {
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  padding-bottom: 60rpx;
}

.loading-state, .error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

.error-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.edit-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4e6ef2;
  font-size: 32rpx;
  font-weight: 500;
  padding-bottom: env(safe-area-inset-bottom);
}