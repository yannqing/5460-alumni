/* pages/article-publish/index/index.wxss */
.article-publish-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.form-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.title-input {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  width: 100%;
}

.placeholder {
  color: #cccccc;
}

.cover-image-container {
  position: relative;
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.add-cover-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 80rpx;
  color: #999999;
  background-color: rgba(255, 255, 255, 0.8);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-text {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.content-textarea {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  width: 100%;
  min-height: 400rpx;
  padding: 10rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.publish-btn-container {
  padding: 20rpx;
  margin-top: 40rpx;
}

.publish-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 20rpx;
  border: none;
  width: 100%;
}

.publish-btn::after {
  border: none;
}
