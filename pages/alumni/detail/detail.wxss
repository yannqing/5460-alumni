/* pages/alumni/detail/detail.wxss */
.alumni-detail-page {
  min-height: 100vh;
  background-color: #f8f9fb;
  padding-bottom: 80rpx;
}

/* 背景和头像区域 */
.profile-header {
  position: relative;
  width: 100%;
  height: 480rpx;
  overflow: hidden;
}

.background-image {
  width: 100%;
  height: 100%;
}

.default-bg-gradient {
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #A9C7F7 0%, #C8DAFA 100%);
  position: relative;
}

/* 模拟白云效果 - 针对深蓝背景进行调优 */
.default-bg-gradient::after {
  content: '';
  position: absolute;
  top: 15%;
  left: 15%;
  width: 280rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.15);
  filter: blur(50rpx);
  border-radius: 50%;
  box-shadow: 
    300rpx 60rpx 0 15rpx rgba(255, 255, 255, 0.1),
    -150rpx 100rpx 0 5rpx rgba(255, 255, 255, 0.08);
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.4) 100%);
}

.profile-main-content {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.profile-left-section {
  flex: 1;
  margin-right: 20rpx;
}

.avatar-nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar-circle {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  background-color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  margin-right: 24rpx;
}

.name-area {
  flex: 1;
}

.nickname-wrap {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.nickname-text {
  font-size: 38rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.cert-badge-image {
  height: 38rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  display: block;
}

.signature-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.quick-info-row {
  display: flex;
  align-items: center;
}

.quick-info-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 400;
}

.quick-info-divider {
  width: 2rpx;
  height: 16rpx;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 16rpx;
}

.profile-right-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  height: 60rpx;
  min-width: 120rpx;
  padding: 0 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  box-sizing: border-box;
}

.message-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10px);
}

.follow-btn {
  background: #fff;
  color: #3F61CA;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.follow-btn.followed {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 信息卡片 */
.info-sections {
  margin-top: -20rpx;
  position: relative;
  z-index: 3;
}

.info-card {
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 36rpx 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.02);
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.card-header {
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  width: 6rpx;
  height: 28rpx;
  background: #3F61CA;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.card-content {
  width: 100%;
}

/* 详情行 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f2f3f5;
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #8c8c8c;
  flex-shrink: 0;
  width: 160rpx;
}

.info-value {
  font-size: 28rpx;
  color: #262626;
  text-align: right;
  flex: 1;
  margin-left: 40rpx;
  word-break: break-all;
  line-height: 1.4;
}

/* 经历项 */
.history-item {
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f2f3f5;
}

.history-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.history-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  margin-right: 20rpx;
}

.history-tag {
  font-size: 20rpx;
  color: #595959;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

.history-tag.active {
  color: #3F61CA;
  background-color: rgba(63, 97, 202, 0.08);
}

.history-meta {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 10rpx;
}

.history-detail {
  font-size: 26rpx;
  color: #595959;
  line-height: 1.5;
}

.history-desc {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 16rpx;
  background-color: #fafafa;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  line-height: 1.6;
}

/* 简介 */
.bio-text {
  font-size: 28rpx;
  color: #434343;
  line-height: 1.8;
  text-align: justify;
}

/* 空值/隐私样式 */
.text-null {
  color: #c0c4cc !important;
  font-weight: 300;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  background-color: transparent;
  padding: 0;
  opacity: 0.8;
}

.bio-text.text-null {
  color: #d1d4db !important;
  line-height: 1.6;
}
