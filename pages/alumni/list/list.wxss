/* pages/alumni/list/list.wxss */

/* 搜索栏 */
.search-bar {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 16rpx 30rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #ff6b9d;
  margin-left: 16rpx;
}

/* 筛选栏 */
.filter-bar {
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.filter-item.active {
  color: #333333;
  font-weight: 600;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999999;
}

/* 校友列表 */
.alumni-list {
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
}

.alumni-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部 */
.card-header {
  margin-bottom: 16rpx;
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
}

.cert-badge {
  padding: 6rpx 16rpx;
  background-color: #ff6b9d;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

/* 副标题 */
.card-subtitle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.subtitle-icon {
  font-size: 28rpx;
}

/* 位置信息 */
.card-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.location-icon {
  font-size: 24rpx;
}

/* 标签 */
.card-tags {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.mini-tag {
  padding: 6rpx 16rpx;
  background-color: #fff0f5;
  color: #ff6b9d;
  font-size: 22rpx;
  border-radius: 6rpx;
}

.next-arrow {
  margin-left: auto;
  font-size: 32rpx;
  color: #e0e0e0;
  font-weight: 300;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.card-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #999999;
}

.stat-item {
  display: flex;
  align-items: center;
}

.card-action {
  flex-shrink: 0;
}

.follow-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.follow-btn.followed {
  background: transparent;
  border: 2rpx solid #ff6b9d;
  color: #ff6b9d;
}

/* 加载状态 */
.loading-text {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999999;
  font-size: 26rpx;
}
