/* pages/audit/enterprise/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
}

.enterprise-management-page {
  padding: 20rpx;
}

/* 表单卡片样式 */
.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-right: 32rpx;
  min-width: 160rpx;
}

/* 校友会选择器样式 */
.alumni-association-selector {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  border: 1rpx solid #e8e8e8;
}

.selector-label {
  font-size: 28rpx;
  color: #666;
}

.selector-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 校友会选择器弹窗样式 */
.alumni-association-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-cancel {
  font-size: 28rpx;
  color: #666;
}

.picker-list {
  max-height: 60vh;
  overflow-y: auto;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-check {
  font-size: 32rpx;
  color: #40B2E6;
  font-weight: 600;
}

.picker-empty {
  padding: 64rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
