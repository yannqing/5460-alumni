/* pages/audit/merchant/apply/apply.wxss */
.page {
  background-color: transparent;
  width: 750rpx;
  height: calc(100vh - 190.22rpx);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.group_7 {
  width: 714rpx;
  flex: 1;
  max-height: 55vh;
  min-height: 0;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  margin: 47rpx 0 20rpx 18rpx;
  padding: 38rpx 43rpx 27rpx 43rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.list-header { margin-bottom: 16rpx; flex-shrink: 0; }
.group_7 .text_20 {
  font-size: 29rpx;
  font-weight: 600;
  color: rgba(0,0,0,1);
  line-height: 40rpx;
}

.filter-tabs-wrap {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
  flex-shrink: 0;
}

.filter-tab {
  padding: 12rpx 28rpx;
  border-radius: 14rpx;
  font-size: 25rpx;
  color: #666;
  background-color: #f5f5f5;
}

.filter-tab.active {
  background-color: rgba(24,144,255,0.12);
  color: #1890ff;
  font-weight: 600;
}

.scroll-list { width: 100%; flex-shrink: 0; }

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-block {
  padding: 16rpx 0 60rpx;
  text-align: center;
}

.empty-text { font-size: 28rpx; color: #999; }

.apply-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-bottom: 16rpx;
}

.apply-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  border: 1rpx solid #f0f0f0;
}

.apply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.apply-name {
  font-size: 29rpx;
  font-weight: 600;
  color: #333;
}

.apply-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 14rpx;
}

.apply-status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.apply-status.approved {
  background-color: #f6ffed;
  color: #52c41a;
}

.apply-status.rejected {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.apply-info {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 25rpx;
}

.apply-label {
  color: #999;
  width: 140rpx;
  flex-shrink: 0;
}

.apply-value { color: #333; flex: 1; }

.apply-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 25rpx;
}

.action-btn.reject {
  background-color: rgba(255,77,79,0.12);
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.action-btn.approve {
  background-color: #1890ff;
  color: #fff;
  border: none;
}

.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 0;
  color: #999;
  font-size: 24rpx;
}
