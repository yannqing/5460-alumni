/* pages/audit/merchant/member/member.wxss */
.member-management-page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 表单卡片样式 */
.form-card {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

/* 商户选择器样式 */
.merchant-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FAFAFA;
  cursor: pointer;
}

.merchant-selector:active {
  border-color: #1AAD19;
  background-color: white;
}

.selector-label {
  color: #333;
}

.selector-label:empty::before {
  content: '请选择商户';
  color: #999;
}

.selector-arrow {
  color: #999;
  font-size: 20rpx;
}

/* 商户选择器弹窗 */
.merchant-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1003;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #E5E5E5;
  background-color: #FAFAFA;
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.picker-cancel {
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
}

.picker-cancel:active {
  color: #333;
}

.picker-list {
  max-height: calc(80vh - 88rpx);
  overflow-y: auto;
  padding: 16rpx 0;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  cursor: pointer;
  border-bottom: 1rpx solid #F0F0F0;
}

.picker-item:active {
  background-color: #F5F5F5;
}

.item-name {
  flex: 1;
}

.item-check {
  color: #1AAD19;
  font-weight: bold;
}

.picker-empty {
  padding: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

/* 表单标题栏 */
.form-title-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

/* 标题容器 */
.form-title-bar .form-title {
  margin-bottom: 0;
  flex-shrink: 0;
}

/* 新增成员按钮 */
.add-member-btn {
  background-color: #1AAD19;
  color: white;
  font-size: 26rpx;
  padding: 0 24rpx;
  height: 64rpx;
  border-radius: 8rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.add-member-btn:active {
  background-color: #179B16;
  transform: translateY(-50%) scale(0.98);
}

/* 去除按钮默认样式 */
.add-member-btn::after {
  border: none;
}

/* 成员列表样式 */
.member-item {
  background-color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #F0F0F0;
  transition: all 0.2s ease;
}

.member-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 成员头部信息 */
.member-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.member-info {
  flex: 1;
}

.member-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.member-real-name {
  font-size: 26rpx;
  color: #666;
}

.member-role {
  font-size: 26rpx;
  color: #1AAD19;
  background-color: #E6F7E6;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
}

/* 成员详情信息 */
.member-details {
  background-color: #F5F7FA;
  padding: 24rpx;
  border-radius: 12rpx;
}

.member-detail-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.member-detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  width: 160rpx;
  color: #999;
  flex-shrink: 0;
}

.detail-value {
  color: #333;
  flex: 1;
  word-break: break-word;
}

/* 状态样式 */
.status-active {
  color: #1AAD19;
}

.status-inactive {
  color: #FF4D4F;
}

/* 弹窗遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

/* 弹窗容器 */
.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  z-index: 1002;
  overflow: hidden;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  cursor: pointer;
  line-height: 1;
}

.modal-close:active {
  color: #666;
}

/* 弹窗内容 */
.modal-content {
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.required {
  color: #FF4D4F;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FAFAFA;
}

.form-input:focus {
  border-color: #1AAD19;
  background-color: white;
  outline: none;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.btn-cancel,
.btn-submit {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  outline: none;
  box-sizing: border-box;
}

.btn-cancel {
  background-color: #F5F5F5;
  color: #666;
}

.btn-cancel:active {
  background-color: #E5E5E5;
}

.btn-submit {
  background-color: #1AAD19;
  color: white;
}

.btn-submit:active {
  background-color: #179B16;
}

/* 去除按钮默认样式 */
.btn-cancel::after,
.btn-submit::after {
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #F0F0F0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
  line-height: 1.5;
}