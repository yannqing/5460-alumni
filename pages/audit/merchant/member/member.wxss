/* pages/audit/merchant/member/member.wxss */
/* 与校友会审核页一致：.page + group_5 + group_7，仅 group_7 内 scroll-list 滚动 */
.page {
  background-color: transparent;
  position: relative;
  width: 750rpx;
  height: calc(100vh - 190.22rpx);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.page .group_5 {
  width: 714rpx;
  min-height: auto;
  margin: 47rpx 0 0 18rpx;
  padding: 38rpx 43rpx 27rpx 43rpx;
  flex-shrink: 0;
}

.group_5 {
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex-shrink: 0;
}

.group_5 .text_14 {
  font-size: 29rpx;
  font-weight: 600;
  color: rgba(0,0,0,1);
  line-height: 40rpx;
}

.group_5 .label_text {
  font-size: 25rpx;
  color: rgba(0,0,0,0.6);
  line-height: 36rpx;
  margin-top: 16rpx;
  display: block;
}

.group_5 .text-wrapper_8 {
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #E0E0E0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-top: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.group_5 .text_15 {
  flex: 1;
  font-size: 28rpx;
  color: rgba(0,0,0,0.85);
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.group_5 .text-wrapper_8::after {
  content: '▼';
  color: #999;
  font-size: 20rpx;
  margin-left: 10rpx;
}

.group_7 {
  width: 714rpx;
  flex: 1;
  max-height: 55vh;
  min-height: 0;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  margin: 34rpx 0 20rpx 18rpx;
  padding: 38rpx 43rpx 27rpx 43rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.member-list-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  flex-shrink: 0;
}

.group_7 .text_20 {
  font-size: 29rpx;
  font-weight: 600;
  color: rgba(0,0,0,1);
  line-height: 40rpx;
}

.invite-btn-wrap {
  flex-shrink: 0;
}

.invite-btn {
  background-color: #1890ff;
  color: #fff;
  font-size: 25rpx;
  padding: 0 24rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 7rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.invite-btn::after { border: none; }

.scroll-list {
  width: 100%;
  flex-shrink: 0;
  position: relative;
  z-index: 0;
}

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-block {
  padding: 16rpx 0 60rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.member-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-bottom: 16rpx;
}

.member-item {
  background-color: #f9f9f9;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
}

.member-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.member-info { flex: 1; }

.member-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 29rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.member-real-name {
  font-size: 25rpx;
  color: #666;
}

.member-role {
  font-size: 24rpx;
  color: #1890ff;
  background-color: rgba(24,144,255,0.12);
  padding: 4rpx 16rpx;
  border-radius: 14rpx;
  display: inline-block;
}

.member-details {
  background-color: #f5f7fa;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}

.member-detail-item {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 25rpx;
}

.member-detail-item:last-child { margin-bottom: 0; }

.detail-label {
  width: 140rpx;
  color: #999;
  flex-shrink: 0;
}

.detail-value { color: #333; flex: 1; word-break: break-word; }

.status-active { color: #52c41a; }
.status-inactive { color: #ff4d4f; }

.modal-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0,0,0,0.5);
  z-index: 1001;
}

.modal-container {
  position: fixed;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.2);
  z-index: 1002;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-content {
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.form-item { margin-bottom: 24rpx; }

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.required { color: #ff4d4f; }

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fafafa;
}

.form-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.btn-cancel, .btn-submit {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-sizing: border-box;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-submit {
  background-color: #1890ff;
  color: #fff;
}

.btn-cancel::after, .btn-submit::after { border: none; }

.merchant-picker {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 10000;
}

.merchant-picker .picker-overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0,0,0,0.5);
}

.merchant-picker .picker-content {
  position: absolute;
  bottom: 0; left: 0; right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 70vh;
  overflow: hidden;
}

.merchant-picker .picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.merchant-picker .picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.merchant-picker .picker-cancel {
  font-size: 28rpx;
  color: #999;
}

.merchant-picker .picker-list {
  max-height: calc(50vh + 40px);
  overflow-y: auto;
  padding: 0 30rpx;
}

.merchant-picker .picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.merchant-picker .item-name { font-size: 28rpx; color: #333; }

.merchant-picker .item-check {
  font-size: 32rpx;
  color: #52c41a;
  font-weight: 600;
}

.merchant-picker .picker-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
