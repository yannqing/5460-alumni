/* pages/audit/merchant/topic/edit/edit.wxss */
.activity-edit-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-top: 100rpx; /* 留顶部导航栏的高度 */
}

/* 顶部导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.nav-left {
  justify-content: flex-start;
}

.nav-right {
  justify-content: flex-end;
}

.nav-icon {
  font-size: 40rpx;
  color: #333;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  background-color: #fff;
  margin: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 表单容器 */
.form-container {
  padding: 30rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 表单标签 */
.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.form-label.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 8rpx;
}

/* 表单输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
}

.form-input:focus {
  background-color: #fff;
  border-color: #667eea;
  box-shadow: 0 0 0 2rpx rgba(102, 126, 234, 0.2);
}

/* 表单文本域 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
  resize: vertical;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  background-color: #fff;
  border-color: #667eea;
  box-shadow: 0 0 0 2rpx rgba(102, 126, 234, 0.2);
}

/* 表单选择器 */
.form-picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
}

.form-picker:active {
  background-color: #e8e8e8;
}

.form-picker::after {
  content: '▼';
  font-size: 24rpx;
  color: #999;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  align-items: center;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
  font-size: 28rpx;
  color: #666;
}

.radio-item text {
  margin-left: 10rpx;
}

/* 图片上传容器 */
.upload-container {
  margin-top: 16rpx;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

/* 图片项 */
.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 1rpx solid #eee;
}

/* 列表图片 */
.list-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 上传按钮 */
.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  cursor: pointer;
  transition: all 0.3s ease;
}

.upload-btn:hover {
  border-color: #667eea;
  background-color: #f0f4ff;
}

.upload-btn:active {
  transform: scale(0.98);
}

/* 上传图标 */
.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

/* 上传文本 */
.upload-text {
  font-size: 22rpx;
  color: #666;
}

/* 图片删除按钮 */
.image-delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 69, 69, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(255, 69, 69, 0.3);
  transition: all 0.3s ease;
}

.image-delete-btn:active {
  transform: scale(0.9);
  background-color: rgba(255, 69, 69, 1);
}

/* 删除图标 */
.delete-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 图片数量提示 */
.image-count {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 提交按钮容器 */
.submit-btn-container {
  margin-top: 40rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #667eea;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 10rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:hover {
  background-color: #5a6fd8;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.submit-btn:active {
  transform: scale(0.98);
}

.submit-btn:disabled {
  background-color: #ccc;
  box-shadow: none;
  cursor: not-allowed;
  opacity: 0.6;
}