/* pages/audit/merchant/topic/publish/publish.wxss */
.publish-topic-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面头部样式 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.header-left,
.header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.header-left {
  justify-content: flex-start;
}

.header-right {
  justify-content: flex-end;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

/* 表单容器样式 */
.form-container {
  padding: 120rpx 30rpx 160rpx;
  background-color: #f5f5f5;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 24rpx;
  background-color: #fff;
  padding: 28rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.form-item:active {
  background-color: #fafafa;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 20rpx;
  letter-spacing: 0.5rpx;
}

.form-input {
  width: 100%;
  padding: 32rpx 24rpx;
  font-size: 28rpx;
  font-family: "PingFang SC", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #333;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  background-color: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.form-input:focus {
  border-color: #667eea;
  background-color: #fff;
}

/* 文本域样式 */
.form-textarea {
  width: 100%;
  min-height: 186rpx;
  padding: 32rpx 24rpx;
  font-size: 28rpx;
  font-family: "PingFang SC", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #333;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  background-color: #fafafa;
  box-sizing: border-box;
  resize: none;
  transition: all 0.3s ease;
  line-height: 1.6;
  letter-spacing: 0.5rpx;
}

.form-textarea:focus {
  border-color: #667eea;
  background-color: #fff;
}

/* 上传容器样式 */
.upload-container {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 图片列表样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

/* 图片项样式增强，添加相对定位以便删除按钮和上传中状态定位 */
.image-item {
  position: relative;
  width: 168rpx;
  height: 168rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #e5e5e5;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.image-item:active {
  transform: scale(0.98);
}

.list-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 封面图预览样式 */
.cover-preview {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.cover-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.delete-cover-btn {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: none;
  transition: all 0.3s ease;
}

.delete-cover-btn:hover {
  background-color: #ff7875;
}

.delete-cover-btn:active {
  transform: scale(0.98);
}

.cover-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  background-color: #fafafa;
}

.change-cover-btn {
  background-color: #667eea;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: none;
  transition: all 0.3s ease;
}

.change-cover-btn:hover {
  background-color: #5a6fd8;
}

.change-cover-btn:active {
  transform: scale(0.98);
}

/* 上传按钮样式 */
.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 168rpx;
  height: 168rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  background-color: #fafafa;
  cursor: pointer;
  transition: all 0.3s ease;
}

.upload-btn:hover {
  border-color: #667eea;
  background-color: #f0f4ff;
  transform: scale(1.02);
}

.upload-btn:active {
  transform: scale(0.98);
}

.upload-icon {
  font-size: 52rpx;
  color: #888;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.upload-btn:hover .upload-icon {
  color: #667eea;
  transform: scale(1.1);
}

.upload-text {
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s ease;
}

.upload-btn:hover .upload-text {
  color: #667eea;
}

/* 图片数量提示 */
.image-count {
  font-size: 24rpx;
  color: #999;
  align-self: flex-start;
}

/* 图片删除按钮 */
.image-delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 69, 69, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

/* 封面图标识 */
.cover-tag {
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 0 10rpx 0 0;
}

.cover-text {
  font-weight: bold;
}

.image-delete-btn:active {
  transform: scale(0.9);
  background-color: rgba(255, 69, 69, 1);
}

.delete-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 上传中状态 */
.image-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.image-loading .loading-text {
  color: #fff;
  font-size: 24rpx;
}

/* 时间选择器样式 */
.form-picker {
  width: 100%;
}

.form-picker-view {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin-bottom: 16rpx;
}

.picker-view-item {
  font-size: 28rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.picker-content:active {
  background-color: #e8e8e8;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 单选按钮样式 */
.radio-group {
  display: flex;
  align-items: center;
  gap: 60rpx;
  padding: 8rpx 0;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 14rpx;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.radio-item:active {
  background-color: #f0f4ff;
}

.radio-item text {
  font-size: 28rpx;
  color: #444;
  font-weight: 500;
  transition: all 0.3s ease;
}

/* 位置选择器样式 */
.location-selector {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.location-input {
  flex: 1;
  background-color: #fafafa;
  color: #999;
}

.select-location-btn {
  background-color: #667eea;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  border-radius: 10rpx;
  padding: 22rpx 36rpx;
  transition: all 0.3s ease;
}

.select-location-btn:hover {
  background-color: #5a6fd8;
}

.select-location-btn:active {
  background-color: #4d62cc;
  transform: scale(0.98);
}

/* 坐标信息样式 */
.coordinate-info {
  background-color: #fafafa;
  border: 1rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 24rpx;
  margin-top: 12rpx;
}

.coordinate-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.coordinate-text:last-child {
  margin-bottom: 0;
}

/* 提交按钮容器 */
.submit-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 28rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
  border-top: 1rpx solid #e5e5e5;
}

/* 提交按钮样式 */
.submit-btn {
  width: 100%;
  background-color: #667eea;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 12rpx;
  padding: 24rpx;
  border: none;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.submit-btn:hover {
  background-color: #5a6fd8;
  transform: translateY(-2rpx);
}

.submit-btn:active {
  transform: scale(0.98) translateY(0);
  background-color: #4d62cc;
}

.submit-btn[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

.submit-btn[disabled]:active {
  transform: none;
  background-color: #667eea;
}

/* 提示文字样式 */
.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  line-height: 1.5;
  letter-spacing: 0.5rpx;
}
