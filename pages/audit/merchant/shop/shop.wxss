/* pages/audit/merchant/shop/shop.wxss */
.shop-management-page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  color: #333;
}

.page-content {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.placeholder {
  font-size: 32rpx;
  color: #999;
  text-align: center;
  display: block;
}

/* 悬浮+号按钮 */
.add-shop-btn {
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #1AAD19;
  color: white;
  font-size: 80rpx;
  text-align: center;
  line-height: 110rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  cursor: pointer;
}

.add-shop-btn:active {
  background-color: #179B16;
  transform: scale(0.95);
}

/* 弹窗遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}

/* 弹窗容器 */
.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  z-index: 1002;
  overflow: hidden;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  cursor: pointer;
  line-height: 1;
}

.modal-close:active {
  color: #666;
}

/* 弹窗内容 */
.modal-content {
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
}

/* 表单样式 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.required {
  color: #FF4D4F;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FAFAFA;
}

.form-input:focus {
  border-color: #1AAD19;
  background-color: white;
  outline: none;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx 24rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #FAFAFA;
  resize: vertical;
}

.form-textarea:focus {
  border-color: #1AAD19;
  background-color: white;
  outline: none;
}

/* 单选框样式 */
.radio-group {
  display: flex;
  gap: 40rpx;
  margin-top: 12rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.radio-item radio {
  margin-right: 12rpx;
}

/* 表单操作按钮 */
.form-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.btn-cancel,
.btn-submit {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  outline: none;
  box-sizing: border-box;
}

.btn-cancel {
  background-color: #F5F5F5;
  color: #666;
}

.btn-cancel:active {
  background-color: #E5E5E5;
}

.btn-submit {
  background-color: #1AAD19;
  color: white;
}

.btn-submit:active {
  background-color: #179B16;
}

/* 位置选择器样式 */
.location-selector {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.location-input {
  flex: 1;
  background-color: white;
  color: #666;
}

.select-location-btn {
  width: 200rpx;
  height: 80rpx;
  background-color: #1AAD19;
  color: white;
  font-size: 28rpx;
  border: none;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.select-location-btn:active {
  background-color: #179B16;
}

/* 去除按钮默认样式 */
.select-location-btn::after {
  border: none;
}



/* 去除按钮默认样式 */
.btn-cancel::after,
.btn-submit::after {
  border: none;
}