/* pages/audit/user/list/list.wxss */
.article-management-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 发布文章按钮 */
.publish-btn-container {
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.publish-btn {
  background-color: #e91e63;
  color: #fff;
  border-radius: 80rpx;
  font-size: 32rpx;
  font-weight: 600;
  height: 90rpx;
  line-height: 90rpx;
  margin: 0;
  border: none;
}

.publish-btn::after {
  border: none;
}

/* 标签栏 */
.tabs-container {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #e91e63;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #e91e63;
  border-radius: 2rpx;
}

/* 文章列表 */
.article-list {
  padding: 20rpx;
}

.article-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.article-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.article-cover {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.article-cover-placeholder {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.article-info {
  flex: 1;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.article-meta {
  font-size: 24rpx;
  color: #999;
}

.article-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
  flex-shrink: 0;
}

.article-status.pending {
  background-color: #ff9800;
}

.article-status.approved {
  background-color: #52c41a;
}

.article-status.rejected {
  background-color: #f5222d;
}

.article-detail {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.detail-label {
  color: #999;
}

.detail-value {
  color: #333;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载中 */
.loading-state {
  padding: 100rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 文章操作区 */
.article-actions {
  display: flex;
  gap: 10rpx;
}

/* 编辑按钮 */
.edit-btn {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #e91e63;
  background-color: transparent;
  border: 1rpx solid #e91e63;
  margin: 0;
  line-height: normal;
  height: auto;
  min-height: auto;
}

.edit-btn::after {
  border: none;
}

/* 审核操作区 */
.approval-actions {
  display: flex;
  gap: 10rpx;
}

/* 审核按钮 */
.approve-btn, .reject-btn {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  margin: 0;
  line-height: normal;
  height: auto;
  min-height: auto;
}

.approve-btn::after, .reject-btn::after {
  border: none;
}

.approve-btn {
  color: #52c41a;
  background-color: transparent;
  border: 1rpx solid #52c41a;
}

.reject-btn {
  color: #f5222d;
  background-color: transparent;
  border: 1rpx solid #f5222d;
}

/* 审核模态框 */
.approval-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 1000;
  overflow: hidden;
}

/* 模态框遮罩层 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

/* 编辑模态框 */
.edit-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 1000;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.modal-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  min-height: 150rpx;
  resize: vertical;
}

.form-picker {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  background-color: #fff;
}

.picker-value {
  width: 100%;
  color: #333;
}

.form-readonly {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 68rpx;
  line-height: 48rpx;
}

/* 封面图上传样式 */
.cover-upload-container {
  position: relative;
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
}

.cover-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.upload-btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(233, 30, 99, 0.8);
  border: none;
  margin: 0;
  line-height: normal;
  height: auto;
  min-height: auto;
}

.upload-btn::after {
  border: none;
}

/* 模态框底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin: 0;
  line-height: normal;
  height: auto;
}

.modal-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #e91e63;
  color: #fff;
}


