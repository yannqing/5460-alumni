<!--pages/audit/user/list/list.wxml-->
<view class="article-management-list-page">
  <!-- 标签栏 -->
  <view class="tabs-container">
    <view 
      class="tab-item {{currentTab === index ? 'active' : ''}}"
      wx:for="{{tabs}}"
      wx:key="index"
      wx:for-index="index"
      data-index="{{index}}"
      bindtap="switchTab"
    >
      {{item}}
    </view>
  </view>

  <!-- 文章列表 -->
  <view class="article-list">
    <view 
      class="article-item"
      wx:for="{{articleList}}"
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="viewDetail"
    >
      <view class="article-header">
        <image class="article-cover" src="{{item.avatar}}" mode="aspectFill" wx:if="{{item.avatar}}"></image>
        <view class="article-cover-placeholder" wx:else></view>
        <view class="article-info">
          <view class="article-title">{{item.nickname}}</view>
          <view class="article-meta">{{item.school}}</view>
        </view>
        <view class="article-status {{item.status}}">{{item.statusText}}</view>
      </view>
      <view class="article-detail">
        <text class="detail-label">提交时间：</text>
        <text class="detail-value">{{item.submitTime}}</text>
      </view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{!loading && articleList.length === 0}}">
      <text class="empty-text">暂无文章管理数据</text>
    </view>

    <!-- 加载中 -->
    <view class="loading-state" wx:if="{{loading}}">
      <text class="loading-text">加载中...</text>
    </view>
  </view>
</view>


