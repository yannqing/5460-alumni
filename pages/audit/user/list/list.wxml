<!--pages/audit/user/list/list.wxml-->
<view class="user-audit-list-page">
  <!-- 标签栏 -->
  <view class="tabs-container">
    <view 
      class="tab-item {{currentTab === index ? 'active' : ''}}"
      wx:for="{{tabs}}"
      wx:key="index"
      wx:for-index="index"
      data-index="{{index}}"
      bindtap="switchTab"
    >
      {{item}}
    </view>
  </view>

  <!-- 用户列表 -->
  <view class="user-list">
    <view 
      class="user-item"
      wx:for="{{userList}}"
      wx:key="id"
      data-id="{{item.id}}"
      bindtap="viewDetail"
    >
      <view class="user-header">
        <image class="user-avatar" src="{{item.avatar}}" mode="aspectFill" wx:if="{{item.avatar}}"></image>
        <view class="user-avatar-placeholder" wx:else></view>
        <view class="user-info">
          <view class="user-name">{{item.nickname}}</view>
          <view class="user-phone">{{item.phone}}</view>
        </view>
        <view class="user-status {{item.status}}">{{item.statusText}}</view>
      </view>
      <view class="user-detail">
        <text class="detail-label">学校：</text>
        <text class="detail-value">{{item.school}}</text>
      </view>
      <view class="user-detail">
        <text class="detail-label">提交时间：</text>
        <text class="detail-value">{{item.submitTime}}</text>
      </view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{!loading && userList.length === 0}}">
      <text class="empty-text">暂无用户审核数据</text>
    </view>

    <!-- 加载中 -->
    <view class="loading-state" wx:if="{{loading}}">
      <text class="loading-text">加载中...</text>
    </view>
  </view>
</view>

