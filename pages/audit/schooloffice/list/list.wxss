/* pages/audit/schooloffice/list/list.wxss */
page {
  background-color: #f5f5f5;
  padding-bottom: 60rpx;
}

.container {
  padding: 30rpx;
  box-sizing: border-box;
}

/* 标签栏样式 */
.tabs-container {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #f0f0f0;
  color: #333;
  font-weight: 600;
}

.tab-item:active {
  opacity: 0.8;
}

.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.input {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  height: 80rpx;
  box-sizing: border-box;
}

.search-placeholder {
  color: #999;
}

.platform-selector {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  cursor: pointer;
}

.selector-label {
  color: #333;
  flex: 1;
}

.selector-arrow {
  color: #999;
  font-size: 20rpx;
}

/* 校处会选择器弹窗 */
.platform-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 70vh;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-cancel {
  font-size: 28rpx;
  color: #999;
  cursor: pointer;
}

.picker-list {
  max-height: 50vh;
  overflow-y: auto;
  padding: 0 30rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-check {
  font-size: 32rpx;
  color: #52c41a;
  font-weight: 600;
}

.picker-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 校友会列表 */
.association-list {
  margin-top: 20rpx;
}

.association-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.association-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.association-logo {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.association-logo image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.association-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.association-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #fff;
  flex-shrink: 0;
  background-color: #999; /* 默认背景色 */
  min-width: 80rpx;
  text-align: center;
}

.association-status.pending {
  background-color: #999;
}

.association-status.approved {
  background-color: #52c41a;
}

.association-status.rejected {
  background-color: #f5222d;
}

.association-status.withdrawn {
  background-color: #ff9800;
}

.association-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
  min-width: 100rpx;
}

.approve-btn {
  background-color: #52c41a;
  color: #fff;
}

.reject-btn {
  background-color: #f5222d;
  color: #fff;
}

.association-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.info-label {
  color: #999;
}

.info-value {
  color: #333;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载中 */
.loading-state {
  padding: 100rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}