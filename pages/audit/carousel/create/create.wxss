/* pages/audit/carousel/create/create.wxss */
.create-banner-page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.content-container {
  background-color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-top: 20rpx;
  box-sizing: border-box;
}

/* 表单样式 */
.banner-form {
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-label.required::after {
  content: '*';
  color: #ee0a24;
  margin-left: 8rpx;
}

.form-label.optional::after {
  content: '（可选）';
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
  box-sizing: border-box;
  display: block;
}

.form-picker,
.action-sheet-btn {
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.form-picker.disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #e0e0e0;
  cursor: not-allowed;
}

.form-picker.disabled::after {
  display: none;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.action-sheet-btn {
  cursor: pointer;
}

.action-sheet-btn::after {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  transform: rotate(45deg);
  margin-left: 20rpx;
}

.form-picker::after {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  transform: rotate(45deg);
  margin-left: 20rpx;
}

/* 上传图片样式 */
.upload-section {
  display: flex;
  align-items: center;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  background-color: #fafafa;
  margin-right: 24rpx;
}

.upload-icon {
  font-size: 80rpx;
  color: #999;
  line-height: 64rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.image-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #ddd;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 多行文本样式 */
.form-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fafafa;
  box-sizing: border-box;
  resize: vertical;
}

/* 时间选择器样式 */
.form-picker-view {
  width: 100%;
  height: 300rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.picker-view-item {
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  display: block;
}

/* 提交按钮样式 */
.submit-section {
  margin-top: 48rpx;
  margin-bottom: 24rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  color: white;
  background: linear-gradient(180deg, #3759C7 0%, #5273D2 100%);
  border: none;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}
