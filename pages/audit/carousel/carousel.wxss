/* pages/audit/carousel/carousel.wxss */
.carousel-management-page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.content-container {
  background-color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-top: 20rpx;
}

/* 顶部操作栏样式 */
.top-bar {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 搜索栏样式 */
.search-bar {
  flex: 1;
  min-width: 400rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 88rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
}

.search-btn {
  font-size: 28rpx;
  color: #1989fa;
  margin-left: 20rpx;
  padding: 8rpx 24rpx;
  border-radius: 6rpx;
  background-color: rgba(25, 137, 250, 0.1);
}

/* 类型筛选样式 */
.filter-item {
  display: flex;
  align-items: center;
  margin-right: 0;
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.filter-picker {
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  min-width: 160rpx;
  background-color: #fafafa;
}

/* 新增按钮样式 */
.add-btn {
  font-size: 28rpx;
  color: white;
  background-color: #1989fa;
  padding: 12rpx 32rpx;
  border-radius: 6rpx;
  margin-bottom: 0;
  white-space: nowrap;
  margin-left: auto;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 轮播图列表样式 */
.banner-list {
  margin-bottom: 24rpx;
}

.banner-item {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  background-color: #fafafa;
}

.banner-content {
  display: flex;
  margin-bottom: 16rpx;
}

.banner-action {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
  gap: 16rpx;
}

.edit-btn {
  font-size: 28rpx;
  color: #1989fa;
  padding: 8rpx 24rpx;
  border-radius: 6rpx;
  background-color: rgba(25, 137, 250, 0.1);
}

.delete-btn {
  font-size: 28rpx;
  color: #ee0a24;
  padding: 8rpx 24rpx;
  border-radius: 6rpx;
  background-color: rgba(238, 10, 36, 0.1);
}

.banner-info {
  flex: 1;
  margin-right: 24rpx;
}

.banner-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.banner-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
  margin-bottom: 8rpx;
}

.meta-item.create-time {
  width: 100%;
  margin-right: 0;
  flex-shrink: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.meta-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.meta-value {
  font-size: 26rpx;
  color: #666;
}

.status-enabled {
  color: #07c160;
}

.status-disabled {
  color: #ee0a24;
}

.banner-image {
  width: 200rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.banner-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

/* 加载更多样式 */
.load-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 28rpx;
  color: #999;
}

.load-more-text {
  font-size: 28rpx;
  color: #999;
}
