<!--pages/my-association/my-association.wxml-->
<view class="container">
  <view class="list">
    <view class="list-item" wx:for="{{associationList}}" wx:key="id" bindtap="viewDetail" data-id="{{item.id}}">
      <image class="avatar" src="{{item.icon}}" mode="aspectFill" />
      <view class="flex-1">
        <view class="text-primary text-bold">{{item.name}}</view>
        <view class="text-secondary mt-10">{{item.schoolName}} · {{item.location}}</view>
        <view class="text-placeholder mt-10">{{item.memberCount}}人</view>
      </view>
    </view>
  </view>

  <view wx:if="{{associationList.length === 0}}" class="empty-state">
    <image src="https://via.placeholder.com/200/f0f0f0/999999?text=Empty" mode="aspectFill" />
    <text>暂未加入校友会</text>
  </view>
</view>
