/* pages/school/detail/detail.wxss */

.loading-wrap {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 封面区域 */
.cover-section {
  position: relative;
  height: 500rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
  padding: 40rpx 30rpx 30rpx;
}

.school-basic {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.school-icon-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid #ffffff;
  flex-shrink: 0;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.school-basic-info {
  flex: 1;
  min-width: 0;
}

.school-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.school-name-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.certified-badge-large {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff6b9d;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.school-location-large {
  font-size: 26rpx;
  color: #ffffff;
}

/* 操作栏 */
.action-bar {
  display: flex;
  background-color: #ffffff;
  padding: 30rpx;
  gap: 40rpx;
  justify-content: space-around;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  font-size: 40rpx;
  color: #ff6b9d;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
}

/* 选项卡 */
.tabs {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #ff6b9d;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #ff6b9d;
  border-radius: 2rpx;
}

/* 内容区域 */
.tab-content {
  padding: 20rpx;
}

/* 信息区块 */
.info-section {
  margin-bottom: 20rpx;
}

.section-title-small {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  width: 180rpx;
  font-size: 26rpx;
  color: #999999;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  word-break: break-all;
}

.link-text {
  color: #ff6b9d;
  text-decoration: underline;
}

.description-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.8;
  text-align: justify;
}

/* 校友会区块 */
.association-section {
  margin-bottom: 20rpx;
}

.section-header-inline {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-more-inline {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.association-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.association-item-card {
  padding: 24rpx;
}

.association-item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
}

.association-item-info {
  flex: 1;
  min-width: 0;
}

.association-item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.association-item-meta {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.association-item-detail {
  font-size: 22rpx;
  color: #999999;
}

.dot {
  margin: 0 8rpx;
}

.association-item-action {
  flex-shrink: 0;
}

/* 校友总会 */
.union-section {
  margin-bottom: 20rpx;
}

.union-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.union-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.union-info {
  flex: 1;
  min-width: 0;
}

.union-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.union-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.union-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}

.union-contact {
  margin-bottom: 20rpx;
}

.contact-item {
  padding: 16rpx 0;
  font-size: 26rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  color: #999999;
}

.contact-value {
  color: #333333;
}

.union-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background-color: #fff0f5;
  border-radius: 8rpx;
}

.tip-icon {
  font-size: 32rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #ff6b9d;
}
