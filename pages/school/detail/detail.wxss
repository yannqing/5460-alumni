/* pages/school/detail/detail.wxss */

.loading-wrap {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 页面容器 */
.container {
  min-height: 100vh;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 顶部固定区域 */
.top-fixed-area {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: #3F61CA;
}

/* 顶部图片 */
.top-image-container {
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 8;
  position: relative;
  margin-top: -88rpx;
  height: 120rpx;
  background: #3F61CA;
}

/* 内容滚动区域 */
.content-scroll {
  margin-top: 140rpx;
}

/* 白色背景内容区域 */
.white-background {
  background-color: #ffffff;
  border-radius: 16rpx 16rpx 0 0;
  margin-top: -15rpx;
  position: relative;
  z-index: 10;
  padding-top: 20rpx;
  min-height: calc(100vh - 140rpx);
  padding-bottom: 200rpx;
}

.top-image {
  width: 424.49rpx;
  height: 55.3rpx;
  border-radius: 12rpx;
  vertical-align: middle;
}

/* 重置默认样式 */
page {
  background: #3F61CA;
  padding: 0;
  margin: 0;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.cover-image {
  width: 100%;
  height: 400rpx;
  margin: 0;
  display: block;
  vertical-align: top;
  line-height: 0;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.cert-tag-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.cert-tag {
  padding: 4rpx 14rpx;
  background: linear-gradient(90deg, #f4c441 0%, #f7d86c 100%);
  color: #8a5800;
  font-size: 22rpx;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 10rpx rgba(244, 196, 65, 0.35);
  white-space: nowrap;
  flex-shrink: 0;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.avatar {
  border-radius: 50%;
  background-color: #f0f0f0;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.flex {
  display: flex;
  align-items: center;
}

.flex-1 {
  flex: 1;
  min-width: 0;
}

.ml-20 {
  margin-left: 20rpx;
}

.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.text-primary {
  color: #333333;
}

.text-bold {
  font-weight: 600;
  font-size: 30rpx;
}

.text-secondary {
  color: #666666;
  font-size: 24rpx;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 校友会列表 */
.association-list {
  display: flex;
  flex-direction: column;
}

.association-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.association-item:last-child {
  border-bottom: none;
}

.association-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.association-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid #f0f0f0;
  background-color: #ffffff;
}

.association-info {
  flex: 1;
  min-width: 0;
}

.association-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.association-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.certified-badge-small {
  padding: 2rpx 10rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

.association-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: #666666;
}

.association-location {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.location-icon-small {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.association-members {
  color: #999999;
}

.association-action {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.join-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(90deg, #40B2E6 0%, #6BC5ED 100%);
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 40rpx;
  text-align: center;
  white-space: nowrap;
  box-shadow: 0 4rpx 12rpx rgba(64, 178, 230, 0.3);
  transition: all 0.3s;
}

.join-btn.joined {
  background: linear-gradient(90deg, #e0e0e0 0%, #f0f0f0 100%);
  color: #999999;
  box-shadow: none;
}

.empty-association {
  padding: 60rpx 0;
  text-align: center;
}

.empty-association .empty-text {
  font-size: 26rpx;
  color: #999999;
}
