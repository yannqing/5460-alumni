/* pages/school/detail/detail.wxss */

.loading-wrap {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 页面容器 */
.school-detail-page {
  min-height: 100vh;
  margin-top: 0;
  position: relative;
  z-index: 1;
}

/* 内容滚动区域 */
.content-scroll {
  margin-top: 0;
}

.white-background {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -30rpx;
  position: relative;
  z-index: 10;
  padding-top: 20rpx;
  min-height: 800rpx;
  padding-bottom: 200rpx;
}

/* 重置默认样式 */
page {
  background: #3F61CA;
  padding: 0;
  margin: 0;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.cover-image {
  width: 100%;
  height: 400rpx;
  margin: 0;
  display: block;
  vertical-align: top;
  line-height: 0;
}

/* 顶部背景图容器 */
.top-background-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  margin: 0;
  display: block;
  overflow: hidden;
}

/* 渐变遮罩 */
.bg-gradient-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  z-index: 1;
}

/* 背景图上的学校头像 */
.school-avatar-on-bg {
  position: absolute;
  bottom: 34rpx;
  left: 24rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #ffffff;
  background-color: #ffffff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 2;
}

/* 背景图上的学校信息 */
.school-info-on-bg {
  position: absolute;
  bottom: 37rpx;
  left: 130rpx;
  z-index: 2;
  color: #ffffff;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

/* 背景图上的学校名称 */
.school-name-on-bg {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
  display: block;
  color: #ffffff;
}

/* 背景图上的位置信息行 */
.location-row-on-bg {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}

/* 背景图上的位置图标 */
.location-icon-on-bg {
  width: 20rpx;
  height: 20rpx;
  flex-shrink: 0;
  filter: brightness(0) invert(1);
}

/* 背景图上的认证标签容器 */
.cert-tag-wrap-on-bg {
  position: absolute;
  bottom: 34rpx;
  right: 24rpx;
  z-index: 2;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.cert-tag-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.cert-tag {
  padding: 4rpx 14rpx;
  background: linear-gradient(90deg, #f4c441 0%, #f7d86c 100%);
  color: #8a5800;
  font-size: 22rpx;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 10rpx rgba(244, 196, 65, 0.35);
  white-space: nowrap;
  flex-shrink: 0;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.avatar {
  border-radius: 50%;
  background-color: #f0f0f0;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.flex {
  display: flex;
  align-items: center;
}

.flex-1 {
  flex: 1;
  min-width: 0;
}

.ml-20 {
  margin-left: 20rpx;
}

.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.text-primary {
  color: #333333;
}

.text-bold {
  font-weight: 600;
  font-size: 30rpx;
}

.text-secondary {
  color: #666666;
  font-size: 24rpx;
}

/* Basic information items */
.basic-info-item {
  color: #666666;
  font-size: 25rpx;
  line-height: 58rpx;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 15rpx 0;
}

/* 校友会列表 */
.association-list {
  display: flex;
  flex-direction: column;
}

.association-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.association-item:last-child {
  border-bottom: none;
}

.association-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.association-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid #f0f0f0;
  background-color: #ffffff;
}

.association-info {
  flex: 1;
  min-width: 0;
}

.association-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.association-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.certified-badge-small {
  padding: 2rpx 10rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

.association-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: #666666;
}

.association-location {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.location-icon-small {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.association-members {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #999999;
  margin-left: 10rpx;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.association-action {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.join-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(90deg, #40B2E6 0%, #6BC5ED 100%);
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 40rpx;
  text-align: center;
  white-space: nowrap;
  box-shadow: 0 4rpx 12rpx rgba(64, 178, 230, 0.3);
  transition: all 0.3s;
}

.join-btn.joined {
  background: linear-gradient(90deg, #e0e0e0 0%, #f0f0f0 100%);
  color: #999999;
  box-shadow: none;
}

.empty-association {
  padding: 60rpx 0;
  text-align: center;
}

.empty-association .empty-text {
  font-size: 26rpx;
  color: #999999;
}
