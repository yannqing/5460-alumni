/* pages/shop/shop-detail/shop-detail.wxss */
.shop-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.loading {
  font-size: 28rpx;
  color: #999;
}

/* 多图轮播 */
.shop-swiper {
  width: 100%;
  height: 500rpx;
  background-color: #f0f0f0;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 24rpx;
  margin: 20rpx 30rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-bottom: 24rpx;
}

/* 基础信息卡片 */
.basic-info-card {
  margin-top: -40rpx;
  position: relative;
  z-index: 2;
}

.shop-header {
  margin-bottom: 32rpx;
}

.shop-name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.shop-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.shop-item-type {
  font-size: 24rpx;
  color: #40B2E6;
  padding: 4rpx 16rpx;
  border: 1rpx solid #40B2E6;
  border-radius: 12rpx;
}

.shop-rating-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.rating-text {
  color: #ff8a00;
  font-weight: 500;
}

.rating-count {
  color: #999;
}

/* 信息项 */
.info-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.link-text {
  color: #40B2E6;
}

.nav-text {
  font-size: 26rpx;
  color: #40B2E6;
  padding: 8rpx 20rpx;
  border: 1rpx solid #40B2E6;
  border-radius: 20rpx;
}

/* 店铺简介 */
.merchant-info-card {
  margin-top: 20rpx;
}

.shop-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

/* 状态信息 */
.status-info-card {
  margin-top: 20rpx;
}

.status-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.status-row:last-child {
  margin-bottom: 0;
}

.status-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 200rpx;
}

.status-label {
  font-size: 26rpx;
  color: #999;
}

.status-value {
  font-size: 28rpx;
  color: #333;
}

.status-tag {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: inline-block;
}

.status-tag.status-0 {
  background-color: #FF4D4F;
  color: #fff;
}

.status-tag.status-1 {
  background-color: #52C41A;
  color: #fff;
}

.status-tag.status-2 {
  background-color: #FFB347;
  color: #fff;
}

.status-tag.recommended {
  background-color: #40B2E6;
  color: #fff;
}

/* 优惠券专区 */
.coupon-section {
  margin-top: 20rpx;
}

.coupon-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.coupon-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #40B2E6, #6BC5ED);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(64, 178, 230, 0.3);
  min-height: 160rpx;
  position: relative;
  cursor: pointer;
}

.coupon-left {
  flex-shrink: 0;
  width: 140rpx;
  padding: 24rpx 20rpx;
  text-align: center;
  color: #fff;
}

.coupon-discount {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.coupon-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.coupon-divider {
  width: 2rpx;
  height: 120rpx;
  background: repeating-linear-gradient(
    to bottom,
    transparent,
    transparent 8rpx,
    rgba(255, 255, 255, 0.5) 8rpx,
    rgba(255, 255, 255, 0.5) 16rpx
  );
  flex-shrink: 0;
}

.coupon-right {
  flex: 1;
  padding: 24rpx 20rpx;
  color: #fff;
  min-width: 0;
}

.coupon-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-expire {
  font-size: 22rpx;
  opacity: 0.8;
}

.coupon-action {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.coupon-btn {
  padding: 12rpx 28rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  white-space: nowrap;
}

.coupon-btn.disabled {
  background-color: rgba(255, 255, 255, 0.2);
  opacity: 0.6;
}

/* 店铺统计信息 */
.stats-info-card {
  margin-top: 20rpx;
}

.stats-row {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  min-width: 120rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #40B2E6;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}
