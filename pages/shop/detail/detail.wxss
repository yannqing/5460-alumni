/* pages/shop/detail/detail.wxss */
.shop-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.loading {
  font-size: 28rpx;
  color: #999;
}

/* 多图轮播 */
.shop-swiper {
  width: 100%;
  height: 500rpx;
  background-color: #f0f0f0;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 24rpx;
  margin: 20rpx 30rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-bottom: 24rpx;
}

/* 基础信息卡片 */
.basic-info-card {
  margin-top: -40rpx;
  position: relative;
  z-index: 2;
}

/* 卡片右上角操作图标 */
.card-action-icons {
  position: absolute;
  top: -70rpx;
  right: 3rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  z-index: 10;
}

.action-icon-item {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.icon-text {
  font-size: 36rpx;
  line-height: 1;
}

.icon-text.favorited {
  color: #ff6b9d;
}

.shop-header {
  margin-bottom: 32rpx;
}

.shop-avatar-row {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.shop-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
  flex-shrink: 0;
  background-color: #fff;
}

.shop-info-column {
  flex: 1;
  min-width: 0;
}

.shop-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.shop-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.certified-badge-yellow {
  padding: 4rpx 12rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  border-radius: 6rpx;
  font-size: 22rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.shop-rating-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.rating-text {
  color: #ff8a00;
  font-weight: 500;
}

.rating-desc {
  color: #999;
}

.divider {
  color: #ddd;
}

.category-text {
  color: #666;
}

/* 信息项 */
.info-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.link-text {
  color: #ff6b9d;
}

.nav-text {
  font-size: 26rpx;
  color: #ff6b9d;
  padding: 8rpx 20rpx;
  border: 1rpx solid #ff6b9d;
  border-radius: 20rpx;
}

/* 优惠券专区 */
.coupon-section {
  margin-top: 20rpx;
}

.coupon-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.coupon-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.3);
  min-height: 160rpx;
  position: relative;
  cursor: pointer;
}

.coupon-left {
  flex-shrink: 0;
  width: 140rpx;
  padding: 24rpx 20rpx;
  text-align: center;
  color: #fff;
}

.coupon-discount {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.coupon-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.coupon-divider {
  width: 2rpx;
  height: 120rpx;
  background: repeating-linear-gradient(
    to bottom,
    transparent,
    transparent 8rpx,
    rgba(255, 255, 255, 0.5) 8rpx,
    rgba(255, 255, 255, 0.5) 16rpx
  );
  flex-shrink: 0;
}

.coupon-right {
  flex: 1;
  padding: 24rpx 20rpx;
  color: #fff;
  min-width: 0;
}

.coupon-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-expire {
  font-size: 22rpx;
  opacity: 0.8;
}

.coupon-action {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.coupon-btn {
  padding: 12rpx 28rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  white-space: nowrap;
}

.coupon-btn.claimed {
  background-color: rgba(255, 255, 255, 0.5);
}

.coupon-btn.disabled {
  background-color: rgba(255, 255, 255, 0.2);
  opacity: 0.6;
}

/* 校友足迹 */
.alumni-footprint {
  margin-top: 20rpx;
}

.footprint-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.alumni-avatar-wall {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.alumni-avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
  margin-bottom: 12rpx;
}

.avatar-img.blur {
  filter: blur(4rpx);
  opacity: 0.6;
}

.avatar-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.name-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.privacy-text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

/* 店铺动态 */
.shop-dynamics {
  margin-top: 20rpx;
}

.dynamics-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dynamic-item {
  display: flex;
  gap: 20rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.dynamic-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.dynamic-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.dynamic-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.dynamic-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.dynamic-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dynamic-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 22rpx;
  color: #999;
}

.dynamic-type {
  padding: 4rpx 12rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  color: #666;
}

/* 商铺简介 */
.description-card {
  margin-top: 20rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

