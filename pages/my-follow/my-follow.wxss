/* pages/my-follow/my-follow.wxss */
.follow-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 母校卡片样式 */
.school-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.school-card:active {
  background-color: #f8f8f8;
}

.school-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid #f0f0f0;
}

.school-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.school-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.school-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.school-badge {
  padding: 4rpx 12rpx;
  background-color: #ff6b9d;
  color: #fff;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.school-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.info-item {
  color: #666;
}

.school-footer {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.alumni-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.count-icon {
  font-size: 24rpx;
}

.count-text {
  font-size: 24rpx;
  color: #999;
}

/* 校友卡片样式 */
.alumni-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.alumni-card:active {
  background-color: #f8f8f8;
}

.alumni-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid #f0f0f0;
}

.alumni-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.alumni-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.alumni-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.verified-badge {
  width: 32rpx;
  height: 32rpx;
  background-color: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 20rpx;
  flex-shrink: 0;
}

.alumni-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.info-divider {
  color: #ddd;
}

.alumni-footer {
  margin-top: 8rpx;
}

.major-text {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
