@import "../../alumni-association/detail/detail.wxss";

/* 调整背景图和白色背景容器之间的间距 */
.white-background {
  margin-top: -50rpx !important;
}

/* 调整白色背景容器内第一个卡片与背景图的间距 */
.white-background .card:first-child {
  margin-top: 15rpx !important;
}

/* 加载更多和没有更多样式 */
.loading-more, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
  width: 100%;
  display: block;
}

/* 组织结构编辑按钮样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.section-edit-btn {
  display: flex;
  align-items: center;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: #40B2E6;
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.edit-btn.cancel-btn {
  background-color: #999;
}

.edit-icon {
  font-size: 28rpx;
}

.edit-text {
  font-size: 26rpx;
}

/* Flexbox utility classes */
.flex {
  display: flex;
}

.justify-between {
  justify-content: space-between;
}

.items-center {
  align-items: center;
}

/* Basic information items */
.basic-info-item {
  color: #666666;
  font-size: 25rpx;
  line-height: 58rpx;
  padding: 10rpx 0;
}

.basic-info-item:first-child {
  padding-top: 0;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 15rpx 0;
}

/* Text styles */
.text-primary {
  color: #333333;
}

.text-bold {
  font-weight: 600;
  font-size: 30rpx;
}

.text-secondary {
  color: #666666;
  font-size: 24rpx;
}

/* Spacing utilities */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.flex-1 {
  flex: 1;
  min-width: 0;
}

/* 创建校友会按钮样式 */
.create-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #40B2E6;
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.create-btn-text {
  font-size: 26rpx;
}

/* 会员列表元数据样式 */
.member-meta {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 50rpx;
  font-size: 24rpx;
  color: #888888;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 会员列表样式 - 与校友会详情页面一致 */
.member-list {
  padding: 0 20rpx 100rpx;
  background-color: #ffffff;
  min-height: 600rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f5f5f5;
  position: relative;
}

.role-tag {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  flex-shrink: 0;
  z-index: 1;
}

.member-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.member-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.member-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.member-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  flex-shrink: 0;
}

/* 角色标签样式 */
.member-tag {
  background-color: #E6F7FF;
  color: #1890FF;
  border: 1rpx solid #91D5FF;
}

.director-tag {
  background-color: #F6FFED;
  color: #52C41A;
  border: 1rpx solid #B7EB8F;
}

/* 空状态样式 - 与校友会详情页面一致 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #666666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 骨架屏样式 - 与校友会详情页面一致 */
.skeleton-list {
  padding: 0 20rpx 20rpx;
}

.skeleton-item {
  opacity: 0.6;
}

.skeleton-avatar {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.skeleton-text {
  height: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
  margin-top: 10rpx;
  width: 200rpx;
}

.skeleton-name {
  width: 120rpx;
  height: 30rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
}

.skeleton-tag {
  width: 80rpx;
  height: 32rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 16rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}
