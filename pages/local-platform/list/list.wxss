/* pages/local-platform/list/list.wxss */

/* 搜索栏 */
.search-bar {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 16rpx 30rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 筛选栏 */
.filter-bar {
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.filter-item.active {
  color: #333333;
  font-weight: 600;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999999;
}

.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 8;
}

.filter-options-panel {
  position: fixed;
  top: 200rpx;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 9;
  padding: 20rpx 0;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.08);
}

.option-item {
  padding: 22rpx 40rpx;
  font-size: 28rpx;
  color: #666666;
}

.option-item.active {
  color: #40B2E6;
  font-weight: 600;
}

/* 校处会列表 */
.platform-list {
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
}

.platform-card {
  position: relative;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  padding: 0rpx 30rpx 30rpx 30rpx;
  gap: 20rpx;
}

.card-info {
  flex: 1;
  min-width: 0;
}

/* 无背景图片时的头部布局 */
.no-bg-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 30rpx;
}

/* 默认头像样式 */
.platform-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid #e0e0e0;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.status-badge {
  padding: 4rpx 12rpx;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.status-badge.active {
  background-color: #52c41a;
}

.status-badge.inactive {
  background-color: #999999;
}

/* 副标题 */
.card-subtitle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.subtitle-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 范围信息 */
.card-scope {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.scope-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 联系方式 */
.card-contact {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.contact-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 背景图片容器 */
.platform-bgImg-container {
  position: relative;
  width: calc(100% + 60rpx);
  height: 360rpx;
  margin-top: -30rpx;
  margin-left: -30rpx;
  margin-right: -30rpx;
  margin-bottom: -80rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 背景图片 */
.platform-bgImg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

/* 渐变遮罩 */
.platform-bgImg-container::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  z-index: 1;
}

/* 背景图片上的头像 */
.platform-avatar-on-bg {
  position: absolute;
  bottom: 24rpx;
  left: 24rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #ffffff;
  background-color: #ffffff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 2;
}

/* 背景图片上的信息容器 */
.info-on-bg {
  position: absolute;
  bottom: 24rpx;
  left: 130rpx;
  z-index: 2;
  color: #ffffff;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

/* 背景图片上的标题 */
.card-title-on-bg {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
  display: block;
  color: #ffffff;
}

/* 背景图片上的城市信息 */
.card-subtitle-on-bg {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}

/* 背景图片上的城市文字 */
.card-subtitle-on-bg text {
  color: #ffffff;
}

/* 背景图片上的位置图标 */
.subtitle-icon-on-bg {
  width: 20rpx;
  height: 20rpx;
  flex-shrink: 0;
  filter: brightness(0) invert(1);
}

/* 加载状态 */
.loading-text {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999999;
  font-size: 26rpx;
}
