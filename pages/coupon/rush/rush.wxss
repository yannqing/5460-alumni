/* pages/coupon/rush/rush.wxss */
.cover-image {
  width: 100%;
  height: 400rpx;
}

.coupon-title-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.coupon-merchant-large {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.price-section {
  padding: 24rpx;
  background: linear-gradient(135deg, #fff0f5 0%, #ffe4ef 100%);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.price-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.price-label {
  font-size: 24rpx;
  color: #666;
}

.price-value {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.price-now-large {
  font-size: 52rpx;
  font-weight: 600;
  color: #ff6b9d;
}

.price-original-large {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.stock-section {
  margin-bottom: 24rpx;
}

.stock-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.stock-label {
  font-size: 24rpx;
  color: #999;
}

.stock-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
}

.stock-bar-large {
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.stock-progress {
  height: 100%;
  background: linear-gradient(90deg, #ff6b9d 0%, #ff8fb5 100%);
  border-radius: 6rpx;
}

.countdown-section {
  text-align: center;
  padding: 30rpx 0;
}

.countdown-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.countdown-timer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.time-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.time-value {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff6b9d;
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 600;
  border-radius: 12rpx;
}

.time-label {
  font-size: 22rpx;
  color: #999;
}

.time-colon {
  font-size: 40rpx;
  color: #ff6b9d;
  font-weight: 600;
  padding-bottom: 30rpx;
}

.rush-time {
  font-size: 24rpx;
  color: #999;
}

.btn-section {
  margin-top: 24rpx;
}

.btn-disabled {
  background-color: #cccccc;
  color: #ffffff;
}

.full-width {
  width: 100%;
}
