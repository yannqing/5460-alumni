<!--pages/coupon/list/list.wxml-->
<view class="container">
  <!-- 选项卡 -->
  <view class="tabs">
    <view class="tab-item {{activeTab === index ? 'active' : ''}}" wx:for="{{tabs}}" wx:key="*this" bindtap="switchTab" data-index="{{index}}">
      {{item}}
    </view>
  </view>

  <!-- 优惠券列表 -->
  <view class="coupon-list">
    <view class="coupon-item card" wx:for="{{couponList}}" wx:key="id" bindtap="viewDetail" data-id="{{item.id}}">
      <view class="coupon-content">
        <image class="coupon-image" src="{{item.image}}" mode="aspectFill" />
        <view class="coupon-info flex-1">
          <view class="coupon-title">{{item.title}}</view>
          <view class="coupon-merchant">{{item.merchant}}</view>
          <view class="coupon-price">
            <text class="price-now">¥{{item.discountPrice}}</text>
            <text wx:if="{{item.originalPrice > 0}}" class="price-original">¥{{item.originalPrice}}</text>
          </view>
          <view class="coupon-time">有效期至 {{item.endTime}}</view>
          <view class="coupon-stock">
            <view class="stock-bar">
              <view class="stock-progress" style="width: {{item.stock/item.totalStock*100}}%"></view>
            </view>
            <text class="stock-text">剩余{{item.stock}}/{{item.totalStock}}</text>
          </view>
        </view>
        <view class="coupon-action" catchtap="handleCoupon" data-id="{{item.id}}" data-type="{{item.type}}">
          <view class="btn btn-primary btn-small">{{item.type === 'rush' ? '立即抢购' : '立即领取'}}</view>
        </view>
      </view>
    </view>

    <view wx:if="{{couponList.length === 0}}" class="empty-state">
      <image src="https://via.placeholder.com/200/f0f0f0/999999?text=Empty" mode="aspectFill" />
      <text>暂无优惠券</text>
    </view>
  </view>
</view>
