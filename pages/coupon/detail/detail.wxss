/* pages/coupon/detail/detail.wxss */
.cover-image {
  width: 100%;
  height: 400rpx;
}

.coupon-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.coupon-title-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.coupon-merchant-large {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.coupon-price-large {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.price-now-large {
  font-size: 48rpx;
  font-weight: 600;
  color: #ff6b9d;
}

.price-original-large {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.coupon-stock-section {
  margin-bottom: 24rpx;
}

.stock-info {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stock-bar-large {
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.stock-progress {
  height: 100%;
  background: linear-gradient(90deg, #ff6b9d 0%, #ff8fb5 100%);
  border-radius: 6rpx;
}

.full-width {
  width: 100%;
}

.rule-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.rule-item {
  display: flex;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.rule-dot {
  flex-shrink: 0;
}

.rule-text {
  flex: 1;
}

.merchant-info-row {
  padding: 16rpx 0;
  font-size: 26rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.merchant-info-row:last-child {
  border-bottom: none;
}

.info-label {
  color: #999;
}

.info-value {
  color: #333;
}

.link-text {
  color: #ff6b9d;
  text-decoration: underline;
}
