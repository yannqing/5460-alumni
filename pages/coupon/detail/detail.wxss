/* pages/coupon/detail/detail.wxss */
.coupon-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 二维码卡片 - 只显示二维码，居中 */
.qr-code-card {
  margin: 30rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #40B2E6, #6BC5ED);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(64, 178, 230, 0.3);
}

.qr-code-wrapper {
  width: 300rpx;
  height: 300rpx;
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  padding: 16rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.qr-code-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.qr-code-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  font-size: 26rpx;
  color: #999;
}

.refresh-btn-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
}

.refresh-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 14rpx 32rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 24rpx;
  color: #fff;
  font-size: 26rpx;
  transition: all 0.3s;
}

.refresh-btn:active {
  background-color: rgba(255, 255, 255, 0.35);
}

.refresh-icon {
  font-size: 26rpx;
}

.refresh-text {
  font-size: 26rpx;
}

/* 优惠券基本信息卡片 */
.coupon-info-card {
  margin-top: 0;
  position: relative;
}

.coupon-title-detail {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.coupon-code-display {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.code-label {
  color: #666;
  margin-right: 8rpx;
}

.code-value {
  font-weight: 600;
  color: #333;
  word-break: break-all;
  font-size: 30rpx;
}

.coupon-desc-display {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.desc-label {
  color: #666;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.desc-value {
  flex: 1;
  color: #333;
  word-break: break-all;
  line-height: 1.5;
}

.coupon-validity-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.validity-label {
  font-size: 26rpx;
  color: #666;
}

.validity-value {
  font-size: 26rpx;
  color: #666;
}

/* 状态标签 - 重新定义，放在基本信息卡片右上角 */
.coupon-status-badge {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  z-index: 10;
}

.status-badge-text {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 1;
  white-space: nowrap;
  box-sizing: border-box;
  min-height: 5rpx;
}

.status-badge-text.status-1 {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-badge-text.status-2 {
  background-color: #f5f5f5;
  color: #999;
}

.status-badge-text.status-3 {
  background-color: #fff3e0;
  color: #ff9800;
}

.status-badge-text.status-4 {
  background-color: #ffebee;
  color: #f44336;
}

/* 操作按钮区域 */
.action-section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.btn {
  padding: 24rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #40B2E6, #6BC5ED);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.full-width {
  width: 100%;
}

/* 卡片样式 */
.card {
  margin: 20rpx 30rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.text-bold {
  font-weight: 600;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.text-secondary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 24rpx 0;
}

/* 规则列表 */
.rule-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.rule-dot {
  flex-shrink: 0;
  color: #40B2E6;
  font-weight: 600;
}

.rule-text {
  flex: 1;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  min-height: 48rpx;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
  line-height: 1.5;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  line-height: 1.5;
  display: inline-block;
}

.link-text {
  color: #40B2E6;
}
