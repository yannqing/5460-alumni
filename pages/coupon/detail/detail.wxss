/* pages/coupon/detail/detail.wxss */
.coupon-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 优惠券大卡片 */
.coupon-card-large {
  margin: 30rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #40B2E6, #6BC5ED);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.4);
  min-height: 240rpx;
}

.coupon-card-left {
  flex-shrink: 0;
  width: 240rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  color: #fff;
}

/* 二维码容器 */
.qr-code-container {
  flex-shrink: 0;
  width: 240rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.qr-code-wrapper {
  width: 200rpx;
  height: 200rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  padding: 10rpx;
  box-sizing: border-box;
}

.qr-code-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.qr-code-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  font-size: 24rpx;
  color: #999;
}

.refresh-btn-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
}

.refresh-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
}

.refresh-icon {
  font-size: 24rpx;
}

.refresh-text {
  font-size: 24rpx;
}

.coupon-discount-large {
  font-size: 64rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.coupon-label-large {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.coupon-original-price {
  font-size: 24rpx;
  opacity: 0.8;
  text-decoration: line-through;
}

.coupon-card-divider {
  width: 2rpx;
  height: 160rpx;
  background: repeating-linear-gradient(
    to bottom,
    transparent,
    transparent 8rpx,
    rgba(255, 255, 255, 0.5) 8rpx,
    rgba(255, 255, 255, 0.5) 16rpx
  );
  flex-shrink: 0;
}

.coupon-card-right {
  flex: 1;
  padding: 40rpx 30rpx;
  color: #fff;
  min-width: 0;
}

.coupon-title-detail {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.coupon-code-display {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.code-label {
  opacity: 0.9;
}

.code-value {
  font-weight: 600;
  word-break: break-all;
}

.coupon-validity {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.coupon-status {
  font-size: 24rpx;
  opacity: 0.9;
}

.status-text {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.status-1 {
  color: #4caf50;
}

.status-2 {
  color: #999;
}

.status-3 {
  color: #ff9800;
}

.status-4 {
  color: #f44336;
}

/* 操作按钮区域 */
.action-section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.btn {
  padding: 24rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #40B2E6, #6BC5ED);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.full-width {
  width: 100%;
}

/* 卡片样式 */
.card {
  margin: 20rpx 30rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.text-bold {
  font-weight: 600;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.text-secondary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 24rpx 0;
}

/* 规则列表 */
.rule-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.rule-dot {
  flex-shrink: 0;
  color: #40B2E6;
  font-weight: 600;
}

.rule-text {
  flex: 1;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.link-text {
  color: #40B2E6;
}
