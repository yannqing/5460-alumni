/* pages/coupon/detail/detail.wxss */
.coupon-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 优惠券大卡片 */
.coupon-card-large {
  margin: 30rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.4);
  min-height: 240rpx;
}

.coupon-card-left {
  flex-shrink: 0;
  width: 240rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  color: #fff;
}

.coupon-discount-large {
  font-size: 64rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.coupon-label-large {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.coupon-original-price {
  font-size: 24rpx;
  opacity: 0.8;
  text-decoration: line-through;
}

.coupon-card-divider {
  width: 2rpx;
  height: 160rpx;
  background: repeating-linear-gradient(
    to bottom,
    transparent,
    transparent 8rpx,
    rgba(255, 255, 255, 0.5) 8rpx,
    rgba(255, 255, 255, 0.5) 16rpx
  );
  flex-shrink: 0;
}

.coupon-card-right {
  flex: 1;
  padding: 40rpx 30rpx;
  color: #fff;
  min-width: 0;
}

.coupon-title-detail {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.coupon-merchant-detail {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.coupon-validity {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.coupon-stock-info {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 操作按钮区域 */
.action-section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.btn {
  padding: 24rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.full-width {
  width: 100%;
}

/* 卡片样式 */
.card {
  margin: 20rpx 30rpx;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.text-bold {
  font-weight: 600;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.text-secondary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 24rpx 0;
}

/* 规则列表 */
.rule-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.rule-dot {
  flex-shrink: 0;
  color: #ff6b9d;
  font-weight: 600;
}

.rule-text {
  flex: 1;
}

/* 商家信息 */
.merchant-info-row {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.merchant-info-row:last-child {
  border-bottom: none;
}

.info-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.link-text {
  color: #ff6b9d;
}
