/* pages/merchant/my-merchant/my-merchant.wxss */
.page {
  background-color: transparent;
  position: relative;
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.group_7 {
  width: 714rpx;
  flex: 1;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  margin: 34rpx 0 20rpx 18rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.scroll-list {
  flex: 1;
  width: 100%;
  min-height: 0;
  position: relative;
  z-index: 0;
}



.loading-state {
  padding: 80rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  padding: 80rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.merchant-list {
  margin-bottom: 0;
}

.merchant-item {
  position: relative;
  padding: 30rpx;
  background-color: #F9F9F9;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.certification-badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #40B2E6;
  color: #fff;
  font-size: 12px;
  padding: 4px 12px;
  border-radius: 0 8px 0 8px;
  font-weight: 500;
  z-index: 1;
}

.certification-badge.uncertified {
  background-color: #999;
}

.merchant-item:hover {
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.merchant-info {
  width: 100%;
}

.merchant-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.merchant-details {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.merchant-contact {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.contact-item {
  display: block;
}

.merchant-scope {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 0;
  line-height: 1.6;
}

.scope-label {
  font-weight: 500;
}

.scope-content {
  word-break: break-all;
}

/* 申请商户按钮样式 */
.apply-merchant-btn {
  margin-top: 40rpx;
  margin-bottom: 0;
  padding: 24rpx;
  background: linear-gradient(180deg, #3759C7 0%, #5273D2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(55, 89, 199, 0.3);
  transition: all 0.3s ease;
}

.apply-merchant-btn:active {
  background: linear-gradient(180deg, #2d4ab3 0%, #4562c0 100%);
  transform: scale(0.98);
}


