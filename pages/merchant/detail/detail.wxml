<!--pages/merchant/detail/detail.wxml-->
<view class="container">
  <image class="cover-image" src="{{merchantInfo.cover}}" mode="aspectFill" />

  <view class="card">
    <view class="merchant-name-large">{{merchantInfo.name}}</view>
    <view class="merchant-category-large">{{merchantInfo.category}}</view>
    <view class="merchant-discount-large">优惠：{{merchantInfo.discount}}</view>
    <view class="merchant-tags">
      <text class="tag" wx:for="{{merchantInfo.tags}}" wx:key="*this">{{item}}</text>
    </view>
  </view>

  <view class="card">
    <view class="text-bold mb-20">商家介绍</view>
    <view class="text-secondary">{{merchantInfo.description}}</view>
  </view>

  <view class="card">
    <view class="text-bold mb-20">商家信息</view>
    <view class="info-row-simple">
      <text class="label">地址：</text>
      <text class="value">{{merchantInfo.address}}</text>
    </view>
    <view class="info-row-simple">
      <text class="label">电话：</text>
      <text class="value link-text" bindtap="callMerchant">{{merchantInfo.phone}}</text>
    </view>
    <view class="info-row-simple">
      <text class="label">营业时间：</text>
      <text class="value">{{merchantInfo.businessHours}}</text>
    </view>
  </view>
</view>
