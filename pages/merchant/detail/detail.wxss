/* pages/merchant/detail/detail.wxss */
.cover-image {
  width: 100%;
  height: 400rpx;
}

.merchant-name-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.merchant-category-large {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.merchant-discount-large {
  font-size: 32rpx;
  color: #ff6b9d;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.merchant-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.info-row-simple {
  padding: 16rpx 0;
  font-size: 26rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row-simple:last-child {
  border-bottom: none;
}

.label {
  color: #999;
}

.value {
  color: #333;
}

.link-text {
  color: #ff6b9d;
  text-decoration: underline;
}
