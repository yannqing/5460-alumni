/* pages/merchant/apply/apply.wxss */
.apply-container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

.form-scroll {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 18rpx 40rpx rgba(19, 31, 80, 0.05);
}

/* 状态卡片 */
.status-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 50rpx 30rpx;
}

.status-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.status-icon.verified {
  color: #52c41a;
}

.status-icon.rejected {
  color: #ff4d4f;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.status-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

/* 提示卡片 */
.tip-card {
  background: linear-gradient(135deg, #fff5f7 0%, #fff0f3 100%);
}

.tip-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #ff6b9d;
}

.tip-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-list text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.textarea-item {
  align-items: flex-start;
  flex-direction: column;
  gap: 16rpx;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.textarea-item .label {
  width: 100%;
  margin-bottom: 12rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.input.placeholder {
  color: #999;
}

.input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8rpx;
}

.location-icon {
  font-size: 32rpx;
  color: #ff6b9d;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.textarea {
  width: 100%;
  min-height: 180rpx;
  font-size: 26rpx;
  color: #333;
  background: #f7f8fa;
  padding: 20rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}

.textarea-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 30rpx;
}

.upload-section:last-child {
  margin-bottom: 0;
}

.upload-label {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.upload-area {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  transition: all 0.3s;
}

.upload-area:active {
  background: #f0f0f0;
  border-color: #ff6b9d;
}

.logo-area {
  height: 200rpx;
  width: 200rpx;
  margin: 0 auto;
}

.logo-preview {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 16rpx;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #999;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.bottom-space {
  height: 40rpx;
}

.bottom-action {
  padding: 20rpx;
  background: #f7f8fa;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.05);
}

.btn {
  height: 88rpx;
  border-radius: 999rpx;
  font-size: 32rpx;
  line-height: 88rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #fff;
  border: none;
}

.btn-primary:active {
  opacity: 0.8;
}



