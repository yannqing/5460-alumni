/* pages/merchant/list/list.wxss */
.merchant-list {
  padding: 20rpx;
}

.merchant-cover {
  width: 100%;
  height: 300rpx;
}

.merchant-info {
  padding: 24rpx;
}

.merchant-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.merchant-category {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.merchant-discount {
  font-size: 28rpx;
  color: #ff6b9d;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.merchant-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}
