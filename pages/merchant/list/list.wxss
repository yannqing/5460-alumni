/* pages/merchant/list/list.wxss */

/* 搜索栏 */
.search-bar {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 16rpx 30rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 筛选栏 */
.filter-bar {
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.filter-item.active {
  color: #333333;
  font-weight: 600;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999999;
}

.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 8;
}

.filter-options-panel {
  position: fixed;
  top: 200rpx;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 9;
  padding: 20rpx 0;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.08);
}

.option-item {
  padding: 22rpx 40rpx;
  font-size: 28rpx;
  color: #666666;
}

.option-item.active {
  color: #40B2E6;
  font-weight: 600;
}

/* 商铺列表 */
.merchant-list {
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
}

.merchant-card {
  position: relative;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.card-info {
  flex: 1;
  min-width: 0;
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* 会员等级徽章 */
.tier-badge {
  padding: 4rpx 12rpx;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.tier-badge.tier-1 {
  background-color: #999999;
}

.tier-badge.tier-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #d9d9d9 100%);
}

.tier-badge.tier-3 {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
}

.tier-badge.tier-4 {
  background: linear-gradient(135deg, #40B2E6 0%, #6BC5ED 100%);
}

/* 校友认证徽章 */
.cert-badge {
  padding: 4rpx 12rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

/* 副标题 */
.card-subtitle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.subtitle-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 评分信息 */
.card-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.rating-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.rating-score {
  color: #F5C348;
  font-weight: 600;
  font-size: 26rpx;
}

.rating-count {
  color: #999999;
  font-size: 22rpx;
}

/* 统计信息 */
.card-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #666666;
}

.stat-item {
  display: flex;
  align-items: center;
}

.stat-label {
  color: #999999;
}

.stat-value {
  color: #333333;
  font-weight: 500;
}

/* 加载状态 */
.loading-text {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999999;
  font-size: 26rpx;
}
