/* pages/merchant/list/list.wxss */

/* 页面容器 */
page {
  background: #3F61CA;
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

view, text, scroll-view, picker, input, button, image {
  box-sizing: border-box;
}

.container {
  width: 100%;
  min-height: 100vh;
  background: #3F61CA;
  padding: 0;
  margin: 0;
}

/* 固定顶部背景 */
.fixed-top-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 350rpx;
  background: #3F61CA;
  z-index: 5;
}

/* 重置默认样式 */
page {
  background: #3F61CA;
  padding: 0;
  margin: 0;
}

/* 顶部图片 */
.top-image-container {
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 8;
  position: relative;
}

.top-image {
  width: 529.49rpx;
  height: 90.3rpx;
  border-radius: 12rpx;
}

/* 头部容器（包含搜索栏和筛选条件） */
.header-container {
  position: sticky;
  top: 180rpx;
  z-index: 15;
  background: #3F61CA;
  border-bottom: none;
  bottom: 0;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 26rpx;
  box-shadow: none;
  border-bottom: none !important;
  margin-bottom: 30rpx;
  background: #3F61CA;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  border-radius: 21.74rpx;
  padding: 16rpx 30rpx;
  height: 74.28rpx;
  background: #304BA0;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-sizing: border-box;
  outline: none;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #FFFFFF;
  font-family: 'PingFang SC', sans-serif;
  border: none;
  outline: none;
  background: transparent;
}

.search-input:focus {
  border: none;
  outline: none;
  box-shadow: none;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.search-left-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
  background: transparent;
}

.search-button {
  width: 128.62rpx;
  height: 45.29rpx;
  background-color: #66B3FD;
  color: #FFFFFF;
  font-size: 24rpx;
  border-radius: 50rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  font-family: 'PingFang SC', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  align-items: center;
  padding: 0 30rpx 20rpx;
  margin-bottom: 0;
  background: #F5F5F5;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-bottom: none !important;
  border-top: none !important;
  position: relative;
  z-index: 1;
  min-height: 85rpx;
  justify-content: space-around;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 25.36rpx;
  color: #111313;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 0 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
  position: relative;
}

.filter-item.active {
  color: #111313;
  font-weight: 600;
}

.filter-arrow {
  font-size: 25.36rpx;
  color: #111313;
}

/* 修复 picker 组件默认下划线问题 - 更全面的选择器 */
picker {
  border-bottom: none !important;
  outline: none !important;
  background: transparent !important;
  line-height: normal !important;
  height: auto !important;
  padding: 0 !important;
  margin: 0 !important;
  appearance: none !important;
  -webkit-appearance: none !important;
}

/* 确保 picker 内部 text 元素没有下划线 */
picker text {
  border-bottom: none !important;
  outline: none !important;
  background: transparent !important;
  line-height: normal !important;
  height: auto !important;
  padding: 0 !important;
  margin: 0 !important;
}

/* 修复 picker 组件可能的伪元素下划线 */
picker::after {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

picker::before {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

/* 确保整个筛选区域没有意外的边框或下划线 */
.filter-bar::after {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

.filter-bar::before {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

/* 确保 header-container 没有边框 */
.header-container::after {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

.header-container::before {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

/* 特别针对可能出现下划线的元素 */
view, text, picker, input, button, image, navigator {
  border-bottom: none !important;
  outline: none !important;
}

/* 特别针对筛选区域的元素 */
.filter-bar view,
.filter-bar text,
.filter-bar picker,
.filter-bar input {
  border-bottom: none !important;
  outline: none !important;
}

.filter-item view,
.filter-item text,
.filter-item picker {
  border-bottom: none !important;
  outline: none !important;
}

.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 8;
}

.filter-options-panel {
  position: fixed;
  top: 200rpx;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 9;
  padding: 20rpx 0;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.08);
}

.option-item {
  padding: 22rpx 40rpx;
  font-size: 28rpx;
  color: #666666;
}

.option-item.active {
  color: #40B2E6;
  font-weight: 600;
}

/* 商铺列表 */
.merchant-list {
  padding: 30rpx 30rpx 20rpx;
  background-color: #F5F5F5;
  min-height: 100vh;
  margin-top: 0;
  position: relative;
  z-index: 0;
}

.merchant-card {
  position: relative;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.card-info {
  flex: 1;
  min-width: 0;
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  width: 100%;
  overflow: hidden;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
  min-width: 0;
}

.badges-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

/* 会员等级徽章 */
.tier-badge {
  padding: 4rpx 12rpx;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.tier-badge.tier-1 {
  background-color: #999999;
}

.tier-badge.tier-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #d9d9d9 100%);
}

.tier-badge.tier-3 {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
}

.tier-badge.tier-4 {
  background: linear-gradient(135deg, #40B2E6 0%, #6BC5ED 100%);
}

/* 校友认证徽章 */
.cert-badge {
  padding: 4rpx 12rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

/* 副标题 */
.card-subtitle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.subtitle-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 评分信息 */
.card-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.rating-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.rating-score {
  color: #F5C348;
  font-weight: 600;
  font-size: 26rpx;
}

.rating-count {
  color: #999999;
  font-size: 22rpx;
}

/* 统计信息 */
.card-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #666666;
}

.stat-item {
  display: flex;
  align-items: center;
}

.stat-label {
  color: #999999;
}

.stat-value {
  color: #333333;
  font-weight: 500;
}

/* 加载状态 */
.loading-text {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999999;
  font-size: 26rpx;
}
