/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 20rpx;
}

/* 顶部 Banner */
.header-banner {
  height: 450rpx;
  background: linear-gradient(180deg, #5b7fff 0%, #7a9bff 100%);
  position: relative;
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.platform-tag {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 100rpx);
  left: 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  color: #333;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

.slogan-container {
  margin-top: 180rpx;
  display: flex;
  align-items: baseline;
  gap: 20rpx;
}

.slogan-main {
  font-size: 56rpx;
  font-weight: bold;
  font-style: italic;
  letter-spacing: 4rpx;
}

.slogan-side {
  font-size: 28rpx;
  opacity: 0.8;
}

.sub-slogan {
  font-size: 32rpx;
  margin-top: 24rpx;
  opacity: 0.95;
  font-weight: 500;
}

/* 导航区域 */
.nav-container {
  margin: -80rpx 15rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 20rpx 35rpx;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.nav-header {
  position: absolute;
  top: 0;
  left: 0;
}

.nav-title-tag {
  background-color: #6ed4d6; /* 浅青色 */
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 20rpx 0 20rpx 0;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
}

.nav-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  /* background-color: #f9f9f9; */
  border-radius: 50%;
}

.nav-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 文章列表 */
.article-list {
  padding: 0;
}

.article-item {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.article-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  border: 1rpx solid #f0f0f0;
}

.publish-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.article-content {
  padding-left: 0;
}

.article-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.article-desc {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.loading-more, .no-more, .empty-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}
