.people-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  align-items: center;
}

.people-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: #666666;
  background-color: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.tag-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-color: #e0e0e0;
}

/* 底部留白 */
.bottom-space {
  height: 40rpx;
}
