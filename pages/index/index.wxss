  color:rgb(49, 49, 49);
  font-size: 14rpx;
  font-weight: 600;
  border-radius: 10rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  white-space: nowrap;
  box-shadow: 0 2rpx 4rpx rgba(255, 107, 157, 0.15);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  flex: 1;
  min-width: 0;
  text-align: center;
}

/* 快速入口 */
.quick-entry-section {
  position: relative;
  margin: 20rpx 20rpx;
}

.quick-entry-bg-decoration {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  border-radius: 24rpx;
  border: 3rpx solid #e8e8e8;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 1;
}

.quick-entry-content {
  position: relative;
  z-index: 2;
  padding: 20rpx 30rpx 20rpx;
}

.quick-entry-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
}

.quick-entry-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx 20rpx;
}

.quick-entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.quick-entry-icon-wrapper {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-entry-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #fff5f8 0%, #ffebf2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 157, 0.12);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  z-index: 2;
  padding: 15rpx;
  box-sizing: border-box;
}

.quick-entry-icon image {
  width: 100%;
  height: 100%;
}

.quick-entry-icon-base {
  width: 80rpx;
  height: 14rpx;
  background: linear-gradient(135deg, #ffe8f0 0%, #ffd4e5 100%);
  border-radius: 50%;
  margin-top: -8rpx;
  opacity: 0.6;
  filter: blur(2rpx);
}

.quick-entry-name {
  font-size: 24rpx;
  color: #333333;
  font-weight: 500;
}

