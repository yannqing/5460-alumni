/* pages/index/index.wxss */
.container {
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 通用样式 */
.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.flex-1 {
  flex: 1;
}

/* 校友会卡片 */
.association-cards-section {
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.association-cards-scroll {
  white-space: nowrap;
  width: 100%;
  -webkit-overflow-scrolling: touch;
}

.association-card-item {
  display: inline-block;
  width: 345rpx;
  margin-right: 20rpx;
  vertical-align: top;
  flex-shrink: 0;
}

.association-card-item:last-child {
  margin-right: 0;
}

.association-card-content {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 40rpx 20rpx;
  border: 3rpx solid #e8e8e8;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.association-card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.association-card-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid #e0e0e0;
  background-color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.association-card-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.association-card-actions {
  display: flex;
  justify-content: space-between;
  gap: 4rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  flex: 0.8;
  min-width: 0;
}

.action-icon-wrapper {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon-placeholder {
  width: 64rpx;
  height: 64rpx;
  background-color: #e0e0e0;
  border-radius: 6rpx;
  border: 2rpx solid #d0d0d0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.action-icon-image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 6rpx;
  background: linear-gradient(135deg, #fff5f8 0%, #ffebf2 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.12);
  padding: 10rpx;
  box-sizing: border-box;
}

.notification-dot {
  position: absolute;
  top: 0;
  right: 0;
  width: 14rpx;
  height: 14rpx;
  background-color: #ff0000;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

.new-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  padding: 2rpx 8rpx;
  background-color: #ff0000;
  color: #ffffff;
  font-size: 18rpx;
  border-radius: 10rpx;
  white-space: nowrap;
}

.action-label {
  font-size: 20rpx;
  color: #333333;
  white-space: nowrap;
}

/* 附近权益卡片样式 */
.benefit-action-item {
  flex: 1.8;
  padding: 0;
  min-width: 0;
  max-width: 100%;
}

.benefit-card-mini {
  position: relative;
  background: linear-gradient(135deg, #fff5f8 0%, #ffebf2 100%);
  border-radius: 6rpx;
  padding: 5rpx;
  height: 64rpx;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.12);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.benefit-new-badge-mini {
  position: absolute;
  top: 2rpx;
  right: 2rpx;
  padding: 2rpx 6rpx;
  background-color: #ff0000;
  color: #ffffff;
  font-size: 14rpx;
  border-radius: 10rpx;
  white-space: nowrap;
  z-index: 2;
}

.benefit-buttons-mini {
  display: flex;
  gap: 5rpx;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 0 3rpx;
  box-sizing: border-box;
}

.benefit-btn-mini {
  padding: 3rpx 8rpx;
