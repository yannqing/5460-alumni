/* pages/discover/discover.wxss */
.discover-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 蓝色头部 */
.header-section {
  background-color: #4a90e2;
  padding: 0;
  padding-top: env(safe-area-inset-top);
  padding-bottom: 60px;
}

.header-section-inner {
  padding: 30rpx 30rpx 0;
}

.header-top-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.logo-placeholder {
  width: 120rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 26rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.search-container {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  padding: 12rpx 18rpx;
  gap: 16rpx;
  margin-bottom: 18rpx;
}

.search-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  color: rgba(255, 255, 255, 0.8);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #fff;
  background-color: transparent;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.95);
}

.search-btn {
  padding: 10rpx 28rpx;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-top: 4rpx;
}

/* 导航标签 */
.nav-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 8rpx;
  border-radius: 8rpx;
  margin: 0 4rpx;
}

.nav-tab.active {
  background-color: rgba(74, 144, 226, 0.1);
}

.tab-icon {
  font-size: 32rpx;
  color: #333;
}

.nav-tab.active .tab-icon {
  color: #4a90e2;
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.nav-tab.active .tab-text {
  color: #4a90e2;
  font-weight: 500;
}

/* 视图切换和排序容器 */
.view-sort-container {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.view-toggle {
  display: flex;
  gap: 16rpx;
  flex-shrink: 0;
}

.toggle-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  gap: 6rpx;
}

.toggle-item.active {
  background-color: #4a90e2;
}

.toggle-icon {
  font-size: 32rpx;
}

.toggle-text {
  font-size: 24rpx;
  color: #666;
}

.toggle-item.active .toggle-text {
  color: #fff;
}

.sort-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: #e0e0e0;
  flex-shrink: 0;
}

.sort-options {
  display: flex;
  align-items: center;
  gap: 30rpx;
  flex: 1;
}

/* 列表视图 */
.list-view {
  padding: 20rpx 30rpx;
}

.sort-item {
  font-size: 26rpx;
  color: #999;
  padding: 8rpx 0;
}

.sort-item.active {
  color: #4a90e2;
  font-weight: 600;
  border-bottom: 2rpx solid #4a90e2;
}

/* 内容列表 */
.content-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 校友/内容卡片 */
.content-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.card-distance {
  font-size: 24rpx;
  color: #666;
}

.card-association {
  font-size: 24rpx;
  color: #999;
}

.card-tag {
  font-size: 22rpx;
  color: #4a90e2;
  margin-top: 4rpx;
}

.card-action {
  flex-shrink: 0;
}

.follow-btn {
  padding: 12rpx 32rpx;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  text-align: center;
}

/* 活动卡片 */
.activity-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.activity-date {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.activity-association {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.activity-participants {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.participant-avatars {
  display: flex;
  gap: -10rpx;
}

.participant-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-left: -10rpx;
  background-color: #f0f0f0;
  overflow: hidden;
}

.participant-avatar:first-child {
  margin-left: 0;
}

.avatar-small {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.participant-text {
  font-size: 24rpx;
  color: #666;
}

.activity-actions {
  margin-bottom: 20rpx;
}

.signup-btn {
  padding: 16rpx 0;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.activity-location {
  font-size: 24rpx;
  color: #999;
}

.activity-icons {
  display: flex;
  gap: 20rpx;
}

.icon-item {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-like,
.icon-share {
  font-size: 32rpx;
}

.activity-status {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.signed-btn {
  padding: 8rpx 20rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.signed-count {
  font-size: 24rpx;
  color: #666;
}

/* 地图视图 */
.map-view {
  width: 100%;
  height: calc(100vh - 300rpx);
}

.discover-map {
  width: 100%;
  height: 100%;
}
