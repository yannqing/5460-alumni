/* pages/discover/discover.wxss */
.discover-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部搜索卡片 */
.hero-card {
  background: linear-gradient(135deg, #fff0f5 0%, #ffe4ef 100%);
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 0 0 24rpx 24rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.search-icon-img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.scan-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.scan-icon {
  width: 40rpx;
  height: 40rpx;
}

.search-action {
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: #fff;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.hero-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stats-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b9d;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 模式切换 */
.mode-switch-bar {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.mode-switch {
  display: flex;
  gap: 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 6rpx;
}

.mode-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.mode-item.active {
  background-color: #fff;
  color: #ff6b9d;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.2);
}

.mode-icon {
  font-size: 32rpx;
}

.mode-text {
  font-size: 26rpx;
}

/* 筛选栏 */
.filter-bar {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
}

/* 分类栏 */
.category-bar {
  white-space: nowrap;
  padding: 0 30rpx 20rpx;
}

.category-chip {
  display: inline-block;
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  background: #f7f8fa;
  font-size: 26rpx;
  color: #555;
  margin-right: 16rpx;
}

.category-chip.active {
  background: rgba(255, 77, 79, 0.12);
  color: #ff4d4f;
  font-weight: 600;
}

/* 排序行 */
.sort-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.sort-option {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-right: 24rpx;
}

.sort-option.active {
  color: #ff4d4f;
  font-weight: 600;
}

.sort-extra {
  font-size: 26rpx;
  color: #1890ff;
}

/* 校友商铺筛选 */
.alumni-shop-filter {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.filter-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.filter-icon {
  font-size: 32rpx;
}

.filter-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 地图模式 */
.map-container {
  position: relative;
  width: 100%;
  height: calc(100vh - 400rpx);
  margin-bottom: 20rpx;
}

.discover-map {
  width: 100%;
  height: 100%;
}

/* 地图底部抽屉 */
.map-drawer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 50vh;
  transform: translateY(100%);
  transition: transform 0.3s;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.map-drawer.show {
  transform: translateY(0);
}

.drawer-handle {
  width: 80rpx;
  height: 8rpx;
  background-color: #ddd;
  border-radius: 4rpx;
  margin: 16rpx auto;
}

.drawer-content {
  padding: 0 30rpx 30rpx;
}

.drawer-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.drawer-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.drawer-info {
  flex: 1;
  min-width: 0;
}

.drawer-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.drawer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.drawer-cert-badge {
  padding: 4rpx 12rpx;
  background-color: rgb(226, 175, 22);
  color: #fff;
  border-radius: 6rpx;
  font-size: 20rpx;
}

.drawer-meta {
  font-size: 24rpx;
  color: #666;
}

.drawer-coupons {
  margin-bottom: 24rpx;
}

.drawer-coupons-scroll {
  white-space: nowrap;
}

.drawer-coupon-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border-radius: 12rpx;
  margin-right: 16rpx;
  color: #fff;
}

.drawer-coupon-discount {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.drawer-coupon-title {
  font-size: 22rpx;
  opacity: 0.9;
}

.drawer-action {
  text-align: center;
  padding: 20rpx;
  color: #ff6b9d;
  font-size: 28rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 商家列表 */
.merchant-list {
  padding: 0 30rpx;
}

.merchant-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.merchant-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.merchant-avatar-wrapper {
  position: relative;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.merchant-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #f0f0f0;
}

.alumni-shop-badge {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  padding: 4rpx 10rpx;
  background-color: #ff6b9d;
  color: #fff;
  border-radius: 12rpx;
  font-size: 20rpx;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.4);
  z-index: 2;
}

.merchant-info {
  flex: 1;
  min-width: 0;
}

.merchant-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.merchant-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.cert-badge-small {
  width: 32rpx;
  height: 32rpx;
  background-color: #ffd700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
  flex-shrink: 0;
}

.merchant-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.merchant-location {
  color: #8c8c8c;
}

.merchant-distance {
  color: #8c8c8c;
}

.merchant-rating {
  color: #ff8a00;
  font-weight: 500;
}

.merchant-avg-price {
  color: #666;
}

/* 社交证明 */
.social-proof {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.proof-text {
  font-size: 22rpx;
  color: #999;
}

.meta-divider {
  color: #ddd;
}

.merchant-coupons {
  white-space: nowrap;
  padding: 16rpx 0;
}

.coupon-item {
  display: inline-block;
  width: 320rpx;
  margin-right: 16rpx;
  vertical-align: top;
}

.coupon-card-mini {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.3);
  position: relative;
}

.coupon-left {
  flex-shrink: 0;
  width: 120rpx;
  padding: 20rpx 16rpx;
  text-align: center;
  color: #fff;
}

.coupon-discount-large {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.coupon-label {
  font-size: 20rpx;
  opacity: 0.9;
}

.coupon-divider {
  width: 2rpx;
  height: 80rpx;
  background: repeating-linear-gradient(
    to bottom,
    transparent,
    transparent 8rpx,
    rgba(255, 255, 255, 0.5) 8rpx,
    rgba(255, 255, 255, 0.5) 16rpx
  );
  flex-shrink: 0;
}

.coupon-right {
  flex: 1;
  padding: 20rpx 16rpx;
  color: #fff;
  min-width: 0;
}

.coupon-title-mini {
  font-size: 26rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-expire-mini {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 骨架屏 */
.skeleton-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.skeleton-line {
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  margin-bottom: 16rpx;
}

.skeleton-line.wide {
  width: 60%;
}

.skeleton-tags {
  display: flex;
  gap: 12rpx;
}

.skeleton-tag {
  width: 80rpx;
  height: 32rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
}
