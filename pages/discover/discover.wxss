/* pages/discover/discover.wxss */
.discover-page {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 蓝色头部 */
.header-section {
  background-color: #4a90e2;
  padding: 0;
  padding-top: env(safe-area-inset-top);
  padding-bottom: 60px;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 0;
}

.header-section-inner {
  padding: 100rpx 30rpx 0;
}

.header-top-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.logo-placeholder {
  width: 120rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 26rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.header-icons {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.header-icon {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1;
}

.search-container {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 50rpx;
  padding: 12rpx 18rpx;
  gap: 16rpx;
  margin-bottom: 18rpx;
}

.search-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  color: rgba(255, 255, 255, 0.8);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #fff;
  background-color: transparent;
}

.search-input::placeholder {
  color: #fff;
}

.search-btn {
  padding: 10rpx 28rpx;
  background-color: rgba(54, 168, 202, 0.8);
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-top: 4rpx;
}

/* 白色内容容器 */
.white-content-container {
  background-color: #fff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  overflow: hidden;
  position: fixed;
  top: calc(env(safe-area-inset-top) + 390rpx);
  left: 0;
  right: 0;
  z-index: 10;
}

/* 导航标签 */
.nav-tabs {
  display: flex;
  padding: 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 8rpx;
  border-radius: 8rpx;
  margin: 0 4rpx;
}

.nav-tab.active {
  background-color: rgba(74, 144, 226, 0.1);
}

.tab-icon {
  font-size: 32rpx;
  color: #333;
}

.nav-tab.active .tab-icon {
  color: #4a90e2;
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.nav-tab.active .tab-text {
  color: #4a90e2;
  font-weight: 500;
}

/* 视图切换和排序容器 */
.view-sort-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  gap: 20rpx;
  position: fixed;
  top: calc(env(safe-area-inset-top) + 435rpx + 120rpx);
  left: 0;
  right: 0;
  z-index: 20;
  border-bottom: 1rpx solid #f0f0f0;
}

.view-toggle {
  display: flex;
  gap: 16rpx;
  flex-shrink: 0;
  margin-left: auto;
}

.toggle-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  gap: 4rpx;
}

.toggle-item.active {
  background-color: #4a90e2;
}

.toggle-icon {
  font-size: 30rpx;
  line-height: 1;
}

.toggle-text {
  font-size: 25rpx;
  color: #666;
  line-height: 1;
}

.toggle-item.active .toggle-text {
  color: #fff;
}

.sort-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: #e0e0e0;
  flex-shrink: 0;
}

.sort-options {
  display: flex;
  align-items: center;
  gap: 30rpx;
  flex-shrink: 0;
}

/* 列表视图 */
.list-view {
  flex: 1;
  height: 0;
  margin-top: calc(env(safe-area-inset-top) + 435rpx + 120rpx + 80rpx);
  position: relative;
  z-index: 20;
  background-color: #f5f5f5;
  overflow-y: auto;
}

.sort-item {
  font-size: 26rpx;
  color: #999;
  padding: 8rpx 0;
}

.sort-item.active {
  color: #4a90e2;
  font-weight: 600;
}

/* 内容列表 */
.content-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  min-height: 200rpx;
}

/* 空列表提示 */
.empty-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 没有更多了提示 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 优惠卡片 */
.coupon-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.coupon-main {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.coupon-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.coupon-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
  align-items: flex-start;
}

.coupon-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.coupon-distance {
  font-size: 24rpx;
  color: #666;
}

.coupon-associations-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: 100%;
}

.coupon-associations {
  display: flex;
  flex-wrap: nowrap;
  gap: 8rpx;
  overflow-x: auto;
  flex: 1;
  min-width: 0;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
}

.coupon-associations::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Opera */
}

.association-tag {
  padding: 6rpx 12rpx 6rpx 6rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #666;
  white-space: nowrap;
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.association-avatar {
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.association-text {
  line-height: 22rpx;
}

.coupon-expand {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  background-color:rgb(176, 208, 235);
  border-radius: 50%;
}

.expand-icon {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.coupon-buttons {
  width: 100%;
  white-space: nowrap;
}

.coupon-btn-wrapper {
  display: inline-flex;
  gap: 12rpx;
  flex-direction: row;
}

.coupon-btn {
  padding: 32rpx 20rpx;
  background-color:rgb(45, 192, 123);
  border-radius: 8rpx;
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  white-space: nowrap;
  flex-shrink: 0;
  min-width: 280rpx;
  box-sizing: border-box;
}

.coupon-btn-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4rpx;
  flex-shrink: 0;
}

.coupon-discount {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.2;
}

.coupon-type {
  font-size: 22rpx;
  color: #fff;
  line-height: 1.2;
}

.coupon-btn-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.coupon-btn-right {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4rpx;
  flex: 1;
  min-width: 0;
}

.coupon-title {
  font-size: 24rpx;
  color: #fff;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-expire {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.2;
}

.coupon-rating {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 校友/内容卡片 */
.content-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.card-distance {
  font-size: 24rpx;
  color: #666;
}

.card-signature {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-association {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.card-tag {
  font-size: 22rpx;
  color: #4a90e2;
  margin-top: 4rpx;
}

.card-action {
  flex-shrink: 0;
}

.follow-btn {
  padding: 12rpx 32rpx;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  text-align: center;
}

/* 活动卡片 */
.activity-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.activity-date {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.activity-association {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.activity-participants {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.participant-avatars {
  display: flex;
  gap: -10rpx;
}

.participant-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-left: -10rpx;
  background-color: #f0f0f0;
  overflow: hidden;
}

.participant-avatar:first-child {
  margin-left: 0;
}

.avatar-small {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.participant-text {
  font-size: 24rpx;
  color: #666;
}

.activity-actions {
  margin-bottom: 20rpx;
}

.signup-btn {
  padding: 16rpx 0;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.activity-location {
  font-size: 24rpx;
  color: #999;
}

.activity-icons {
  display: flex;
  gap: 20rpx;
}

.icon-item {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-like,
.icon-share {
  font-size: 32rpx;
}

.activity-status {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.signed-btn {
  padding: 8rpx 20rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.signed-count {
  font-size: 24rpx;
  color: #666;
}

/* 地图视图 */
.map-view {
  flex: 1;
  height: 0;
  margin-top: calc(env(safe-area-inset-top) + 435rpx + 120rpx + 80rpx);
  position: relative;
  z-index: 20;
  background-color: #f5f5f5;
}

.discover-map {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 定位按钮 */
.location-btn {
  position: absolute;
  right: 30rpx;
  bottom: 150rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
}

.location-icon {
  font-size: 40rpx;
  line-height: 1;
}

/* 隐藏的 Canvas */
.hidden-canvas {
  position: absolute;
  top: -9999rpx;
  left: -9999rpx;
  width: 50px;
  height: 50px;
  opacity: 0;
  pointer-events: none;
}

/* 圆形头像标记 */
.marker-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}
