/* pages/enterprise/apply-enterprise/apply-enterprise.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 32px;
}

.form-container {
  padding: 20px 16px 0;
}

.form-title {
  font-size: 20px;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 24px;
  display: block;
}

.form-item {
  background-color: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 14px;
  font-weight: 500;
  color: #4a5568;
  margin-bottom: 8px;
  display: block;
}

.required {
  position: relative;
}

.required::after {
  content: '*';
  color: #f56565;
  margin-left: 4px;
}

.form-input {
  font-size: 14px;
  color: #2d3748;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 12px;
  width: 100%;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #6366f1;
  outline: none;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.form-textarea {
  font-size: 14px;
  color: #2d3748;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 12px;
  width: 100%;
  height: 100px;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #6366f1;
  outline: none;
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

/* 选择器样式 */
.picker-container {
  margin-top: 8px;
}

.picker-input {
  font-size: 14px;
  color: #2d3748;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 12px;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.radio-group {
  margin-top: 8px;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 32px;
}

.radio-item text {
  margin-left: 6px;
  font-size: 14px;
  color: #4a5568;
}

/* 类型显示样式 */
.type-display {
  margin-top: 8px;
  padding: 12px;
  background-color: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  display: flex;
  align-items: center;
}

.type-text {
  font-size: 14px;
  color: #2d3748;
  font-weight: 500;
}

.form-submit {
  margin-top: 32px;
  margin-bottom: 24px;
}

.submit-button {
  width: 100%;
  height: 48px;
  background-color: #6366f1;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  border-radius: 8px;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-button:active {
  background-color: #4f46e5;
}

/* 上传组件样式 */
.upload-container {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 8px;
}

/* 封面图预览样式 */
.cover-preview {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.cover-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  border: 1px solid #e5e5e5;
  background-color: #fafafa;
  object-fit: cover;
}

.cover-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.change-cover-btn,
.delete-cover-btn {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: none;
  transition: all 0.3s ease;
  outline: none;
  -webkit-appearance: none;
  appearance: none;
  z-index: 10;
  cursor: pointer;
}

.change-cover-btn:active {
  transform: scale(0.98);
  background-color: #cf1322;
}

.delete-cover-btn:active {
  transform: scale(0.98);
  background-color: #cf1322;
}

/* 图片列表样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 12px;
}

/* 图片项样式 */
.image-item {
  position: relative;
  width: 168rpx;
  height: 168rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1px solid #e5e5e5;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.image-item:active {
  transform: scale(0.98);
}

.list-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 图片删除按钮 */
.image-delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 69, 69, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.image-delete-btn:active {
  transform: scale(0.9);
  background-color: rgba(255, 69, 69, 1);
}

.delete-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 图片数量提示 */
.image-count {
  font-size: 24rpx;
  color: #999;
  align-self: flex-start;
  margin-top: 8px;
  margin-left: 4px;
}

/* 上传按钮样式 */
.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 168rpx;
  height: 168rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  background-color: #fafafa;
  cursor: pointer;
  transition: all 0.3s ease;
}

.upload-btn:active {
  transform: scale(0.98);
  border-color: #ff4d4f;
  background-color: #fff5f5;
}

.upload-icon {
  font-size: 52rpx;
  color: #888;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.upload-btn:active .upload-icon {
  color: #ff4d4f;
  transform: scale(1.1);
}

.upload-text {
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s ease;
}

.upload-btn:active .upload-text {
  color: #ff4d4f;
}

/* 位置选择器样式 */
.location-selector {
  display: flex;
  align-items: center;
  margin-top: 8px;
}

.location-input {
  flex: 1;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.select-location-btn {
  width: 100px;
  height: 44px;
  background-color: #6366f1;
  color: #fff;
  font-size: 14px;
  border: none;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.select-location-btn:active {
  background-color: #4f46e5;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .form-container {
    padding: 16px 12px 0;
  }
  
  .form-item {
    padding: 12px;
  }
  
  .form-input,
  .form-textarea {
    padding: 10px;
  }
  
  .upload-item {
    width: 80px;
    height: 80px;
  }
  
  .logo-preview {
    width: 100px;
    height: 100px;
  }
  
  .upload-btn {
    width: 80px;
    height: 80px;
  }
}
