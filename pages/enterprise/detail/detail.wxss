/* pages/enterprise/detail/detail.wxss */
.enterprise-detail-page {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 20rpx;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.loading {
  font-size: 28rpx;
  color: #999;
}

.hero-card {
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.enterprise-header {
  display: flex;
  align-items: center;
}

.enterprise-logo-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.enterprise-info {
  flex: 1;
}

.enterprise-name-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-bottom: 12rpx;
}

.enterprise-industry {
  font-size: 26rpx;
  color: #8c8c8c;
}

.info-card {
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #8c8c8c;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #1f1f1f;
}

.text-secondary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.contact-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 8rpx;
}

.contact-value {
  font-size: 26rpx;
  color: #1f1f1f;
}

.link-text {
  color: #40B2E6;
}

