/* pages/benefit/list/list.wxss */
.benefit-list {
  padding: 20rpx;
}

.benefit-item {
  margin-bottom: 20rpx;
}

.benefit-card {
  position: relative;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 30rpx;
  min-height: 200rpx;
}

.benefit-new-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 6rpx 16rpx;
  background-color: #ff0000;
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.benefit-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  justify-content: center;
}

.benefit-btn {
  padding: 12rpx 24rpx;
  background-color: #e8e8e8;
  color: #666666;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: 1rpx solid #d0d0d0;
  flex: 1;
  text-align: center;
  max-width: 200rpx;
}

.benefit-label {
  text-align: center;
  color: #666666;
  font-size: 24rpx;
  margin-top: 20rpx;
}

