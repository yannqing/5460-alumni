/* pages/notification/notification-list/notification-list.wxss */
.page {
  height: 100%;
  background: #F7F7FE;
  display: flex;
  flex-direction: column;
}

/* 顶部操作栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 40rpx;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.tabs {
  display: flex;
  gap: 32rpx;
}

.tab {
  font-size: 28rpx;
  color: #8c8c8c;
  padding: 8rpx 0;
  position: relative;
}

.tab.active {
  color: #3759C7;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(180deg, #3759C7 0%, #5273D2 100%);
  border-radius: 2rpx;
}

.actions {
  display: flex;
  align-items: center;
}

.btn-read-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #595959;
}

.btn-read-all .icon {
  font-size: 20rpx;
  font-weight: bold;
}

.list {
  flex: 1;
  height: 0;
}

.item {
  position: relative;
  display: flex;
  align-items: flex-start;
  padding: 32rpx 40rpx;
  border-bottom: 1px solid #f0f0f0;
}

.item.unread {
  background: #fafafa;
}

.item-main {
  flex: 1;
}

.item-top {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.type {
  font-size: 24rpx;
  color: #8c8c8c;
}

.time {
  font-size: 24rpx;
  color: #bfbfbf;
}

.content {
  font-size: 30rpx;
  color: #262626;
  line-height: 1.6;
}

.dot {
  flex-shrink: 0;
  width: 12rpx;
  height: 12rpx;
  margin-left: 24rpx;
  margin-top: 12rpx;
  background: linear-gradient(180deg, #3759C7 0%, #5273D2 100%);
  border-radius: 50%;
}

.tip {
  padding: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #bfbfbf;
}

.empty {
  padding-top: 240rpx;
  text-align: center;
  font-size: 28rpx;
  color: #bfbfbf;
}
