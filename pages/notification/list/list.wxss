/* pages/notification/list/list.wxss */
.notification-list {
  padding: 20rpx;
}

.notification-item {
  margin-bottom: 20rpx;
}

.notification-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.notification-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  flex: 1;
}

.notification-dot-small {
  width: 16rpx;
  height: 16rpx;
  background-color: #ff0000;
  border-radius: 50%;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.notification-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.notification-time {
  font-size: 22rpx;
  color: #999999;
}

