/* pages/activity/list/list.wxss */
.activity-list {
  padding: 20rpx;
}

.activity-cover {
  width: 100%;
  height: 300rpx;
}

.activity-info {
  padding: 24rpx;
}

.activity-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.activity-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.activity-location {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}
