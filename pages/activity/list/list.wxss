/* pages/activity/list/list.wxss */
.activity-page {
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  border-radius: 24rpx;
  background: #fff;
  box-shadow: 0 18rpx 50rpx rgba(20, 34, 66, 0.08);
  margin-bottom: 28rpx;
  overflow: hidden;
}

.activity-hero {
  padding: 28rpx;
}

.hero-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.hero-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.hero-subtitle {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-top: 6rpx;
}

.hero-btn {
  border-color: #ff4d4f;
  color: #ff4d4f;
}

.hero-stats {
  display: flex;
  justify-content: space-between;
  text-align: center;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
}

.stat-num {
  font-size: 34rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 18rpx 24rpx;
  background: #f5f7fb;
  border-radius: 999rpx;
}

.search-bar .icon {
  font-size: 30rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
}

.filter-tabs {
  display: flex;
  padding-bottom: 8rpx;
  margin-bottom: 20rpx;
}

.tab {
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  background: #fff;
  margin-right: 14rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tab.active {
  background: rgba(255, 77, 79, 0.12);
  color: #ff4d4f;
  font-weight: 600;
}

.empty-block {
  padding: 40rpx;
  text-align: center;
}

.empty-block image {
  width: 280rpx;
  margin-bottom: 16rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-card {
  padding: 0 0 24rpx;
}

.cover-wrap {
  position: relative;
  height: 320rpx;
}

.activity-cover {
  width: 100%;
  height: 100%;
}

.status-badge {
  position: absolute;
  top: 20rpx;
  left: 24rpx;
  padding: 6rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-badge.upcoming {
  background: #ff7a45;
}

.status-badge.ongoing {
  background: #52c41a;
}

.status-badge.finished {
  background: rgba(0, 0, 0, 0.4);
}

.activity-info {
  padding: 24rpx 28rpx 0;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-bottom: 8rpx;
}

.activity-meta {
  font-size: 24rpx;
  color: #8c8c8c;
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.dot {
  color: #d9d9d9;
}

.activity-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.tag {
  padding: 6rpx 18rpx;
  background: #f5f5f5;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #666;
}

.activity-location {
  font-size: 26rpx;
  color: #595959;
  margin-bottom: 12rpx;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #8c8c8c;
}

.distance {
  color: #ff4d4f;
}
