/* pages/activity/detail/detail.wxss */
.activity-detail-page {
  padding-bottom: 40rpx;
}

.cover-image {
  width: 100%;
  height: 420rpx;
}

.hero-card {
  margin-top: -80rpx;
  margin-bottom: 24rpx;
}

.activity-title-large {
  font-size: 38rpx;
  font-weight: 700;
  color: #1f1f1f;
  margin-bottom: 12rpx;
}

.activity-organizer {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 20rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat-block {
  flex: 1;
  text-align: center;
}

.stat-number {
  font-size: 34rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #8c8c8c;
}

.reminder {
  background: #fff7e6;
  color: #ad6800;
  padding: 14rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}

.hero-actions {
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
}

.info-card {
  padding: 10rpx 28rpx 0;
}

.info-row {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

.info-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.info-detail {
  font-size: 24rpx;
  color: #666;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.timeline {
  border-left: 4rpx solid #f0f0f0;
  padding-left: 24rpx;
}

.timeline-item {
  margin-bottom: 20rpx;
}

.timeline-time {
  font-size: 24rpx;
  color: #8c8c8c;
}

.timeline-title {
  font-size: 26rpx;
  color: #1f1f1f;
  font-weight: 500;
}

.contact-card {
  background: #f7f8fa;
  border-radius: 20rpx;
  padding: 24rpx;
}

.contact-name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.contact-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #595959;
  margin-bottom: 12rpx;
}

.contact-btn {
  border-color: #d9d9d9;
  color: #595959;
}
