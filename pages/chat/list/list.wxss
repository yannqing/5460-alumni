/* pages/chat/list/list.wxss */
.chat-page {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 菜单栏 */
.menu-bar {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.menu-icon {
  font-size: 36rpx;
  color: #333;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

/* 侧边栏 */
.sidebar-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 200;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.sidebar-mask.show {
  opacity: 1;
  visibility: visible;
}

.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 560rpx;
  max-width: 80%;
  background-color: #fff;
  z-index: 201;
  transform: translateX(-100%);
  transition: transform 0.3s;
  box-shadow: 2rpx 0 12rpx rgba(0, 0, 0, 0.1);
  padding-top: env(safe-area-inset-top);
}

.sidebar.show {
  transform: translateX(0);
}

.sidebar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.sidebar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.sidebar-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sidebar-content {
  padding: 20rpx 0;
}

.sidebar-item {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.sidebar-item:active {
  background-color: #f8f8f8;
}

.sidebar-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.sidebar-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.sidebar-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
}

.chat-list {
  flex: 1;
  height: 100%;
  background-color: #fff;
}

.chat-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.chat-item:active {
  background-color: #f8f8f8;
}

.chat-item::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1rpx;
  background-color: #f0f0f0;
  transform: scaleY(0.5);
}

.chat-avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.oa-badge {
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 20rpx;
  border: 2rpx solid #fff;
  z-index: 1;
}

.online-status {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  background-color: #07c160;
  border-radius: 50%;
  border: 4rpx solid #fff;
  z-index: 2;
}

.chat-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.unread-badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: #ff6b9d;
  color: #fff;
  border-radius: 16rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.chat-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chat-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.chat-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.chat-preview {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.chat-message {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chat-mute {
  font-size: 24rpx;
  flex-shrink: 0;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

