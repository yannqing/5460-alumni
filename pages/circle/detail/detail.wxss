/* pages/circle/detail/detail.wxss */
.cover-image {
  width: 100%;
  height: 400rpx;
}

.circle-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.circle-stats {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.dot {
  margin: 0 8rpx;
}

.circle-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.full-width {
  width: 100%;
}

.posts-section {
  padding: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.post-item {
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.post-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.post-actions {
  display: flex;
  gap: 40rpx;
  font-size: 24rpx;
  color: #999;
}
