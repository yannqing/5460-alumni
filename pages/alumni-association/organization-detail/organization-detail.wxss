/* pages/alumni-association/organization-detail/organization-detail.wxss */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding: 20rpx;
}

/* 头部 */
.header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e5e7eb;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
}

/* 校友会选择器 */
.selector-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.selector-label {
  font-size: 26rpx;
  color: #4b5563;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
  border: 1rpx solid #e5e7eb;
}

.selector-text {
  font-size: 26rpx;
  color: #374151;
}

.selector-arrow {
  font-size: 20rpx;
  color: #6b7280;
}

/* 角色列表区域 */
.role-list-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 24rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 角色列表 */
.role-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.role-item {
  background-color: #f9fafb;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 1rpx solid #e5e7eb;
}

.role-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.role-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
}

.role-count {
  font-size: 22rpx;
  color: #6b7280;
  background-color: #e5e7eb;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.role-description {
  font-size: 22rpx;
  color: #4b5563;
  line-height: 32rpx;
  margin-bottom: 12rpx;
}

.role-meta {
  font-size: 20rpx;
  color: #9ca3af;
}

.role-id {
  word-break: break-all;
}

/* 校友会选择弹窗 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
}

.picker-container {
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  max-height: 60vh;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.picker-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.picker-close {
  font-size: 36rpx;
  color: #6b7280;
  line-height: 1;
}

.picker-list {
  max-height: 50vh;
  overflow-y: auto;
}

.picker-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 26rpx;
  color: #374151;
}

.picker-item.selected {
  background-color: #f3f4f6;
  color: #3b82f6;
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}