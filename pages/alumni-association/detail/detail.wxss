/* pages/alumni-association/detail/detail.wxss */
.cover-image {
  width: 100%;
  height: 400rpx;
}

.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
}

.tab-item.active {
  color: #ff6b9d;
  font-weight: 600;
  border-bottom: 4rpx solid #ff6b9d;
}

.join-button {
  width: 100%;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 40rpx;
  background: linear-gradient(90deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 20rpx rgba(255, 107, 157, 0.25);
}

.join-button.joined {
  background: linear-gradient(90deg, #e0e0e0 0%, #f0f0f0 100%);
  color: #999999;
  box-shadow: none;
}

.full-width {
  width: 100%;
}

.tab-content {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card .list-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  background-color: transparent;
  margin: 0;
}

.card .list-item:last-child {
  border-bottom: none;
}

.notification-dot-small {
  width: 16rpx;
  height: 16rpx;
  background-color: #ff0000;
  border-radius: 50%;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.new-badge-inline {
  display: inline-block;
  padding: 2rpx 8rpx;
  background-color: #ff0000;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
  vertical-align: middle;
}

