/* pages/alumni-association/detail/detail.wxss */
.cover-image {
  width: 100%;
  height: 400rpx;
}

.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
}

.tab-item.active {
  color: #ff6b9d;
  font-weight: 600;
  border-bottom: 4rpx solid #ff6b9d;
}

.join-button {
  width: 100%;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 40rpx;
  background: linear-gradient(90deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 20rpx rgba(255, 107, 157, 0.25);
  transition: all 0.3s ease;
}

/* 待审核状态 */
.join-button.pending {
  background: linear-gradient(90deg, #ffa726 0%, #ffb74d 100%);
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(255, 167, 38, 0.25);
}

/* 已加入状态 */
.join-button.joined {
  background: linear-gradient(90deg, #66bb6a 0%, #81c784 100%);
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(102, 187, 106, 0.25);
}

/* 被拒绝状态 */
.join-button.rejected {
  background: linear-gradient(90deg, #ef5350 0%, #e57373 100%);
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(239, 83, 80, 0.25);
}

/* 已撤销状态 */
.join-button.cancelled {
  background: linear-gradient(90deg, #bdbdbd 0%, #d0d0d0 100%);
  color: #757575;
  box-shadow: 0 10rpx 20rpx rgba(189, 189, 189, 0.15);
}

.full-width {
  width: 100%;
}

.tab-content {
  padding: 20rpx;
}

/* 加入申请弹窗样式 */
.join-modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.join-modal {
  width: 86%;
  max-width: 640rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 28rpx 24rpx;
  box-shadow: 0 18rpx 40rpx rgba(0, 0, 0, 0.18);
}

.join-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.join-modal-subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.join-form-item {
  margin-top: 24rpx;
}

.join-form-label {
  font-size: 26rpx;
  color: #555555;
  margin-bottom: 10rpx;
}

.join-form-input,
.join-form-textarea {
  width: 100%;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid #eeeeee;
  background-color: #fafafa;
  font-size: 26rpx;
  box-sizing: border-box;
}

.join-form-input {
  height: 72rpx;
  line-height: 72rpx;
}

.join-form-textarea {
  min-height: 140rpx;
}

.join-modal-actions {
  margin-top: 28rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.join-modal-btn {
  min-width: 160rpx;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.join-modal-btn.cancel {
  background-color: #f5f5f5;
  color: #666666;
}

.join-modal-btn.submit {
  background: linear-gradient(90deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #ffffff;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card .list-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  background-color: transparent;
  margin: 0;
}

.card .list-item:last-child {
  border-bottom: none;
}

.notification-dot-small {
  width: 16rpx;
  height: 16rpx;
  background-color: #ff0000;
  border-radius: 50%;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.new-badge-inline {
  display: inline-block;
  padding: 2rpx 8rpx;
  background-color: #ff0000;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
  vertical-align: middle;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.school-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.school-icon {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.school-tag {
  padding: 6rpx 20rpx;
  border: 1rpx solid #ff6b9d;
  color: #ff6b9d;
  border-radius: 999rpx;
  font-size: 24rpx;
  background-color: rgba(255, 107, 157, 0.1);
}

.cert-tag-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.cert-tag {
  padding: 4rpx 14rpx;
  background: linear-gradient(90deg, #f4c441 0%, #f7d86c 100%);
  color: #8a5800;
  font-size: 22rpx;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 10rpx rgba(244, 196, 65, 0.35);
  white-space: nowrap;
  flex-shrink: 0;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.certified-badge {
  padding: 4rpx 14rpx;
  background: linear-gradient(90deg, #f4c441 0%, #f7d86c 100%);
  color: #8a5800;
  font-size: 22rpx;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 10rpx rgba(244, 196, 65, 0.35);
  white-space: nowrap;
}

.member-list {
  padding: 0 20rpx 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f5f5f5;
}

.member-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.member-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.member-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.member-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.member-tag {
  padding: 4rpx 16rpx;
  background: rgba(255, 107, 157, 0.1);
  color: #ff4f92;
  font-size: 22rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.3);
}

.member-company {
  font-size: 24rpx;
  color: #888888;
}

/* 骨架屏样式 */
.skeleton-list {
  padding: 0 20rpx 20rpx;
}

.skeleton-item {
  opacity: 0.6;
}

.skeleton-avatar {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.skeleton-text {
  height: 24rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
  margin-top: 10rpx;
  width: 200rpx;
}

.skeleton-name {
  width: 120rpx;
  height: 30rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
}

.skeleton-tag {
  width: 80rpx;
  height: 32rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 16rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 组织结构骨架屏样式 */
.skeleton-role-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skeleton-role-name {
  width: 180rpx;
  height: 26rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
  margin-left: 12rpx;
}

.skeleton-role-count {
  width: 60rpx;
  height: 28rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 14rpx;
}

