/* pages/alumni-association/detail/detail.wxss */
.cover-image {
  width: 100%;
  height: 400rpx;
}

.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
}

.tab-item.active {
  color: #ff6b9d;
  font-weight: 600;
  border-bottom: 4rpx solid #ff6b9d;
}

.join-button {
  width: 100%;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 40rpx;
  background: linear-gradient(90deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 20rpx rgba(255, 107, 157, 0.25);
}

.join-button.joined {
  background: linear-gradient(90deg, #e0e0e0 0%, #f0f0f0 100%);
  color: #999999;
  box-shadow: none;
}

.full-width {
  width: 100%;
}

.tab-content {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card .list-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  background-color: transparent;
  margin: 0;
}

.card .list-item:last-child {
  border-bottom: none;
}

.notification-dot-small {
  width: 16rpx;
  height: 16rpx;
  background-color: #ff0000;
  border-radius: 50%;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.new-badge-inline {
  display: inline-block;
  padding: 2rpx 8rpx;
  background-color: #ff0000;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
  vertical-align: middle;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.school-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.school-icon {
  width: 28rpx;
  height: 28rpx;
  flex-shrink: 0;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.certified-badge {
  padding: 4rpx 14rpx;
  background: linear-gradient(90deg, #f4c441 0%, #f7d86c 100%);
  color: #8a5800;
  font-size: 22rpx;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 10rpx rgba(244, 196, 65, 0.35);
  white-space: nowrap;
}

.member-list {
  padding: 0 20rpx 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f5f5f5;
}

.member-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 2rpx solid #ffffff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.member-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.member-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.member-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.member-tag {
  padding: 4rpx 16rpx;
  background: rgba(255, 107, 157, 0.1);
  color: #ff4f92;
  font-size: 22rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.3);
}

.member-company {
  font-size: 24rpx;
  color: #888888;
}

.dashboard-card {
  padding: 30rpx 30rpx 16rpx;
}

.section-title {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.section-subtitle {
  font-size: 22rpx;
  color: #a0a0a0;
}

.dashboard-list {
  display: flex;
  flex-direction: column;
}

.dashboard-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}

.dashboard-list .dashboard-item:last-child {
  border-bottom: none;
}

.item-leading {
  width: 80rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

.notify-icon {
  background: linear-gradient(135deg, #ffe0e9, #ff9ac4);
}

.activity-icon {
  background: linear-gradient(135deg, #d4edff, #7ec2ff);
}

.benefit-leading {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #fff5e6, #ffe0bd);
  display: flex;
  align-items: center;
  justify-content: center;
}

.benefit-tag {
  font-size: 24rpx;
  color: #ff8a00;
  font-weight: 600;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 30rpx;
  color: #1f1f1f;
  font-weight: 600;
}

.item-desc {
  font-size: 24rpx;
  color: #666666;
  margin-top: 12rpx;
  line-height: 1.5;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 22rpx;
  color: #9a9a9a;
  margin-top: 12rpx;
}

.meta-divider {
  color: #d9d9d9;
}

.item-extra {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
  margin-left: 20rpx;
}

.item-chip {
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #fff;
  background: linear-gradient(135deg, #ff6b9d, #ff9470);
}

.item-chip.ghost {
  background: rgba(255, 107, 157, 0.12);
  color: #ff6b9d;
}

.chevron {
  font-size: 32rpx;
  color: #c4c4c4;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
}

