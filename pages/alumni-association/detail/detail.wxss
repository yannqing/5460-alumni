/* 图谱样式 */
.graph-container {
  padding: 20rpx;
  min-height: calc(100vh - 500rpx);
}

.graph-header {
  padding: 24rpx;
  background: linear-gradient(135deg, #020617 0%, #0f172a 100%);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  min-height: 80rpx;
  transition: all 0.3s ease;
  border: 2rpx solid rgba(34, 211, 238, 0.2);
}

/* 默认状态：关系网络标题 */
.graph-header-default {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.graph-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #94a3b8;
  letter-spacing: 1rpx;
}

.graph-title .status-dot {
  width: 16rpx;
  height: 16rpx;
  background: #22d3ee;
  border-radius: 50%;
  box-shadow: 0 0 20rpx #22d3ee;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.graph-stat {
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  font-family: monospace;
}

/* 选中状态：节点详情 */
.graph-header-selected {
  animation: expandIn 0.3s ease-out;
}

@keyframes expandIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.node-info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.node-info-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.node-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #22d3ee;
  text-shadow: 0 0 12rpx rgba(34, 211, 238, 0.3);
}

.node-group {
  font-size: 22rpx;
  color: #94a3b8;
  background: rgba(34, 211, 238, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(34, 211, 238, 0.3);
}

.node-info-stats {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.info-stat-text {
  font-size: 24rpx;
  color: #cbd5e1;
  font-weight: 500;
}

.stat-divider {
  font-size: 24rpx;
  color: #475569;
}

.node-info-related {
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
}

.info-related-title {
  font-size: 24rpx;
  color: #cbd5e1;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.info-related-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.info-related-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: rgba(167, 139, 250, 0.1);
  border: 1rpx solid rgba(167, 139, 250, 0.3);
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #a78bfa;
}

.graph-canvas-wrapper {
  position: relative;
  width: 100%;
  height: 1000rpx;
  background: #020617;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.graph-canvas {
  width: 100%;
  height: 100%;
}

.graph-hint {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24rpx;
  color: #475569;
  background: rgba(15, 23, 42, 0.8);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  border: 1rpx solid rgba(255,255,255,0.05);
  backdrop-filter: blur(4px);
  z-index: 1;
}

/* 组织结构样式 */
/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 角色列表 */
.role-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.role-item {
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 24rpx;
  border: 1rpx solid #e5e7eb;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.role-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background-color: #3b82f6;
  border-radius: 4rpx 0 0 4rpx;
}

.role-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  cursor: pointer;
}

.role-name-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.expand-icon {
  font-size: 20rpx;
  color: #6b7280;
  transition: transform 0.2s ease;
}

.role-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
}

.role-count {
  font-size: 22rpx;
  color: #6b7280;
  background-color: #e5e7eb;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

/* 成员列表样式 */
.members-list {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #e5e7eb;
}

.members-title {
  font-size: 22rpx;
  font-weight: 600;
  color: #4b5563;
  margin-bottom: 12rpx;
}

.members-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120rpx, 1fr));
  gap: 16rpx;
}

.members-scroll-container {
  max-height: 400rpx;
  overflow-y: auto;
  padding-right: 8rpx;
  margin-top: 8rpx;
}

.members-scroll-container::-webkit-scrollbar {
  width: 6rpx;
}

.members-scroll-container::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

.members-scroll-container::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3rpx;
}

.members-scroll-container::-webkit-scrollbar-thumb:hover {
  background: #a1a1a1;
}

/* 组织结构成员项样式，避免与列表成员冲突 */
.org-member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.org-member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #e5e7eb;
}

.org-member-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.org-member-name {
  font-size: 18rpx;
  color: #4b5563;
  text-align: center;
  line-height: 24rpx;
}

.org-member-gender {
  font-size: 16rpx;
  color: #9ca3af;
}

/* 子角色列表样式 */
.children-list {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-left: 40rpx;
  position: relative;
}

.children-list::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 0;
  bottom: 0;
  width: 1rpx;
  background-color: #e5e7eb;
}

.child-role-item {
  background-color: #f9fafb;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 1rpx solid #e5e7eb;
  position: relative;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

.child-role-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background-color: #10b981;
  border-radius: 4rpx 0 0 4rpx;
}

.child-role-item::after {
  content: '';
  position: absolute;
  left: -30rpx;
  top: 24rpx;
  width: 26rpx;
  height: 1rpx;
  background-color: #e5e7eb;
}

/* 角色下无成员提示样式 */
.empty-role-members {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  background-color: #f9fafb;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.empty-role-text {
  font-size: 22rpx;
  color: #9ca3af;
  text-align: center;
}

/* 孙角色列表样式 */
.grandchildren-list {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding-left: 40rpx;
  position: relative;
}

.grandchildren-list::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 0;
  bottom: 0;
  width: 1rpx;
  background-color: #e5e7eb;
}

.grandchild-role-item {
  background-color: #f3f4f6;
  border-radius: 8rpx;
  padding: 16rpx;
  border: 1rpx solid #e5e7eb;
  position: relative;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.03);
}

.grandchild-role-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background-color: #f59e0b;
  border-radius: 4rpx 0 0 4rpx;
}

.grandchild-role-item::after {
  content: '';
  position: absolute;
  left: -30rpx;
  top: 20rpx;
  width: 26rpx;
  height: 1rpx;
  background-color: #e5e7eb;
}

/* 动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 角色列表区域 */
.role-list-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

