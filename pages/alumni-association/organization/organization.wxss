}

.move-modal-tip {
  padding: 16rpx 30rpx;
  background-color: #fffbe6;
  border-bottom: 1rpx solid #ffe58f;
}

.move-modal-tip text {
  font-size: 24rpx;
  color: #d48806;
}

.move-modal-body {
  flex: 1;
  max-height: 50vh;
  padding: 20rpx 0;
}

.parent-item {
  display: flex;
