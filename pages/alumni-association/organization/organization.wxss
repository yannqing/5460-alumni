/* 复用城市架构管理页样式：.page 布局，固定 group_5，仅 group_7 内 scroll-list 滚动 */
.page {
  background-color: transparent;
  position: relative;
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

/* 校友会选择卡片（与城市架构管理一致：固定不滚动） */
.page .group_5 {
  width: 714rpx;
  min-height: auto;
  margin: 47rpx 0 0 18rpx;
  padding: 38rpx 43rpx 27rpx 43rpx;
  flex-shrink: 0;
}

.group_5 {
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex-shrink: 0;
}

.group_5 .text_14 {
  width: auto;
  height: 40rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,1);
  font-size: 29rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Semibold, -apple-system, sans-serif;
  font-weight: 600;
  text-align: left;
  white-space: nowrap;
  line-height: 40rpx;
}

.group_5 .label_text {
  width: auto;
  height: 36rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,0.6);
  font-size: 25rpx;
  font-family: PingFangSC-Regular, -apple-system, sans-serif;
  font-weight: normal;
  text-align: left;
  white-space: nowrap;
  line-height: 36rpx;
  margin-top: 16rpx;
  display: block;
}

.group_5 .text-wrapper_8 {
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #E0E0E0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-top: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
}

.group_5 .text_15 {
  flex: 1;
  height: 36rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,0.85);
  font-size: 28rpx;
  font-family: PingFangSC-Regular, -apple-system, sans-serif;
  font-weight: normal;
  text-align: left;
  white-space: nowrap;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.group_5 .text-wrapper_8::after {
  content: '▼';
  color: #999;
  font-size: 20rpx;
  margin-left: 10rpx;
}

/* 校友会选择器弹窗（与城市架构管理一致） */
.alumni-association-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
}

.alumni-association-picker .picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.alumni-association-picker .picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 70vh;
  overflow: hidden;
}

.alumni-association-picker .picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.alumni-association-picker .picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.alumni-association-picker .picker-cancel {
  font-size: 28rpx;
  color: #999;
}

.alumni-association-picker .picker-list {
  max-height: calc(50vh + 40px);
  overflow-y: auto;
  padding: 0 30rpx;
}

.alumni-association-picker .picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.alumni-association-picker .item-name {
  font-size: 28rpx;
  color: #333;
}

.alumni-association-picker .item-check {
  font-size: 32rpx;
  color: #52c41a;
  font-weight: 600;
}

.alumni-association-picker .picker-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 角色列表卡片（与城市架构管理一致） */
