/* pages/alumni-association/organization/organization.wxss */
/* 基础样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

/* 校友会选择器 */
.alumni-association-selector {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  cursor: pointer;
}

.selector-label {
  color: #333;
  flex: 1;
}

.selector-arrow {
  color: #999;
  font-size: 20rpx;
}

/* 校友会选择器弹窗 */
.alumni-association-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 70vh;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-cancel {
  font-size: 28rpx;
  color: #999;
  cursor: pointer;
}

.picker-list {
  max-height: 50vh;
  overflow-y: auto;
  padding: 0 30rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-check {
  font-size: 32rpx;
  color: #52c41a;
  font-weight: 600;
}

.picker-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
/* 角色列表 */
.role-list {
  margin-top: 20rpx;
}

.role-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 树形层级样式 */
.role-item.level-1 {
  margin-left: 0;
  background-color: #f0f7ff;
  border-color: #91caff;
}

.role-item.level-2 {
  margin-left: 40rpx;
  background-color: #f6ffed;
  border-color: #b7eb8f;
}

.role-item.level-3 {
  margin-left: 80rpx;
  background-color: #fff7e6;
  border-color: #ffd591;
}

/* 角色左侧区域（包含展开图标和名称） */
.role-left {
  display: flex;
  align-items: center;
  flex: 1;
}

/* 展开/收缩图标 */
.expand-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  cursor: pointer;
}

.expand-icon .arrow {
  font-size: 20rpx;
  color: #666;
  transition: transform 0.2s ease;
  display: inline-block;
}

.expand-icon.expanded .arrow {
  transform: rotate(90deg);
}

/* 占位符（无子节点时保持对齐） */
.expand-placeholder {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.role-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

/* 操作按钮容器 */
.role-actions {
  display: flex;
  align-items: center;
}

.edit-btn {
  font-size: 24rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid #91d5ff;
  cursor: pointer;
  margin-left: 20rpx;
}

.edit-btn:hover {
  background-color: #bae7ff;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  background-color: #fff1f0;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid #ffccc7;
  cursor: pointer;
  margin-left: 20rpx;
}

.delete-btn:hover {
  background-color: #ffe8e6;
}
/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 编辑弹窗样式 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
}

.edit-modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.edit-modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
  overflow: hidden;
}

.edit-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.edit-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.edit-modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  cursor: pointer;
}

.edit-modal-body {
  padding: 30rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.edit-form-item {
  margin-bottom: 30rpx;
}

.edit-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.edit-label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 8rpx;
}

.edit-input {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}

.status-switch {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 16rpx;
}

.edit-modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.edit-btn-cancel,
.edit-btn-confirm {
  flex: 1;
  text-align: center;
  padding: 30rpx;
  font-size: 32rpx;
  cursor: pointer;
}

.edit-btn-cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.edit-btn-confirm {
  color: #1890ff;
  font-weight: 600;
}

/* 移动层级弹窗样式 */
