}

.parent-item:active {
  background-color: #f5f5f5;
}

.parent-item.root-item {
  background-color: #f0f7ff;
}

.parent-item.root-item .parent-name {
  color: #1890ff;
  font-weight: 600;
}

.parent-item.current-parent {
  background-color: #f6ffed;
}

.parent-indent {
  flex-shrink: 0;
}

.parent-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.current-tag {
  font-size: 22rpx;
  color: #52c41a;
  background-color: #f6ffed;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid #b7eb8f;
  margin-left: 16rpx;
}

.move-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.move-modal-footer {
  border-top: 1rpx solid #f0f0f0;
  padding: 20rpx 30rpx;
}

.move-btn-cancel {
  text-align: center;
  padding: 20rpx;
  font-size: 32rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

/* 标题行样式 */
.form-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-title-row .form-title {
