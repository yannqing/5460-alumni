  font-size: 20rpx;
  color: #666;
  transition: transform 0.2s ease;
  display: inline-block;
}

.expand-icon.expanded .arrow {
  transform: rotate(90deg);
}

.expand-placeholder {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.role-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.role-actions {
