/* pages/alumni-association/apply/apply.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef5f9 0%, #ffffff 100%);
  padding-bottom: 40rpx;
}

.form-container {
  padding: 30rpx;
}

.form-header {
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.form-title {
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fb5 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 10rpx;
}

.form-subtitle {
  font-size: 26rpx;
  color: #999999;
  font-weight: 400;
}

.form-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.08);
  border: 1rpx solid #fef0f5;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #ff6b9d 0%, #ff8fb5 100%);
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.form-item.required .form-label::before {
  content: '*';
  color: #ff6b9d;
  margin-right: 6rpx;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1;
}

.form-input,
.form-textarea,
.form-picker {
  width: 100%;
  padding: 24rpx 28rpx;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  background-color: #ffffff;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333333;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.form-input:focus,
.form-textarea:focus {
  border-color: #ff6b9d;
  background-color: #fffbfc;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.12);
  transform: translateY(-2rpx);
}

.form-input::placeholder,
.form-textarea::placeholder {
  color: #c0c0c0;
  font-size: 28rpx;
}

.form-input {
  height: 92rpx;
  line-height: 44rpx;
}

.form-textarea {
  min-height: 180rpx;
  line-height: 44rpx;
}

.form-picker {
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 92rpx;
  position: relative;
}

.form-picker:active {
  border-color: #ff6b9d;
  background-color: #fffbfc;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.12);
}

.form-picker::after {
  content: '';
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #c0c0c0;
  transition: all 0.3s ease;
}

/* 只读展示字段 */
.form-display {
  width: 100%;
  padding: 24rpx 28rpx;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  background-color: #fafafa;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  height: 92rpx;
  line-height: 44rpx;
  display: flex;
  align-items: center;
}

/* 上传附件 */
.upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.upload-image {
  width: 100%;
  height: 100%;
}

.upload-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 52rpx;
  height: 52rpx;
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.95), rgba(255, 143, 181, 0.95));
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.4);
  transition: all 0.3s ease;
}

.upload-delete:active {
  transform: scale(0.9);
}

.upload-button {
  width: 200rpx;
  height: 200rpx;
  border: 3rpx dashed #ff6b9d;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #fffbfc 0%, #ffffff 100%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.upload-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.05) 0%, rgba(255, 143, 181, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.upload-button:active::before {
  opacity: 1;
}

.upload-button:active {
  transform: scale(0.98);
  border-color: #ff8fb5;
}

.upload-icon {
  font-size: 64rpx;
  color: #ff6b9d;
  line-height: 1;
  margin-bottom: 12rpx;
  font-weight: 300;
  position: relative;
  z-index: 1;
}

.upload-text {
  font-size: 24rpx;
  color: #ff6b9d;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.upload-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.upload-hint::before {
  content: 'ℹ️';
  margin-right: 8rpx;
  font-size: 26rpx;
}

/* 提交按钮 */
.form-actions {
  margin-top: 50rpx;
  padding: 0 30rpx;
}

.submit-button {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 157, 0.35);
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.submit-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.submit-button:active::before {
  left: 100%;
}

.submit-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.3);
}

.submit-button[disabled] {
  opacity: 0.6;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.2);
  transform: none;
}

.submit-button::after {
  border: none;
}

/* 查看模式样式 */
.form-input[disabled],
.form-textarea[disabled] {
  background-color: #f5f5f5;
  color: #666666;
  border-color: #e0e0e0;
}

.form-picker.disabled {
  background-color: #f5f5f5;
  color: #666666;
  border-color: #e0e0e0;
}

.form-picker.disabled::after {
  display: none;
}

/* 查看模式按钮 */
.view-mode-actions {
  display: flex;
  gap: 20rpx;
}

.action-button {
  flex: 1;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.cancel-button {
  background: linear-gradient(135deg, #999999 0%, #bbbbbb 100%);
  color: #ffffff;
  box-shadow: 0 12rpx 32rpx rgba(153, 153, 153, 0.35);
}

.cancel-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(153, 153, 153, 0.3);
}

.edit-button {
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #ffffff;
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 157, 0.35);
}

.edit-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.3);
}

.action-button::after {
  border: none;
}
