/* pages/alumni-association/apply/apply.wxss */
/* 复用通用表单样式 */
page {
  background-color: #f5f5f5;
  padding-bottom: 60rpx;
  padding: 0;
  margin: 0;
}

.white-background-content {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -30rpx;
  position: relative;
  z-index: 1;
  padding-top: 20rpx;
  min-height: 100vh;
}

.container {
  padding: 0rpx 30rpx 60rpx;
  box-sizing: border-box;
}

.header-image {
  width: 100%;
  max-height: 180rpx;
  border-radius: 16rpx 16rpx 0 0;
  margin-bottom: 0rpx;
  display: block;
  vertical-align: top;
}

.form-header {
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.form-title {
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #40B2E6 0%, #6BC5ED 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 10rpx;
}

.form-subtitle {
  font-size: 26rpx;
  color: #999999;
  font-weight: 400;
}

.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

.form-item.required .form-label::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 6rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
}

.form-input,
.form-textarea,
.form-picker {
  width: 100%;
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333333;
}

.form-input {
  height: 80rpx;
  line-height: 40rpx;
}

.form-textarea {
  min-height: 120rpx;
  line-height: 40rpx;
}

.form-picker {
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  position: relative;
}

.form-picker::after {
  content: '';
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #999;
  transition: all 0.3s ease;
}

/* 只读展示字段 */
.form-display {
  width: 100%;
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  font-size: 28rpx;
  color: #666666;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}

/* 上传容器样式 */
.upload-container {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 上传按钮样式 */
.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 168rpx;
  height: 168rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  background-color: #fafafa;
  cursor: pointer;
  transition: all 0.3s ease;
}

.upload-btn:hover {
  border-color: #ff4d4f;
  background-color: #fff5f5;
  transform: scale(1.02);
}

.upload-btn:active {
  transform: scale(0.98);
}

.upload-icon {
  font-size: 52rpx;
  color: #888;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.upload-btn:hover .upload-icon {
  color: #ff4d4f;
  transform: scale(1.1);
}

.upload-text {
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s ease;
}

.upload-btn:hover .upload-text {
  color: #ff4d4f;
}

/* 图片列表样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

/* 图片项样式 */
.image-item {
  position: relative;
  width: 168rpx;
  height: 168rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #e5e5e5;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.image-item:active {
  transform: scale(0.98);
}

.list-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 图片删除按钮 */
.image-delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 69, 69, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.image-delete-btn:active {
  transform: scale(0.9);
  background-color: rgba(255, 69, 69, 1);
}

.delete-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 图片数量提示 */
.image-count {
  font-size: 24rpx;
  color: #999;
  align-self: flex-start;
}

/* 提交按钮 */
.form-actions {
  margin-top: 60rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
}

.submit-button {
  width: 713.77rpx;
  height: 85.14rpx;
  border-radius: 42.57rpx;
  background-color: #1890FF;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.submit-button[disabled] {
  opacity: 0.6;
}

.submit-button::after {
  border: none;
}

/* 查看模式样式 */
.form-input[disabled],
.form-textarea[disabled] {
  background-color: #f9f9f9;
  color: #999999;
  border-color: #eeeeee;
}

.form-picker.disabled {
  background-color: #f9f9f9;
  color: #999999;
  border-color: #eeeeee;
}

.form-picker.disabled::after {
  display: none;
}

/* 查看模式按钮 */
.view-mode-actions {
  display: flex;
  gap: 20rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.cancel-button {
  background-color: #999999;
  color: #ffffff;
}

.edit-button {
  background-color: #40B2E6;
  color: #ffffff;
}

.action-button::after {
  border: none;
}
