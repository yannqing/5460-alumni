/* 复用通用表单样式 */
page {
  background-color: #f5f5f5;
  padding-bottom: 60rpx;
  padding: 0;
  margin: 0;
}

.white-background-content {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -30rpx;
  position: relative;
  z-index: 1;
  padding-top: 20rpx;
  min-height: 100vh;
}

.container {
  padding: 0rpx 30rpx 60rpx;
  box-sizing: border-box;
}

.header-image {
  width: 100%;
  max-height: 180rpx;
  border-radius: 16rpx 16rpx 0 0;
  margin-bottom: 0rpx;
  display: block;
  vertical-align: top;
}

.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  margin-top: 0rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: #333;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.add-btn {
  font-size: 26rpx;
  color: white;
  border: 1rpx solid #1890FF;
  padding: 0;
  border-radius: 7.25rpx;
  width: 166.67rpx;
  height: 57.97rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'PingFang SC', '苹方-简', sans-serif;
  font-weight: normal;
  background-color: #1890FF;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
  display: block;
}

.form-item.required .label::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 6rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
}

.input,
.textarea {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input {
  height: 80rpx;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  resize: none;
}

.input.disabled {
  background-color: #f9f9f9;
  color: #999;
}

/* 下拉选择器样式 */
.picker-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  color: #333333;
}

.picker {
  /* color: #999; Removed placeholder color for picker */
  padding: 0 20rpx;
}

/* 搜索结果下拉列表 */
.search-group {
  position: relative;
  z-index: 10;
}

.search-results {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  max-height: 400rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  z-index: 100;
  margin-top: 8rpx;
}

.search-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.search-item:last-child {
  border-bottom: none;
}

.search-item:active {
  background-color: #f9f9f9;
}

.search-placeholder {
  padding: 24rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

.member-item {
  background-color: #f9f9f9;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.member-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.member-index {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.delete-btn {
  font-size: 26rpx;
  color: #ff4d4f;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.member-input {
  flex: 1;
  background-color: #fff;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 30rpx 0;
}

.form-actions {
  margin-top: 60rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: center;
}

.submit-btn {
  background-color: #1890FF;
  color: white;
  border-radius: 42.57rpx;
  font-weight: 500;
  width: 713.77rpx;
  height: 85.14rpx;
}

/* 图片上传样式 */
.upload-container {
  position: relative;
}

.upload-btn {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  height: 80rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
  color: #666;
  width: 100%;
  text-align: center;
  line-height: 40rpx;
}

.uploaded-image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

/* 申请材料上传样式 */
.attachments-list {
  margin-top: 20rpx;
}

.attachment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.attachment-name {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.attachment-delete {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-left: 20rpx;
}

/* 成员搜索结果样式 */
.member-search-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.member-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.member-info {
  flex: 1;
  min-width: 0;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.member-school {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.member-search-item:active {
  background-color: #f9f9f9;
}
