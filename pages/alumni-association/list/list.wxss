/* pages/alumni-association/list/list.wxss */

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0089DF 0%, #009AE3 100%);
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 重置默认样式 */
page {
  background: linear-gradient(135deg, #0089DF 0%, #009AE3 100%);
  padding: 0;
  margin: 0;
}

/* 顶部图片 */
.top-image-container {
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-image {
  width: 529.49rpx;
  height: 90.3rpx;
  border-radius: 12rpx;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 150rpx;
  z-index: 10;
  padding: 20rpx 30rpx;
  box-shadow: none;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  background: #0072B4;
  border-radius: 20rpx;
  padding: 16rpx 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #FFFFFF;
  font-family: 'PingFang SC', sans-serif;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.search-left-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
  background: transparent;
}

.search-button {
  padding: 10rpx 24rpx;
  background-color: #43A4F1;
  color: #FFFFFF;
  font-size: 24rpx;
  border-radius: 50rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  font-family: 'PingFang SC', sans-serif;
}

/* 整合筛选区域 */
.filter-section {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 25.36rpx;
  color: #111313;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 0 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
}

.filter-arrow {
  font-size: 25.36rpx;
  color: #111313;
}

/* 校友会列表 */
.association-list {
  padding: 30rpx 30rpx 20rpx;
  background-color: #F5F5F5;
  min-height: 100vh;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  margin-top: 20rpx;
  background: #F5F5F5;
}

.association-card {
  background-color: #FCFCFC;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 16rpx;
  flex-wrap: nowrap;
}

.association-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid #e0e0e0;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-info {
  flex: 1;
  min-width: 0;
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  font-family: 'PingFang SC', 'PingFang SC Semibold', sans-serif;
  color: #111313;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cert-badge {
  padding: 4rpx 12rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

/* 副标题 */
.card-subtitle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-weight: 500;
  color: #666666;
  margin-bottom: 12rpx;
}

.subtitle-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 位置信息 */
.card-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-weight: 500;
  color: #999999;
  margin-bottom: 12rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 标签 */
.card-tags {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.mini-tag {
  padding: 6rpx 16rpx;
  background-color: #e6f7ff;
  color: #40B2E6;
  font-size: 22rpx;
  border-radius: 6rpx;
}

.next-arrow {
  margin-left: auto;
  font-size: 32rpx;
  color: #e0e0e0;
  font-weight: 300;
}

/* 卡片底部 */
.school-info-actions {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-top: 8rpx;
}

.info-section {
  flex: 1;
  min-width: 0;
}

.action-column {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.card-action {
  width: fit-content;
}

.card-subtitle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-weight: 500;
  color: #666666;
}

.card-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-weight: 500;
  color: #999999;
  margin-bottom: 16rpx;
}

.follow-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #40B2E6 0%, #6BC5ED 100%);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.card-footer {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.card-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #999999;
}

.stat-item {
  display: flex;
  align-items: center;
}

.follow-btn.followed {
  background: transparent;
  border: 2rpx solid #40B2E6;
  color: #40B2E6;
}

/* 加载状态 */
.loading-text {
  text-align: center;
  padding: 40rpx 0;
  color: #666666;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #666666;
  font-size: 26rpx;
}
