/* pages/alumni-association/list/list.wxss */

/* 搜索栏 */
.search-bar {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 16rpx 30rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 筛选栏 */
.filter-bar {
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 0 8rpx;
}

.filter-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  display: inline-block;
}

.filter-item.active {
  color: #333333;
  font-weight: 600;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999999;
}

.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 8;
}

.filter-options-panel {
  position: fixed;
  top: 200rpx;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 9;
  padding: 20rpx 0;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.08);
}

.option-item {
  padding: 22rpx 40rpx;
  font-size: 28rpx;
  color: #666666;
}

.option-item.active {
  color: #ff6b9d;
  font-weight: 600;
}

/* 校友会列表 */
.association-list {
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
}

.association-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.association-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid #e0e0e0;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-info {
  flex: 1;
  min-width: 0;
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.cert-badge {
  padding: 4rpx 12rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

/* 副标题 */
.card-subtitle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.subtitle-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 位置信息 */
.card-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 标签 */
.card-tags {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.mini-tag {
  padding: 6rpx 16rpx;
  background-color: #fff0f5;
  color: #ff6b9d;
  font-size: 22rpx;
  border-radius: 6rpx;
}

.next-arrow {
  margin-left: auto;
  font-size: 32rpx;
  color: #e0e0e0;
  font-weight: 300;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.card-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #999999;
}

.stat-item {
  display: flex;
  align-items: center;
}

.card-action {
  flex-shrink: 0;
}

.follow-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #ff6b9d 0%, #ff8fb5 100%);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.follow-btn.followed {
  background: transparent;
  border: 2rpx solid #ff6b9d;
  color: #ff6b9d;
}

/* 加载状态 */
.loading-text {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999999;
  font-size: 26rpx;
}
