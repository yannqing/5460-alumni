<!--pages/alumni-association/list/list.wxml-->
<!-- 消息通知组件 -->
<message-notification />

<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <view class="search-input-wrap">
      <input class="search-input" type="text" placeholder="搜索校友会名称、母校名称" value="{{keyword}}" bindinput="onSearchInput" bindconfirm="onSearch" />
      <image class="search-icon" src="{{iconSearch}}" mode="aspectFit" bindtap="onSearch" />
    </view>
  </view>

  <!-- 筛选栏 -->
  <view class="filter-bar">
    <view class="filter-item" wx:for="{{filters}}" wx:key="label" wx:for-index="filterIndex" data-index="{{filterIndex}}" bindtap="openFilterOptions">
      <!-- 城市筛选（索引为1）使用多列选择器 -->
      <picker wx:if="{{filterIndex === 1}}" mode="multiSelector" range="{{regionData}}" value="{{regionIndex}}" bindchange="onRegionChange" bindcolumnchange="onRegionColumnChange">
        <text class="{{region && region.length > 0 ? 'theme-color' : ''}}">{{regionDisplayText || '全部城市'}}</text>
      </picker>
      <!-- 其他筛选显示文本 -->
      <text wx:else>{{item.options[item.selected]}}</text>
      <text class="filter-arrow">▾</text>
    </view>
  </view>

  <view wx:if="{{showFilterOptions}}">
    <view class="filter-mask" bindtap="closeFilterOptions"></view>
    <view class="filter-options-panel">
      <view class="option-item {{optIndex === filters[activeFilterIndex].selected ? 'active' : ''}}" wx:for="{{filters[activeFilterIndex].options}}" wx:key="*this" wx:for-index="optIndex" data-option-index="{{optIndex}}" bindtap="selectFilterOption">
        {{item}}
      </view>
    </view>
  </view>

  <!-- 校友会列表 -->
  <view class="association-list">
    <view class="association-card" wx:for="{{associationList}}" wx:key="id" bindtap="viewDetail" data-id="{{item.id}}">
      <!-- 头部：图标、名称和认证标识 -->
      <view class="card-header">
        <image class="association-icon" src="{{item.icon}}" mode="aspectFill" />
        <view class="card-info">
          <view class="card-title-row">
            <text class="card-title">{{item.name}}</text>
            <view wx:if="{{item.isCertified}}" class="cert-badge">✓ 认证</view>
          </view>

          <!-- 学校名称：优先显示 schoolName，没有时退回 schoolId -->
          <view wx:if="{{item.schoolName || item.schoolId}}" class="card-subtitle">
            <image class="subtitle-icon" src="{{iconSchool}}" mode="aspectFit" />
            <text>{{item.schoolName || item.schoolId}}</text>
          </view>

          <!-- 位置信息 -->
          <view wx:if="{{item.location}}" class="card-location">
            <image class="location-icon" src="{{iconLocation}}" mode="aspectFit" />
            <text>{{item.location}}</text>
          </view>
          
        </view>
      </view>

      <!-- 底部：统计数据和关注按钮 -->
      <view class="card-footer">
        <view class="card-stats">
          <text class="stat-item">校友会成员 {{item.memberCount || 0}}</text>
          <text wx:if="{{item.associationCount > 0}}" class="stat-item">校友会 {{item.associationCount}}</text>
          <text wx:if="{{item.followCount > 0}}" class="stat-item">关注 {{item.followCount}}</text>
        </view>
        <view class="card-action" catchtap="toggleFollow" data-id="{{item.id}}" data-followed="{{item.isFollowed}}">
          <view class="follow-btn {{item.isFollowed ? 'followed' : ''}}">
            {{item.isFollowed ? '已关注' : '+ 关注'}}
          </view>
        </view>
      </view>
    </view>

    <!-- 加载状态 -->
    <view wx:if="{{loading}}" class="loading-text">加载中...</view>
    <view wx:elif="{{!hasMore}}" class="loading-text">没有更多了</view>

    <!-- 空状态 -->
    <view wx:if="{{!loading && associationList.length === 0}}" class="empty-state">
      <view class="empty-placeholder">暂无数据</view>
      <text>暂无数据</text>
    </view>
  </view>
</view>
