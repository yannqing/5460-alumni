/* pages/alumni-association/member/member.wxss */
/* 复用城市/校促会成员管理页样式：.page 布局，固定 group_5，仅 group_7 内 scroll-list 滚动 */
.page {
  background-color: transparent;
  position: relative;
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.container {
  height: 100%;
  background-color: #f5f5f5;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

/* 校友会选择卡片（与城市成员管理一致：固定不滚动） */
.page .group_5 {
  width: 714rpx;
  min-height: auto;
  margin: 47rpx 0 0 18rpx;
  padding: 38rpx 43rpx 27rpx 43rpx;
  flex-shrink: 0;
}

.group_5 {
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex-shrink: 0;
}

.group_5 .text_14 {
  width: auto;
  height: 40rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,1);
  font-size: 29rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Semibold, -apple-system, sans-serif;
  font-weight: 600;
  text-align: left;
  white-space: nowrap;
  line-height: 40rpx;
}

.group_5 .label_text {
  width: auto;
  height: 36rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,0.6);
  font-size: 25rpx;
  font-family: PingFangSC-Regular, -apple-system, sans-serif;
  font-weight: normal;
  text-align: left;
  white-space: nowrap;
  line-height: 36rpx;
  margin-top: 16rpx;
  display: block;
}

.group_5 .text-wrapper_8 {
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #E0E0E0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-top: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
}

.group_5 .text_15 {
  flex: 1;
  height: 36rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,0.85);
  font-size: 28rpx;
  font-family: PingFangSC-Regular, -apple-system, sans-serif;
  font-weight: normal;
  text-align: left;
  white-space: nowrap;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.group_5 .text-wrapper_8::after {
  content: '▼';
  color: #999;
  font-size: 20rpx;
  margin-left: 10rpx;
}

/* 校友会选择器弹窗（与城市成员管理一致） */
.alumni-association-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
}

.alumni-association-picker .picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.alumni-association-picker .picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 70vh;
  overflow: hidden;
}

.alumni-association-picker .picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.alumni-association-picker .picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.alumni-association-picker .picker-cancel {
  font-size: 28rpx;
  color: #999;
}

.alumni-association-picker .picker-list {
  max-height: calc(50vh + 40px);
  overflow-y: auto;
  padding: 0 30rpx;
}

.alumni-association-picker .picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.alumni-association-picker .item-name {
  font-size: 28rpx;
  color: #333;
}

.alumni-association-picker .item-check {
  font-size: 32rpx;
  color: #52c41a;
  font-weight: 600;
}

.alumni-association-picker .picker-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 成员列表卡片（与城市成员管理一致：固定标题，仅 scroll-list 内滚动） */
.group_7 {
  width: 714rpx;
  flex: 1;
  max-height: 80vh;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  margin: 34rpx 0 20rpx 18rpx;
  padding: 38rpx 25rpx 20rpx 25rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.scroll-list {
  flex: 1;
  width: 100%;
  height: 0;
  min-height: 0;
  scrollbar-width: none;
  -ms-overflow-style: none;
}
.scroll-list::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.group_7 .member-list-header {
  width: 100%;
  height: 58rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 0 0 11rpx 18rpx;
  padding: 0;
  box-sizing: border-box;
  flex-shrink: 0;
}

.group_7 .text_20 {
  width: auto;
  height: 40rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,1);
  font-size: 29rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Semibold, -apple-system, sans-serif;
  font-weight: 600;
  text-align: left;
  white-space: nowrap;
  line-height: 40rpx;
}

.invite-btn-wrap {
  flex-shrink: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 24rpx;
}

.group_7 .invite-btn {
  background-color: rgba(24,144,255,1);
  border-radius: 7rpx;
  height: 58rpx;
  min-width: 167rpx;
  padding: 0 24rpx;
  font-size: 25rpx;
  color: rgba(255,255,255,1);
  line-height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  white-space: nowrap;
}

.group_7 .invite-btn-disabled {
  background-color: #d9d9d9 !important;
  color: rgba(0, 0, 0, 0.25) !important;
}

.group_7 .member-list {
  width: 100%;
  margin-top: 11rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.group_7 .member-item {
  background-color: rgba(249,249,249,1);
  border-radius: 14rpx;
  width: 100%;
  min-height: 125rpx;
  margin-bottom: 14rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
}

.group_7 .member-item:last-child {
  margin-bottom: 0;
}

.member-item-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 24rpx 0 0 31rpx;
  flex-shrink: 0;
}

.group_7 .member-avatar {
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.group_7 .avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.member-text-group {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 24rpx;
  min-height: 78rpx;
}

.group_7 .member-name {
  width: auto;
  max-width: 200rpx;
  height: 36rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,1);
  font-size: 25rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Semibold, -apple-system, sans-serif;
  font-weight: 600;
  text-align: left;
  white-space: nowrap;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.member-gender-text {
  width: auto;
  height: 36rpx;
  overflow-wrap: break-word;
  color: rgba(0,0,0,1);
  font-size: 25rpx;
  font-family: PingFangSC-Regular, -apple-system, sans-serif;
  font-weight: normal;
  text-align: left;
  white-space: nowrap;
  line-height: 36rpx;
  margin-top: 5rpx;
}

.member-role-tag {
  background-color: rgba(24,144,255,1);
  border-radius: 18rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 94rpx;
  padding: 0 16rpx;
  margin-left: 24rpx;
  flex-shrink: 0;
  font-size: 22rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Semibold, -apple-system, sans-serif;
  font-weight: 600;
  color: rgba(255,255,255,1);
  line-height: 31rpx;
}

.group_7 .member-actions {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: auto;
  padding: 0 33rpx 0 14rpx;
  gap: 0;
}

.group_7 .edit-btn {
  background-color: rgba(255,255,255,1);
  border-radius: 18rpx;
  height: 43rpx;
  min-width: 83rpx;
  padding: 0 18rpx;
  border: 1rpx solid rgba(67,100,204,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Semibold, -apple-system, sans-serif;
  font-weight: 600;
  color: rgba(67,100,204,1);
  line-height: 29rpx;
  margin-left: 14rpx;
}

.group_7 .delete-btn {
  box-shadow: 0px 2px 11px 0px rgba(194,194,255,0.37);
  background-color: rgba(255,255,255,1);
  border-radius: 18rpx;
  height: 43rpx;
  min-width: 83rpx;
  padding: 0 18rpx;
  border: 1rpx solid rgba(176,54,62,1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  letter-spacing: 0rpx;
  font-family: PingFangSC-Semibold, -apple-system, sans-serif;
  font-weight: 600;
  color: rgba(176,54,62,1);
  line-height: 29rpx;
  margin-left: 14rpx;
}

.alumni-name-field {
  position: relative;
  margin-bottom: 30rpx;
}

.field-label {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  height: 40rpx;
  margin-bottom: 16rpx;
  display: block;
}

.field-input-wrapper {
  position: relative;
  width: 100%;
  height: 80rpx;
}

.field-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  background-color: #fff;
  box-sizing: border-box;
  color: #333;
}

.field-placeholder {
  color: #999;
  font-size: 28rpx;
}

.alumni-search-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  margin-top: 8rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  max-height: 400rpx;
  overflow: hidden;
}

.alumni-search-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.alumni-search-item:last-child {
  border-bottom: none;
}

.alumni-search-item:active {
  background-color: #f5f5f5;
}

.alumni-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.alumni-item-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.alumni-item-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 4rpx;
}

.alumni-item-school {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.role-selector {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  cursor: pointer;
}

.selector-text {
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.selector-arrow {
  color: #999;
  font-size: 20rpx;
}

.role-name {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.invite-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.modal-body {
  padding: 30rpx;
}

.modal-body .form-item {
  margin-bottom: 30rpx;
}

.modal-body .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.modal-body .input {
  border: 1rpx solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.modal-footer .btn {
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  cursor: pointer;
}

.modal-footer .btn-cancel {
  background-color: #f5f5f5;
  color: #333;
}

.modal-footer .btn-confirm {
  background-color: #1890ff;
  color: #fff;
}

.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
}

.member-info-display {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  object-fit: cover;
}

.member-name-display {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}
