<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmswe.alumni.service.user.mapper.RolePermissionsMapper">

    <resultMap id="BaseResultMap" type="com.cmswe.alumni.common.entity.RolePermissions">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="roleId" column="role_id" jdbcType="BIGINT"/>
        <result property="perId" column="per_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, role_id, per_id, create_time, update_time, is_delete
    </sql>

    <!-- 批量插入角色权限关联 -->
    <insert id="insertBatch">
        INSERT INTO role_permissions (role_id, per_id, create_time, update_time, is_delete)
        VALUES
        <foreach collection="rolePermissionsList" item="item" separator=",">
            (#{item.roleId}, #{item.perId}, #{item.createTime}, #{item.updateTime}, #{item.isDelete})
        </foreach>
    </insert>

    <!-- 根据角色ID删除权限关联 -->
    <update id="deleteByRoleId">
        UPDATE role_permissions
        SET is_delete = 1,
            update_time = NOW()
        WHERE role_id = #{roleId}
          AND is_delete = 0
    </update>

    <!-- 根据权限ID删除角色关联 -->
    <update id="deleteByPermissionId">
        UPDATE role_permissions
        SET is_delete = 1,
            update_time = NOW()
        WHERE per_id = #{permissionId}
          AND is_delete = 0
    </update>

</mapper>