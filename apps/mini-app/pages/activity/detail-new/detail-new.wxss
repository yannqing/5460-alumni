.activity-detail-page {
  min-height: 100vh;
  margin-top: 0;
  position: relative;
  z-index: 1;
}

/* 活动封面 */
.cover-container {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  position: relative;
}

.cover-image {
  width: 100%;
  height: 100%;
}

/* 白色背景内容区域 */
.white-background-content {
  background-color: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -30rpx;
  position: relative;
  z-index: 10;
  padding-top: 20rpx;
  min-height: 800rpx;
  padding-bottom: 100rpx;
}

/* 活动标题 */
.title-container {
  padding: 24rpx;
  margin-bottom: 12rpx;
  position: relative;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 44rpx;
  margin-bottom: 12rpx;
}

.status-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background-color: #E8F3FF;
  border-radius: 12rpx;
}

.status-text {
  font-size: 20rpx;
  color: #40B2E6;
}

/* 主办方信息 */
.organizer-container {
  padding: 24rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.organizer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.organizer-info {
  flex: 1;
}

.organizer-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.organizer-type {
  font-size: 24rpx;
  color: #999;
}

/* 活动信息 */
.info-section {
  margin-bottom: 12rpx;
}

.info-item {
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: flex-start;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 36rpx;
}

.location-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location-btn {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  background-color: #f0f0f0;
  color: #333;
}

.contact-info {
  flex: 1;
}

/* 活动图片 */
.images-section {
  padding: 24rpx;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -8rpx;
}

.image-item {
  width: 33.33%;
  padding: 8rpx;
  box-sizing: border-box;
}

.activity-image {
  width: 100%;
  height: 133rpx;
  border-radius: 8rpx;
}

/* 活动详情 */
.description-section {
  padding: 24rpx;
  margin-bottom: 12rpx;
}

.description {
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
  white-space: pre-wrap;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误提示 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 0 40rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 40rpx;
}

.retry-btn {
  padding: 12rpx 40rpx;
  background-color: #40B2E6;
  color: #fff;
  font-size: 26rpx;
  border-radius: 24rpx;
}