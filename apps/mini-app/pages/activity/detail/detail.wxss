/* pages/activity/detail/detail.wxss */
.activity-detail-page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading {
  font-size: 28rpx;
  color: #999;
}

/* 封面图 */
.cover-image {
  width: 100%;
  height: 400rpx;
  background-color: #eee;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 标题卡片 */
.title-card {
  padding: 30rpx;
}

.activity-title-large {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  display: block;
}

.activity-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

/* 状态标签样式 */
.status-tag.status-0 {
  background-color: #f0f0f0;
  color: #999;
}

.status-tag.status-1 {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-tag.status-2 {
  background-color: #fff7e6;
  color: #faad14;
}

.status-tag.status-3 {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-tag.status-4 {
  background-color: #f0f0f0;
  color: #999;
}

.status-tag.status-5 {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 基本信息卡片 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.info-label {
  font-weight: bold;
  color: #333;
  min-width: 140rpx;
}

.info-value {
  flex: 1;
  word-break: break-all;
}

/* 主办方信息 */
.organizer-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.organizer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background-color: #eee;
}

.organizer-name {
  font-size: 28rpx;
  color: #333;
}

/* 地点信息 */
.location-card {
  padding: 30rpx;
}

.location-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.location-text {
  flex: 1;
}

.address {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
}

.nav-text {
  font-size: 26rpx;
  color: #1890ff;
}

/* 参与信息 */
.participants-card {
  padding: 30rpx;
}

.participants-row {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.participant-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.participant-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 联系方式 */
.contact-card {
  padding: 30rpx;
}

.link-text {
  color: #1890ff;
  text-decoration: underline;
}

/* 活动详情描述 */
.description-card {
  padding: 30rpx;
}

.activity-description {
  font-size: 28rpx;
  color: #666;
  line-height: 44rpx;
  word-break: break-all;
}

/* 活动图片 */
.images-card {
  padding: 30rpx;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.grid-image {
  width: 100%;
  height: 190rpx;
  border-radius: 12rpx;
  background-color: #eee;
}

/* 审核信息 */
.review-card {
  padding: 30rpx;
}

/* 操作按钮 */
.action-buttons {
  padding: 20rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.btn {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  line-height: 80rpx;
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
  border: none;
}

.btn-plain {
  background-color: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 20rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.retry-btn {
  background-color: #1890ff;
  color: #fff;
  border: none;
  padding: 16rpx 48rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 全局样式 */
page {
  background-color: #f5f5f5;
}