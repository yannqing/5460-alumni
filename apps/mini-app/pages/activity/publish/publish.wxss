/* pages/activity/publish/publish.wxss */
/* 与审核页一致：公共导航栏 + 底层白框，仅内容区滚动 */
/* 与 custom-nav-bar 的 audit-content-wrapper 一致：该区域高度为 calc(100vh - 190.22rpx)，page 需明确高度以便内部 scroll-view 能计算 */
.page {
  background-color: transparent;
  position: relative;
  width: 750rpx;
  height: calc(100vh - 190.22rpx);
  min-height: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* form 参与 flex，内部用包裹层 + 明确高度，保证 scroll-view 能拿到高度（小程序 scroll-y 必须要有明确高度） */
.page form {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  overflow: hidden;
}

.form-scroll-wrap {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 高度 = 视口 - 顶部导航区 - 底部固定按钮区，避免滚动区伸入固定栏导致白块遮挡表单 */
.scroll-content {
  width: 100%;
  height: calc(100vh - 330rpx);
}

/* 底层白框（与城市审核页 group_7 一致） */
.group_7 {
  width: 714rpx;
  margin: 34rpx 0 20rpx 18rpx;
  padding: 38rpx 25rpx 160rpx 25rpx;
  background-color: #fff;
  border-radius: 28.99rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

.form-card {
  background-color: transparent;
  padding: 0;
  margin-bottom: 32rpx;
}

.form-card:last-of-type {
  margin-bottom: 0;
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.required {
  color: #ff4d4f;
}

/* 输入框重构：统一高度与占位样式，避免键盘顶起异常 */
.field-input-wrapper {
  width: 100%;
  min-height: 80rpx;
  box-sizing: border-box;
}

.field-textarea-wrapper {
  width: 100%;
  min-height: 160rpx;
  box-sizing: border-box;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  background-color: #fff;
  box-sizing: border-box;
  color: #333;
}

.input-placeholder {
  color: #999;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #fff;
  box-sizing: border-box;
  color: #333;
}

.picker-value {
  border: 1rpx solid #eee;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-picker-view {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.picker-view-item {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: center;
}

.upload-container {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.cover-preview {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.cover-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e5e5e5;
  background-color: #fafafa;
}

.cover-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.change-cover-btn {
  background-color: #1890ff;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: none;
}

.delete-cover-btn {
  background-color: #1890ff;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: none;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 168rpx;
  height: 168rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  background-color: #fafafa;
}

.upload-icon {
  font-size: 52rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 22rpx;
  color: #666;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 168rpx;
  height: 168rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #e5e5e5;
  background-color: #fafafa;
}

.list-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(24, 144, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

.image-count {
  font-size: 24rpx;
  color: #999;
  align-self: flex-start;
}

.submit-placeholder {
  height: 160rpx;
}

.submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 18rpx 20rpx 18rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  z-index: 100;
}

.submit-btn {
  width: 100%;
  max-width: 714rpx;
  margin: 0 auto;
  display: block;
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

.submit-btn[loading] {
  opacity: 0.7;
}

.location-selector {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.location-input-wrap {
  flex: 1;
  min-height: 80rpx;
}

.location-input {
  flex: 1;
  background-color: #fafafa;
  color: #333;
}

.location-input[disabled] {
  color: #999;
}

.select-location-btn {
  background-color: #1890ff;
  color: #fff;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
}
