/* pages/my-follow/my-follow.wxss */
.follow-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部Tab栏 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #40B2E6;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #40B2E6;
  border-radius: 3rpx;
}

/* 类型筛选 */
.type-scroll {
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap;
}

.type-tabs {
  display: flex;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.type-tab {
  flex-shrink: 0;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.type-tab.active {
  color: #fff;
  background: linear-gradient(135deg, #40B2E6 0%, #6BC5ED 100%);
}

/* 列表区域 */
.list-scroll {
  flex: 1;
  overflow-y: scroll;
}

.list {
  padding: 20rpx;
}

/* 统一卡片样式 */
.follow-item-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
  position: relative;
}

.follow-item-card:active {
  background-color: #f8f8f8;
}

/* 头像 */
.item-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid #f0f0f0;
}

/* 内容区域 */
.item-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-right: 120rpx;
}

/* 名称 */
.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 简介 */
.item-description {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.5;
}

/* 关注时间 */
.follow-time {
  font-size: 22rpx;
  color: #ccc;
}

/* 关注状态 */
.follow-status {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.status-text {
  font-size: 24rpx;
  color: #40B2E6;
  font-weight: 500;
  white-space: nowrap;
  padding: 8rpx 16rpx;
  background-color: rgba(64, 178, 230, 0.1);
  border-radius: 20rpx;
  cursor: pointer;
}

.status-text:active {
  opacity: 0.7;
}

.status-text-readonly {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
  white-space: nowrap;
  padding: 8rpx 16rpx;
  background-color: rgba(153, 153, 153, 0.1);
  border-radius: 20rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 24rpx;
  color: #ccc;
}
