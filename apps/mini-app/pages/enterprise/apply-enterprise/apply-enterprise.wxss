/* pages/enterprise/apply-enterprise/apply-enterprise.wxss */
.page {
  background-color: transparent;
  position: relative;
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.group_7 {
  width: 714rpx;
  flex: 1;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  margin: 34rpx 0 20rpx 18rpx;
  padding: 20rpx 20rpx 30rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.scroll-list {
  flex: 1;
  width: 100%;
  min-height: 0;
  position: relative;
  z-index: 0;
  /* 通过调整宽度让滚动条被遮挡 */
  margin-right: -20rpx;
  padding-right: 20rpx;
  /* 彻底隐藏滚动条 - 多种方式确保兼容性 */
  scrollbar-width: none !important; /* Firefox */
  -ms-overflow-style: none !important; /* IE 和 Edge */
}

/* 隐藏 WebKit 浏览器的滚动条 - 更彻底的隐藏 */
.scroll-list::-webkit-scrollbar {
  display: none !important;
  width: 0 !important;
  height: 0 !important;
  background: transparent !important;
  opacity: 0 !important;
}

.scroll-list::-webkit-scrollbar-track {
  display: none !important;
  background: transparent !important;
}

.scroll-list::-webkit-scrollbar-thumb {
  display: none !important;
  background: transparent !important;
}

.form-container {
  padding: 0;
}

.form-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 48rpx;
  display: block;
}

.form-item {
  background-color: #F9F9F9;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
  line-height: 1.5;
}

.required {
  position: relative;
}

.required::after {
  content: '*';
  color: #f56565;
  margin-left: 8rpx;
}

.form-input {
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx;
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  background-color: #fff;
  line-height: 1.5;
}

.form-input:focus {
  border-color: #40B2E6;
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(64, 178, 230, 0.1);
}

.form-textarea {
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx;
  width: 100%;
  min-height: 200rpx;
  box-sizing: border-box;
  resize: none;
  background-color: #fff;
  line-height: 1.6;
}

.form-textarea:focus {
  border-color: #40B2E6;
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(64, 178, 230, 0.1);
}

/* 选择器样式 */
.picker-container {
  margin-top: 16rpx;
}

.picker-input {
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  padding: 24rpx;
  width: 100%;
  min-height: 88rpx;
  box-sizing: border-box;
  background-color: #fff;
  line-height: 1.5;
  display: flex;
  align-items: center;
}

.radio-group {
  margin-top: 8px;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 32px;
}

.radio-item text {
  margin-left: 6px;
  font-size: 14px;
  color: #4a5568;
}

/* 类型显示样式 */
.type-display {
  margin-top: 16rpx;
  padding: 24rpx;
  background-color: #fff;
  border: 1rpx solid #e2e8f0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
}

.type-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.5;
}

.form-submit {
  margin-top: 64rpx;
  margin-bottom: 48rpx;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(180deg, #3759C7 0%, #5273D2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(55, 89, 199, 0.3);
  transition: all 0.3s ease;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  line-height: 1;
}

.submit-button:active {
  background: linear-gradient(180deg, #2d4ab3 0%, #4562c0 100%);
  transform: scale(0.98);
}

.submit-button::after {
  border: none !important;
}

/* 上传组件样式 */
.upload-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 16rpx;
}

/* 封面图预览样式 */
.cover-preview {
  display: flex;
  align-items: center;
  gap: 40rpx;
  margin-bottom: 40rpx;
}

.cover-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  border: 1px solid #e5e5e5;
  background-color: #fafafa;
  object-fit: cover;
}

.cover-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.change-cover-btn,
.delete-cover-btn {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: none;
  transition: all 0.3s ease;
  outline: none;
  -webkit-appearance: none;
  appearance: none;
  z-index: 10;
  cursor: pointer;
}

.change-cover-btn:active {
  transform: scale(0.98);
  background-color: #cf1322;
}

.delete-cover-btn:active {
  transform: scale(0.98);
  background-color: #cf1322;
}

/* 图片列表样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

/* 图片项样式 */
.image-item {
  position: relative;
  width: 168rpx;
  height: 168rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1px solid #e5e5e5;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.image-item:active {
  transform: scale(0.98);
}

.list-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 图片删除按钮 */
.image-delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 69, 69, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.image-delete-btn:active {
  transform: scale(0.9);
  background-color: rgba(255, 69, 69, 1);
}

.delete-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 图片数量提示 */
.image-count {
  font-size: 24rpx;
  color: #999;
  align-self: flex-start;
  margin-top: 16rpx;
  margin-left: 8rpx;
}

/* 上传按钮样式 */
.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 168rpx;
  height: 168rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  background-color: #fafafa;
  cursor: pointer;
  transition: all 0.3s ease;
}

.upload-btn:active {
  transform: scale(0.98);
  border-color: #ff4d4f;
  background-color: #fff5f5;
}

.upload-icon {
  font-size: 52rpx;
  color: #888;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.upload-btn:active .upload-icon {
  color: #ff4d4f;
  transform: scale(1.1);
}

.upload-text {
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s ease;
}

.upload-btn:active .upload-text {
  color: #ff4d4f;
}

/* 位置选择器样式 */
.location-selector {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.location-input {
  flex: 1;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.select-location-btn {
  width: 200rpx;
  height: 88rpx;
  background: linear-gradient(180deg, #3759C7 0%, #5273D2 100%);
  color: #fff;
  font-size: 28rpx;
  border: none;
  border-top-right-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  line-height: 1;
}

.select-location-btn:active {
  background: linear-gradient(180deg, #2d4ab3 0%, #4562c0 100%);
  transform: scale(0.98);
}

.select-location-btn::after {
  border: none !important;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .form-container {
    padding: 16px 12px 0;
  }
  
  .form-item {
    padding: 12px;
  }
  
  .form-input,
  .form-textarea {
    padding: 10px;
  }
  
  .upload-item {
    width: 80px;
    height: 80px;
  }
  
  .logo-preview {
    width: 100px;
    height: 100px;
  }
  
  .upload-btn {
    width: 80px;
    height: 80px;
  }
}
