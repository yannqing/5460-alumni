/* pages/enterprise/my-enterprise/my-enterprise.wxss */
.page {
  background-color: transparent;
  position: relative;
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.group_7 {
  width: 714rpx;
  flex: 1;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  margin: 34rpx 0 20rpx 18rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.scroll-list {
  flex: 1;
  width: 100%;
  min-height: 0;
  position: relative;
  z-index: 0;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

.loading-container text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

.empty-container text {
  font-size: 28rpx;
  color: #999;
}

/* 企业列表 */
.places-list {
  width: 100%;
}

.place-item {
  background-color: #F9F9F9;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.place-item:active {
  transform: scale(0.98);
  background-color: #F0F0F0;
}

.place-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.place-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 24rpx;
  line-height: 1.4;
}

.review-status {
  font-size: 24rpx;
  color: #fff;
  background-color: #40B2E6;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  white-space: nowrap;
  font-weight: 500;
}

.place-info {
  width: 100%;
}

.place-detail-item {
  display: flex;
  margin-bottom: 8px;
  align-items: flex-start;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  min-width: 160rpx;
  flex-shrink: 0;
  line-height: 1.5;
}

.detail-value {
  font-size: 28rpx;
  color: #666;
  flex: 1;
  line-height: 1.6;
  word-break: break-word;
}

.recommended-text {
  font-size: 28rpx;
  color: #f56565;
  font-weight: 500;
}

/* 申请企业按钮 */
.apply-button-container {
  width: 714rpx;
  padding: 30rpx;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  margin: 34rpx 0 20rpx 18rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
  box-sizing: border-box;
  overflow: hidden;
}

.apply-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(180deg, #3759C7 0%, #5273D2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(55, 89, 199, 0.3);
  transition: all 0.3s ease;
  padding: 0 !important;
  margin: 0 !important;
  box-sizing: border-box;
  line-height: 1;
  -webkit-appearance: none;
  appearance: none;
}

.apply-button::after {
  border: none !important;
}

.apply-button:active {
  background: linear-gradient(180deg, #2d4ab3 0%, #4562c0 100%);
  transform: scale(0.98);
}

