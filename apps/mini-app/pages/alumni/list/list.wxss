/* pages/alumni/list/list.wxss */

/* 页面容器 */
page {
  background: #F5F5F5;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
}

view, text, scroll-view, picker, input, button, image {
  box-sizing: border-box;
}

.container {
  width: 100%;
  height: 100vh;
  background: #F5F5F5;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 固定顶部区域 */
.fixed-header {
  position: relative;
  z-index: 100;
  background: #3F61CA;
  flex-shrink: 0;
}

/* 固定顶部背景 */
.fixed-top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #3F61CA;
  z-index: -1;
}

/* 顶部图片 */
.top-image-container {
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 8;
  position: relative;
}

.top-image {
  width: 529.49rpx;
  height: 90.3rpx;
  border-radius: 12rpx;
}

/* 列表滚动区域 */
.list-scroll-view {
  flex: 1;
  width: 100%;
  background: #F5F5F5;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 26rpx;
  box-shadow: none;
  border-bottom: none !important;
  margin-bottom: 30rpx;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  border-radius: 21.74rpx;
  padding: 16rpx 30rpx;
  height: 74.28rpx;
  background: #304BA0;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-sizing: border-box;
  outline: none;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #FFFFFF;
  font-family: 'PingFang SC', sans-serif;
  border: none;
  outline: none;
  background: transparent;
}

.search-input:focus {
  border: none;
  outline: none;
  box-shadow: none;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.search-left-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
  background: transparent;
}

.search-button {
  width: 128.62rpx;
  height: 45.29rpx;
  background-color: #66B3FD;
  color: #FFFFFF;
  font-size: 24rpx;
  border-radius: 50rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  font-family: 'PingFang SC', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 筛选区域 */
.filter-section {
  display: flex;
  align-items: center;
  padding: 0 30rpx 20rpx;
  margin-bottom: 0;
  background: #F5F5F5;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-bottom: none !important;
  border-top: none !important;
  position: relative;
  z-index: 1;
  min-height: 85rpx;
  justify-content: space-around;
}

.filter-item {
  flex: 1;
  text-align: center;
  font-size: 25.36rpx;
  color: #111313;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 0 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
  position: relative;
}

.filter-arrow {
  font-size: 25.36rpx;
  color: #111313;
}

/* 修复 picker 组件默认下划线问题 - 更全面的选择器 */
picker {
  border-bottom: none !important;
  outline: none !important;
  background: transparent !important;
  line-height: normal !important;
  height: auto !important;
  padding: 0 !important;
  margin: 0 !important;
  appearance: none !important;
  -webkit-appearance: none !important;
}

/* 确保 picker 内部 text 元素没有下划线 */
picker text {
  border-bottom: none !important;
  outline: none !important;
  background: transparent !important;
  line-height: normal !important;
  height: auto !important;
  padding: 0 !important;
  margin: 0 !important;
}

/* 修复 picker 组件可能的伪元素下划线 */
picker::after {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

picker::before {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

/* 确保整个筛选区域没有意外的边框或下划线 */
.filter-section::after {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

.filter-section::before {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

/* 确保 header-container 没有边框 */
.header-container::after {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

.header-container::before {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

/* 特别针对可能出现下划线的元素 */
view, text, picker, input, button, image, navigator {
  border-bottom: none !important;
  outline: none !important;
}

/* 特别针对筛选区域的元素 */
.filter-section view,
.filter-section text,
.filter-section picker,
.filter-section input {
  border-bottom: none !important;
  outline: none !important;
}

.filter-item view,
.filter-item text,
.filter-item picker {
  border-bottom: none !important;
  outline: none !important;
}

/* 筛选弹窗 */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 8;
}

.filter-options-panel {
  position: fixed;
  top: 200rpx;
  left: 0;
  right: 0;
  background-color: #ffffff;
  z-index: 9;
  padding: 20rpx 0;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.08);
}

.option-item {
  padding: 22rpx 40rpx;
  font-size: 28rpx;
  color: #666666;
}

.option-item.active {
  color: #40B2E6;
  font-weight: 600;
}

/* 校友列表 */
.alumni-list {
  padding: 30rpx 30rpx 20rpx;
  background-color: #F5F5F5;
  min-height: 100%;
  background: #F5F5F5;
  position: relative;
  z-index: 0;
}

/* 底部安全区域 */
.bottom-safe-area {
  height: env(safe-area-inset-bottom);
  padding-bottom: 40rpx;
}

.alumni-card {
  background-color: #FCFCFC;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 6rpx;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.alumni-avatar {
  width:130rpx;
  height:130rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  display: block;
  margin: 0;
  padding:0;
  /* 新增以下样式确保图片占满容器 */
  object-fit: cover; /* 关键：强制图片覆盖整个容器 */
  background-size: cover;
  background-position: center;
}

/* 列表页默认头像：增大 5rpx 以更好占满圆形容器 */
.alumni-avatar.default-avatar {
  width: 130rpx;
  height: 130rpx;
}

.card-info {
  flex: 1;
  min-width: 0;
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  font-family: 'PingFang SC', 'PingFang SC Semibold', sans-serif;
  color: #111313;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cert-badge-image {
  height: 34rpx;
  flex-shrink: 0;
  display: block;
}

/* 学校和地点信息展示 */
.meta-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
  width: 100%;
  overflow: hidden;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-weight: 500;
  color: #999999;
  min-width: 0;
  flex: 1.2;
}

.location-item {
  flex: 0.8;
}

.truncate {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.school-location-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-weight: 500;
  color: #999999;
}

/* 关注按钮在城市和地点下面一行展示 */
.action-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 25rpx;
}

.card-action {
  margin-right: 16rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.card-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #999999;
}

.stat-item {
  display: flex;
  align-items: center;
}

.follow-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #40B2E6 0%, #6BC5ED 100%);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.follow-btn.followed {
  background: transparent;
  border: 2rpx solid #40B2E6 !important;
  color: #40B2E6;
}

/* 加载状态 */
.loading-text {
  text-align: center;
  padding: 40rpx 0;
  color: #666666;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #666666;
  font-size: 26rpx;
}
