.promotion-container {
  min-height: 100vh;
  background: #f7f8fa;
}

.loading-wrap {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.promotion-body {
  padding-bottom: 30rpx;
}

.hero-card {
  position: relative;
  height: 400rpx;
}

.hero-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%);
}

.hero-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.hero-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
}

.hero-text {
  color: #fff;
}

.hero-title {
  font-size: 34rpx;
  font-weight: 600;
}

.hero-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  margin-top: 6rpx;
}

.card {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 30rpx rgba(35, 39, 47, 0.08);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  width: 180rpx;
  color: #999;
  font-size: 26rpx;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.description {
  line-height: 1.7;
}

.link {
  color: #40B2E6;
}

.empty-state {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

