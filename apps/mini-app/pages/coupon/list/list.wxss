/* pages/coupon/list/list.wxss */
.page {
  background-color: transparent;
  position: relative;
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 分类导航栏卡片 */
.group_tabs {
  width: 714rpx;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  margin: 10rpx 0 20rpx 18rpx;
  padding: 20rpx 30rpx 24rpx 30rpx;
  box-sizing: border-box;
  flex-shrink: 0;
}

/* 列表卡片 */
.group_7 {
  width: 714rpx;
  flex: 1;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  margin: 0 0 20rpx 18rpx;
  padding: 30rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.scroll-list {
  flex: 1;
  width: 100%;
  min-height: 0;
  position: relative;
  z-index: 0;
}

.tabs {
  width: 100%;
  height: 65rpx;
  flex-direction: row;
  display: flex;
  margin: 0;
  gap: 20rpx;
}

.tab-item {
  flex: 1;
  background-color: transparent;
  border-radius: 14rpx;
  height: 65rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(0,0,0,1);
  text-align: center;
  white-space: nowrap;
  line-height: 36rpx;
}

.tab-item.active {
  background-color: rgba(207,219,255,1.000000);
  color: rgba(8,61,231,1);
}

.coupon-list {
  padding: 0;
  background-color: transparent;
}

.coupon-item {
  margin-bottom: 24rpx;
}

.coupon-card {
  position: relative;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #40B2E6, #6BC5ED);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.3);
  min-height: 180rpx;
}

.coupon-left-section {
  flex-shrink: 0;
  width: 180rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  color: #fff;
}

.coupon-discount-big {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.coupon-label-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.coupon-divider-vertical {
  width: 2rpx;
  height: 120rpx;
  background: repeating-linear-gradient(
    to bottom,
    transparent,
    transparent 8rpx,
    rgba(255, 255, 255, 0.5) 8rpx,
    rgba(255, 255, 255, 0.5) 16rpx
  );
  flex-shrink: 0;
}

.coupon-right-section {
  flex: 1;
  padding: 30rpx 24rpx;
  color: #fff;
  min-width: 0;
}

.coupon-title-main {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-merchant-name {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.coupon-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 22rpx;
  opacity: 0.9;
}

.coupon-time-text {
  flex: 1;
}

.coupon-stock-text {
  white-space: nowrap;
  margin-left: 16rpx;
}

/* 状态标签：优惠券卡片右上角 */
.coupon-status-tag {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  padding: 6rpx 16rpx;
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 20rpx;
  z-index: 10;
}

/* 不同状态不同颜色：1-未使用 2-已使用 3-已过期 4-已作废 */
.coupon-status-tag.status-1 {
  background-color: #19be6b;
}

.coupon-status-tag.status-2 {
  background-color: #999999;
}

.coupon-status-tag.status-3 {
  background-color: #ff694a;
}

.coupon-status-tag.status-4 {
  background-color: #c0c0c0;
}

.coupon-stock-bar {
  width: 100%;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.stock-progress-bar {
  height: 100%;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.coupon-action-btn {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 12rpx 32rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  white-space: nowrap;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  min-height: 400rpx;
  background-color: transparent !important;
}

.empty-placeholder {
  color: #999 !important;
  font-size: 28rpx !important;
  line-height: 40rpx !important;
  text-align: center !important;
  background: none !important;
  background-color: transparent !important;
  border: none !important;
  border-radius: 0 !important;
  padding: 0 !important;
  margin: 0 !important;
  display: inline-block !important;
  width: auto !important;
  height: auto !important;
  min-width: auto !important;
  min-height: auto !important;
  align-items: normal !important;
  justify-content: normal !important;
}
