/* pages/audit/enterprise/index.wxss */
.page {
  background-color: transparent;
  width: 750rpx;
  height: calc(100vh - 190.22rpx);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.page .group_5 {
  width: 714rpx;
  min-height: auto;
  margin: 47rpx 0 0 18rpx;
  padding: 38rpx 43rpx 27rpx 43rpx;
  flex-shrink: 0;
}

.group_5 {
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex-shrink: 0;
}

.group_5 .text_14 { font-size: 29rpx; font-weight: 600; color: rgba(0,0,0,1); line-height: 40rpx; }
.group_5 .label_text { font-size: 25rpx; color: rgba(0,0,0,0.6); margin-top: 16rpx; display: block; line-height: 36rpx; }
.group_5 .text-wrapper_8 {
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #E0E0E0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-top: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.group_5 .text_15 { flex: 1; font-size: 28rpx; color: rgba(0,0,0,0.85); line-height: 36rpx; overflow: hidden; text-overflow: ellipsis; }
.group_5 .text-wrapper_8::after { content: 'â–¼'; color: #999; font-size: 20rpx; margin-left: 10rpx; }

.group_7 {
  width: 714rpx;
  flex: 1;
  max-height: 55vh;
  min-height: 0;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  margin: 34rpx 0 20rpx 18rpx;
  padding: 38rpx 43rpx 27rpx 43rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.list-header { margin-bottom: 16rpx; flex-shrink: 0; }
.group_7 .text_20 { font-size: 29rpx; font-weight: 600; color: rgba(0,0,0,1); line-height: 40rpx; }
.scroll-list { width: 100%; flex-shrink: 0; }

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-block { padding: 16rpx 0 60rpx; text-align: center; }
.empty-text { font-size: 28rpx; color: #999; }

.enterprise-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-bottom: 16rpx;
}

.enterprise-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  border: 1rpx solid #f0f0f0;
}

.enterprise-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.enterprise-name {
  font-size: 29rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.enterprise-status {
  padding: 8rpx 16rpx;
  border-radius: 14rpx;
  font-size: 24rpx;
  flex-shrink: 0;
}

.enterprise-status.pending { background-color: #fff7e6; color: #fa8c16; }
.enterprise-status.approved { background-color: #f6ffed; color: #52c41a; }
.enterprise-status.rejected { background-color: #fff2f0; color: #ff4d4f; }
.enterprise-status.canceled { background-color: #f5f5f5; color: #999; }

.enterprise-info {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
  font-size: 25rpx;
}

.info-label { color: #999; width: 140rpx; flex-shrink: 0; }
.info-value { color: #333; flex: 1; line-height: 1.4; }

.audit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.audit-btn {
  padding: 12rpx 28rpx;
  border-radius: 8rpx;
  font-size: 25rpx;
  min-width: 140rpx;
  text-align: center;
}

.approve-btn {
  background-color: #1890ff;
  color: #fff;
  border: none;
}

.reject-btn {
  background-color: rgba(255,77,79,0.12);
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.audit-btn::after { border: none; }

.alumni-association-picker {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 10000;
}

.picker-overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0,0,0,0.5);
}

.picker-content {
  position: absolute;
  bottom: 0; left: 0; right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 70vh;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title { font-size: 32rpx; font-weight: 600; color: #333; }
.picker-cancel { font-size: 28rpx; color: #999; }

.picker-list {
  max-height: calc(50vh + 40px);
  overflow-y: auto;
  padding: 0 30rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-name { font-size: 28rpx; color: #333; }
.item-check { font-size: 32rpx; color: #52c41a; font-weight: 600; }

.picker-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
