/* pages/audit/enterprise/index.wxss */

/* 页面整体样式 */
.enterprise-audit-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 表单卡片样式 */
.form-card {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
}

/* 校友会选择器样式 */
.alumni-association-selector {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border: 1rpx solid #e8e8e8;
}

.selector-label {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.selector-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 企业列表样式 */
.enterprise-list {
  padding: 20rpx;
}

/* 企业项样式 */
.enterprise-item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.enterprise-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.05);
}

/* 企业头部样式 */
.enterprise-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.enterprise-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 状态标签样式 */
.enterprise-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.enterprise-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.enterprise-status.approved {
  background-color: #d4edda;
  color: #155724;
}

.enterprise-status.rejected {
  background-color: #f8d7da;
  color: #721c24;
}

.enterprise-status.canceled {
  background-color: #e2e3e5;
  color: #383d41;
}

/* 企业信息样式 */
.enterprise-info {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.enterprise-info:last-child {
  margin-bottom: 20rpx;
}

/* 审核操作按钮样式 */
.audit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.audit-btn {
  padding: 14rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  min-width: 160rpx;
  text-align: center;
}

.approve-btn {
  background-color: #40B2E6;
  color: #fff;
  border: none;
}

.reject-btn {
  background-color: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.approve-btn:active {
  background-color: #3399cc;
}

.reject-btn:active {
  background-color: #fff2f0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

/* 空状态样式 */
.empty-state {
  background-color: #fff;
  padding: 80rpx 20rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

/* 加载中样式 */
.loading-state {
  background-color: #fff;
  padding: 40rpx 20rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 校友会选择器弹窗样式 */
.alumni-association-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  max-height: 70vh;
  overflow: hidden;
  z-index: 10000;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-cancel {
  font-size: 28rpx;
  color: #999;
}

.picker-list {
  max-height: 60vh;
  overflow-y: auto;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.picker-item:active {
  background-color: #f5f5f5;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.item-check {
  font-size: 32rpx;
  color: #40B2E6;
  font-weight: 600;
}

.picker-empty {
  padding: 60rpx 20rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 响应式样式 */
@media (max-width: 375px) {
  .form-card {
    margin: 10rpx;
    padding: 20rpx;
  }
  
  .form-title {
    font-size: 28rpx;
    margin-bottom: 20rpx;
  }
  
  .enterprise-item {
    margin-bottom: 15rpx;
    padding: 20rpx;
  }
  
  .enterprise-name {
    font-size: 28rpx;
  }
  
  .info-label {
    font-size: 24rpx;
    width: 120rpx;
  }
  
  .info-value {
    font-size: 24rpx;
  }
}