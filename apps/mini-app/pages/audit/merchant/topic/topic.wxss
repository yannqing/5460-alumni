/* pages/audit/merchant/topic/topic.wxss */
.topic-management-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.picker-container {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.picker {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.picker:active {
  background-color: #f8f8f8;
}

.picker-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.empty-container {
  padding: 40rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.picker[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

.publish-btn-container {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.publish-btn {
  width: 100%;
  background-color: #667eea;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 10rpx;
  padding: 20rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.publish-btn:hover {
  background-color: #5a6fd8;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.publish-btn:active {
  transform: scale(0.98);
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 1000;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  cursor: pointer;
}

.modal-close:active {
  color: #666;
}

.modal-content {
  padding: 30rpx;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #667eea;
  background-color: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #667eea;
  background-color: #fff;
}

/* 时间选择器样式 */
.form-picker {
  width: 100%;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.picker-content:active {
  background-color: #e8e8e8;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 上传容器样式 */
.upload-container {
  display: flex;
  flex-direction: column;
}

/* 图片列表样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 1rpx solid #eee;
}

.list-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 上传按钮样式 */
.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  cursor: pointer;
  transition: all 0.3s ease;
}

.upload-btn:hover {
  border-color: #667eea;
  background-color: #f0f4ff;
}

.upload-btn:active {
  transform: scale(0.98);
}

.upload-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 22rpx;
  color: #666;
}

/* 图片数量提示 */
.image-count {
  font-size: 24rpx;
  color: #999;
  align-self: flex-start;
}

/* 图片删除按钮 */
.image-delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 69, 69, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(255, 69, 69, 0.3);
  transition: all 0.3s ease;
}

.image-delete-btn:active {
  transform: scale(0.9);
  background-color: rgba(255, 69, 69, 1);
}

.delete-icon {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

/* 上传中状态 */
.image-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
}

.image-loading .loading-text {
  color: #fff;
  font-size: 24rpx;
}

/* 图片项样式增强，添加相对定位以便删除按钮和上传中状态定位 */
.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 1rpx solid #eee;
}

/* 单选按钮样式 */
.radio-group {
  display: flex;
  align-items: center;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
}

.radio-item text {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 位置选择按钮样式 */
.location-btn {
  width: 100%;
  background-color: #f0f4ff;
  color: #667eea;
  font-size: 28rpx;
  border: 1rpx solid #667eea;
  border-radius: 10rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.location-btn:active {
  background-color: #e0e8ff;
  transform: scale(0.98);
}

/* 坐标信息样式 */
.coordinate-info {
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
}

.coordinate-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.coordinate-text:last-child {
  margin-bottom: 0;
}

/* 位置选择器样式 */
.location-selector {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.location-input {
  flex: 1;
  background-color: #f9f9f9;
  color: #999;
}

.select-location-btn {
  background-color: #667eea;
  color: #fff;
  font-size: 28rpx;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  transition: all 0.3s ease;
}

.select-location-btn:active {
  background-color: #5a6fd8;
  transform: scale(0.98);
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 10rpx;
  margin: 0 10rpx;
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #667eea;
  color: #fff;
}

.cancel-btn:active {
  background-color: #e8e8e8;
}

.confirm-btn:active {
  background-color: #5a6fd8;
}

/* 时间滑动选择器样式 */
.time-picker-view {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.picker-item {
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
}

.time-display {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  padding: 10rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}

/* 活动列表相关样式 */
.activity-section {
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

/* 筛选条件样式 */
.filter-container {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.filter-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.filter-row {
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.filter-row .filter-item {
  flex: 1;
  margin-bottom: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.filter-input {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.filter-picker {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.filter-picker::after {
  content: '▼';
  font-size: 20rpx;
  color: #999;
}

.filter-btn-row {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.filter-btn {
  padding: 0 30rpx;
  height: 70rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  transition: all 0.3s ease;
}

.search-btn {
  background-color: #667eea;
  color: #fff;
}

.search-btn:active {
  background-color: #5a6fd8;
  transform: scale(0.98);
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #eee;
}

.reset-btn:active {
  background-color: #e8e8e8;
  transform: scale(0.98);
}

/* 活动列表样式 */
.activity-list-container {
  margin-top: 20rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.activity-item:active {
  background-color: #f8f8f8;
  transform: translateY(1rpx);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}

.activity-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  min-width: 120rpx;
}

.info-value {
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity-footer {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  align-items: center;
  justify-content: space-between;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background-color: #f0f0f0;
  color: #666;
}

.status-tag.pass {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-tag.fail {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.edit-btn {
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background-color: #667eea;
  color: #fff;
  border: none;
  margin-left: 10rpx;
  transition: all 0.3s ease;
}

.edit-btn:active {
  background-color: #5a6fd8;
  transform: scale(0.98);
}

.delete-btn {
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background-color: #ff4d4f;
  color: #fff;
  border: none;
  margin-left: 10rpx;
  transition: all 0.3s ease;
}

.delete-btn:active {
  background-color: #cf1322;
  transform: scale(0.98);
}

/* 分页样式 */
.pagination-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.pagination-info {
  font-size: 26rpx;
  color: #666;
}

.pagination-buttons {
  display: flex;
  gap: 20rpx;
}

.page-btn {
  padding: 0 24rpx;
  height: 60rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  background-color: #fff;
  color: #666;
  transition: all 0.3s ease;
}

.page-btn:active {
  background-color: #f8f8f8;
  transform: scale(0.98);
}

.page-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* 原有样式保持不变，这里补充关键样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  z-index: 1001;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-content {
  padding: 30rpx;
}