/* pages/audit/schooloffice/detail/detail.wxss */
.schooloffice-audit-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.detail-header {
  background-color: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.detail-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.detail-status.pending {
  background-color: #ff9800;
}

.detail-status.approved {
  background-color: #52c41a;
}

.detail-status.rejected {
  background-color: #f5222d;
}

.detail-status.withdrawn {
  background-color: #999;
}

.detail-content {
  padding: 20rpx;
}

.detail-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item {
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.item-label {
  color: #999;
  margin-right: 10rpx;
}

.item-value {
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-button {
  flex: 1;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  outline: none;
}

.action-button.approve {
  background-color: #52c41a;
  color: #fff;
}

.action-button.reject {
  background-color: #f5222d;
  color: #fff;
}