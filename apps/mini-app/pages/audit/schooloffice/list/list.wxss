/* 审核列表卡片通用样式 - 按设计图还原 */
.audit-card {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 100%;
  min-height: 160rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.audit-card-pending {
  padding-bottom: 24rpx;
}

/* 第一行：头像 + 名称+状态，名称紧挨头像 */
.audit-card-top {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 100%;
}

.audit-card-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-color: #F5F5F5;
  margin-right: 16rpx;
}

.audit-card-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

/* 第二行：申请人、提交时间，占满宽度避免时间戳换行 */
.audit-card-meta-wrap {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 18rpx;
  gap: 10rpx;
  width: 100%;
}

.audit-card-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.audit-card-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 12rpx;
}

.audit-card-status {
  flex-shrink: 0;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #fff;
}

.status-approved {
  background-color: #50C820;
}

.status-pending {
  background-color: #FA9C00;
}

.status-rejected {
  background-color: #9A9A9A;
}

.audit-card-meta {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
}

.audit-card-actions {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  gap: 24rpx;
  padding-top: 20rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.audit-btn {
  width: 160rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.audit-btn-approve {
  background-color: #fff;
  border: 1px solid #4364CC;
  color: #4364CC;
}

.audit-btn-reject {
  background-color: #fff;
  border: 1px solid #B0363E;
  color: #B0363E;
}

/* 校促会选择器弹窗 */
.platform-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
}

.picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 70vh;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-cancel {
  font-size: 28rpx;
  color: #999;
}

.picker-list {
  max-height: calc(50vh + 40px);
  overflow-y: auto;
  padding: 0 30rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-check {
  font-size: 32rpx;
  color: #52c41a;
  font-weight: 600;
}

.picker-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
