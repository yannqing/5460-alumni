/* pages/audit/headquarters/list/list.wxss */

.headquarters-management-list-page {
  background-color: transparent;
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 筛选区域 */
.filter-section {
  display: flex;
  background-color: #FFFFFF;
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-radius: 20rpx;
  margin: 0 10rpx;
}

.filter-item.active {
  color: #4A8BF5;
  background-color: #F0F7FF;
  font-weight: 500;
}

/* 可滚动列表区域 */
.scroll-list {
  width: 750rpx;
  height: 0;
  flex: 1;
  position: relative;
  z-index: 0;
}

/* 校友总会列表 */
.headquarters-list {
  padding: 20rpx;
  padding-bottom: 160rpx;
}

/* 骨架屏样式 */
.skeleton-card {
  width: 710rpx;
  min-height: 180rpx;
  background-color: #FFFFFF;
  border-radius: 28.99rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.skeleton-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.skeleton-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.skeleton-title {
  width: 200rpx;
  height: 36rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.skeleton-tag {
  width: 80rpx;
  height: 32rpx;
  background-color: #f0f0f0;
  border-radius: 16rpx;
}

.skeleton-info {
  width: 100%;
  height: 28rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  margin-bottom: 16rpx;
}

.skeleton-actions {
  display: flex;
  gap: 20rpx;
}

.skeleton-btn {
  width: 120rpx;
  height: 48rpx;
  background-color: #f0f0f0;
  border-radius: 16rpx;
}

.skeleton-image {
  width: 145rpx;
  height: 145rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

/* 骨架屏闪烁动画 */
.skeleton-animate {
  animation: skeleton-loading 1.4s ease infinite;
}

@keyframes skeleton-loading {
  0% {
    background-color: #f0f0f0;
  }
  50% {
    background-color: #e0e0e0;
  }
  100% {
    background-color: #f0f0f0;
  }
}

