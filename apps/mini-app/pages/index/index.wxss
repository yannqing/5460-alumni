/* pages/index/index.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  overflow: hidden;
}

.main-scroller {
  flex: 1;
  height: 100%;
  width: 100%;
}

/* 顶部 Banner */
.header-banner {
  height: 450rpx;
  position: relative;
  z-index: 10;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-default-bg {
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #40B2E6 0%, #6BC5ED 100%);
}

.banner-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
  pointer-events: none;
}

.platform-tag {
  pointer-events: auto;
}

/* 轮播图指示器样式 */
.banner-swiper .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: rgba(255, 255, 255, 0.5);
}

.banner-swiper .wx-swiper-dot-active {
  background-color: rgba(255, 255, 255, 1);
}

.platform-tag {
  position: absolute;
  left: 30rpx;
  background-color: rgba(255, 255, 255, 0.0);
  border-radius: 30rpx;
}

.platform-logo {
  width: 130rpx;
  height: 60rpx;
  display: block;
}

/* 把 Banner 和 Nav 组合在一起的容器 */
.sticky-header-group {
  width: 100%;
  pointer-events: none; /* 穿透到内部元素 */
}

.sticky-header-group > view {
  pointer-events: auto; /* 内部元素恢复交互 */
}

/* 导航区域 */
.nav-container {
  margin: -120rpx 15rpx 0;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
  padding: 60rpx 20rpx 35rpx;
  /* 显式提升层级，确保在轮播图之上 */
  position: relative;
  z-index: 20;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  transition: all 0.25s ease-out;
}

/* 导航区域被吸顶时的状态 (已取消扩展示效，保持卡片感) */
.nav-container.fixed {
  margin-left: 15rpx;
  margin-right: 15rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  background-color: #fff;
}

.scroll-sentinel {
  height: 1rpx;
  width: 100%;
  visibility: hidden;
}

.nav-header {
  position: absolute;
  top: 0;
  left: 0;
}

.nav-title-tag {
  background-color: #38C7D4; /* 青蓝色，与主题色协调 */
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 20rpx 0 20rpx 0;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
}

.nav-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.nav-item[data-disabled="true"] {
  pointer-events: none;
}

.nav-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  /* background-color: #f9f9f9; */
  border-radius: 50%;
}

.nav-construction-tag {
  position: absolute;
  top: -12rpx;
  left: 50%;
  transform: translateX(10%);
  width: 67rpx;
  height: 27rpx;
  background: linear-gradient(90deg, #FF6B00 0%, #FFB800 100%);
  border: 1rpx solid #FFFFFF;
  border-radius: 13.5rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 16rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  line-height: 27rpx;
  text-align: center;
  opacity: 1;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.nav-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 文章列表容器：这就相当于"局部滑动"的负载区域 */
.article-container {
  background-color: #f8f8f8;
  margin-top: 0;
  position: relative;
  z-index: 5;
  min-height: calc(100vh - 200rpx); /* 确保哪怕列表短，也能触发有惯性的滑动感 */
}

/* 文章列表 */
.article-list {
  padding: 0 0 100rpx 0; /* 增加底部内边距，确保最下方内容显示全（不被底部导航遮挡） */
  background-color: #f8f8f8;
  margin-top: 0;
}

.article-item {
  background-color: #fff;
  padding: 30rpx;
  margin: 0 15rpx 20rpx;
  display: flex;
  flex-direction: column;
  border-radius: 8rpx;
}

.article-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.article-body {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar-wrapper {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  border: 1rpx solid #f0f0f0;
  overflow: hidden;
  flex-shrink: 0;
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.publish-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.article-content {
  width: 100%;
  padding-left: 0;
}

.article-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.article-desc {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-cover-wrapper {
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
  overflow: hidden;
  position: relative;
}

.article-cover {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 有子文章时，图片上的标题覆盖层 */
.article-cover-wrapper.with-title-overlay .article-cover {
  filter: brightness(0.7);
}

.cover-title-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 30rpx 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
}

.overlay-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1.4;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 子文章列表 */
.children-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.child-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.child-item:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.child-content {
  flex: 1;
  min-width: 0;
}

.child-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.child-cover-wrapper {
  width: 120rpx;
  height: 90rpx;
  border-radius: 6rpx;
  background: #e0e0e0;
  overflow: hidden;
  flex-shrink: 0;
}

.child-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.loading-more, .no-more, .empty-state {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}
