/* pages/discover/search-list/search-list.wxss */
.search-list-page {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 列表视图 */
.list-view {
  flex: 1;
  height: 0;
  background-color: #f5f5f5;
  overflow-y: auto;
}

/* 内容列表 */
.content-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  min-height: 200rpx;
}

/* 空列表提示 */
.empty-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 没有更多了提示 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 优惠卡片 */
.coupon-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.coupon-main {
  display: flex;
  gap: 20rpx;
  align-items: flex-start;
}

.coupon-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.coupon-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
  align-items: flex-start;
}

.coupon-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.coupon-distance {
  font-size: 24rpx;
  color: #666;
}

.coupon-associations-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: 100%;
}

.coupon-associations {
  display: flex;
  flex-wrap: nowrap;
  gap: 8rpx;
  overflow-x: auto;
  flex: 1;
  min-width: 0;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* IE and Edge */
}

.coupon-associations::-webkit-scrollbar {
  display: none; /* Chrome, Safari, Opera */
}

.association-tag {
  padding: 6rpx 12rpx 6rpx 6rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #666;
  white-space: nowrap;
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.association-avatar {
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.association-text {
  line-height: 22rpx;
}

.coupon-expand {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  background-color:rgb(176, 208, 235);
  border-radius: 50%;
}

.expand-icon {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.coupon-buttons {
  width: 100%;
  white-space: nowrap;
}

.coupon-btn-wrapper {
  display: inline-flex;
  gap: 12rpx;
  flex-direction: row;
}

.coupon-btn {
  padding: 32rpx 20rpx;
  background-color:rgb(45, 192, 123);
  border-radius: 8rpx;
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  white-space: nowrap;
  flex-shrink: 0;
  min-width: 280rpx;
  box-sizing: border-box;
}

.coupon-btn-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4rpx;
  flex-shrink: 0;
}

.coupon-discount {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.2;
}

.coupon-type {
  font-size: 22rpx;
  color: #fff;
  line-height: 1.2;
}

.coupon-btn-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.coupon-btn-right {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4rpx;
  flex: 1;
  min-width: 0;
}

.coupon-title {
  font-size: 24rpx;
  color: #fff;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-expire {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.2;
}

.coupon-rating {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 校友/内容卡片 */
.content-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.card-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.card-distance {
  font-size: 24rpx;
  color: #666;
}

.card-signature {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-association {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.card-tag {
  font-size: 22rpx;
  color: #4a90e2;
  background-color: #e8f4fd;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
  width: fit-content;
}

.card-action {
  flex-shrink: 0;
}

.follow-btn {
  padding: 12rpx 24rpx;
  background-color: #4a90e2;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  text-align: center;
}

