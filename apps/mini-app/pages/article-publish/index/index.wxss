/* pages/article-publish/index/index.wxss */

/* 滚动容器 */
.scroll-container {
  width: 750rpx;
  height: calc(100vh - 190.22rpx);
  background-color: #F7F7FE;
}

.article-publish-page {
  min-height: 100%;
  background-color: #F7F7FE;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.form-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.title-input {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  width: 100%;
}

.placeholder {
  color: #cccccc;
}

.cover-image-container {
  position: relative;
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.add-cover-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 80rpx;
  color: #999999;
  background-color: rgba(255, 255, 255, 0.8);
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-text {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.radio-group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 40rpx;
}

.radio-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.radio-label {
  font-size: 28rpx;
  color: #333333;
}

/* 发布者选择器样式 */
.publisher-selector {
  border: 2rpx solid #e0e0e0;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  cursor: pointer;
}

.selector-label {
  color: #333;
  flex: 1;
}

.selector-arrow {
  color: #999;
  font-size: 20rpx;
}

/* 发布者选择器弹窗 */
.publisher-picker {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.picker-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 70vh;
  overflow: hidden;
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.picker-cancel {
  font-size: 28rpx;
  color: #999;
  cursor: pointer;
}

/* 搜索框样式 */
.search-group {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.search-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-placeholder {
  color: #999;
}

.picker-list {
  max-height: calc(50vh + 40px);
  overflow-y: auto;
  padding: 0 30rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  cursor: pointer;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-check {
  font-size: 32rpx;
  color: #007aff;
  font-weight: 600;
}

.picker-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 校友搜索结果项样式 */
.alumni-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.alumni-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.alumni-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.alumni-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.alumni-school {
  font-size: 24rpx;
  color: #999;
}

.content-textarea {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  width: 100%;
  min-height: 400rpx;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

/* 文章链接输入框样式 */
.link-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
}

.publish-btn-container {
  padding: 20rpx;
  margin-top: 40rpx;
}

.publish-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 20rpx;
  border: none;
  width: 100%;
}

.publish-btn::after {
  border: none;
}
