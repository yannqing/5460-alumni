.container {
  padding: 30rpx;
  background-color: #F7F7FE;
  min-height: 100vh;
  box-sizing: border-box;
}

.article-header {
  margin-bottom: 30rpx;
}

.user-info-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: space-between;
}

.user-name {
  font-size: 35rpx;
  font-weight: 600;
  color: rgba(0,0,0,1);
  flex-shrink: 0;
  font-family: PingFangSC-Semibold;
}

.publish-time {
  font-size: 26rpx;
  color: rgba(0,0,0,0.6);
  flex-shrink: 0;
  font-family: PingFangSC-Regular;
}

.article-title-wrapper {
  margin-bottom: 30rpx;
}

.article-title {
  font-size: 36rpx;
  font-weight: 600;
  color: rgba(0,0,0,1);
  line-height: 1.4;
  font-family: PingFangSC-Semibold;
}

.article-cover-wrapper {
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.08);
  width: calc(100% - 50rpx);
  margin-left: 25rpx;
  margin-right: 25rpx;
  background: #f0f0f0;
  position: relative;
}

.article-cover {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 8rpx;
}

.article-content {
  font-size: 32rpx;
  line-height: 1.8;
  color: rgba(0,0,0,0.85);
  margin-bottom: 30rpx;
  font-family: PingFangSC-Regular;
}

.article-link-wrapper {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.05);
}

.article-link-label {
  color: rgba(0,0,0,0.6);
  margin-right: 10rpx;
  font-family: PingFangSC-Regular;
}

.article-link {
  color: #4A8BF5;
  word-break: break-all;
  font-family: PingFangSC-Regular;
}

.loading-state, .error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  flex: 1;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
}

.error-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
  font-family: PingFangSC-Regular;
}

.edit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 300rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #4A8BF5 0%, #5C9DFD 100%);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0px 8px 24px 0px rgba(74, 139, 245, 0.4);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.edit-btn::after {
  border: none;
}