/* 容器 */
.container {
  min-height: 100vh;
  background-color: #F7F7FE;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 骨架屏样式 */
.skeleton-container {
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
}

.skeleton-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.skeleton-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #f0f0f0;
  margin-right: 20rpx;
}

.skeleton-user-info {
  flex: 1;
}

.skeleton-name {
  width: 160rpx;
  height: 32rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  margin-bottom: 12rpx;
}

.skeleton-time {
  width: 240rpx;
  height: 24rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
}

.skeleton-title {
  width: 80%;
  height: 40rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 32rpx;
}

.skeleton-cover {
  width: 100%;
  height: 360rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.skeleton-content {
  padding-top: 16rpx;
}

.skeleton-line {
  width: 100%;
  height: 28rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
}

.skeleton-animate {
  animation: skeleton-loading 1.4s ease infinite;
}

@keyframes skeleton-loading {
  0% { background-color: #f0f0f0; }
  50% { background-color: #e0e0e0; }
  100% { background-color: #f0f0f0; }
}

/* 主卡片 */
.main-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

/* 发布者区域 */
.publisher-section {
  display: flex;
  align-items: center;
}

.publisher-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #f0f0f0;
  flex-shrink: 0;
}

.publisher-avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4A8BF5 0%, #5C9DFD 100%);
}

.placeholder-icon {
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: 600;
}

.publisher-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.publisher-name {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
  font-family: PingFangSC-Semibold;
  margin-bottom: 6rpx;
}

.publish-time {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.45);
  font-family: PingFangSC-Regular;
}

/* 审核状态标签 */
.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.status-tag.status-pending {
  background-color: rgba(250, 156, 0, 0.1);
}

.status-tag.status-approved {
  background-color: rgba(80, 200, 32, 0.1);
}

.status-tag.status-rejected {
  background-color: rgba(154, 154, 154, 0.1);
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending .status-text {
  color: rgba(250, 156, 0, 1);
}

.status-approved .status-text {
  color: rgba(80, 200, 32, 1);
}

.status-rejected .status-text {
  color: rgba(154, 154, 154, 1);
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.06);
  margin: 28rpx 0;
}

/* 标题区域 */
.title-section {
  margin-bottom: 28rpx;
}

.article-title {
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1.5;
  font-family: PingFangSC-Semibold;
}

/* 封面图区域 */
.cover-section {
  margin-bottom: 28rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.article-cover {
  width: 100%;
  height: auto;
  display: block;
}

/* 内容区域 */
.content-section {
  font-size: 30rpx;
  line-height: 1.8;
  color: rgba(0, 0, 0, 0.75);
  font-family: PingFangSC-Regular;
}

/* 链接区域 */
.link-section {
  margin-top: 32rpx;
  padding: 24rpx;
  background: rgba(74, 139, 245, 0.06);
  border-radius: 16rpx;
  display: flex;
  align-items: flex-start;
}

.link-icon-wrapper {
  width: 48rpx;
  height: 48rpx;
  background: rgba(74, 139, 245, 0.12);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.link-icon {
  font-size: 24rpx;
}

.link-content {
  flex: 1;
  overflow: hidden;
}

.link-label {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
  font-family: PingFangSC-Regular;
  display: block;
  margin-bottom: 8rpx;
}

.link-url {
  font-size: 26rpx;
  color: #4A8BF5;
  word-break: break-all;
  font-family: PingFangSC-Regular;
}

/* 子文章区域 */
.children-section {
  margin-top: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.section-title-wrapper {
  display: flex;
  align-items: center;
}

.section-indicator {
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(180deg, #4A8BF5 0%, #5C9DFD 100%);
  border-radius: 3rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
  font-family: PingFangSC-Semibold;
}

.section-count {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.45);
  font-family: PingFangSC-Regular;
}

.children-list {
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

/* 子文章卡片 */
.child-card {
  display: flex;
  padding: 28rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.child-card:last-child {
  border-bottom: none;
}

.child-card:active {
  background: rgba(0, 0, 0, 0.02);
}

.child-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-right: 20rpx;
}

.child-title {
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.85);
  font-family: PingFangSC-Medium;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.child-desc {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
  font-family: PingFangSC-Regular;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.child-meta {
  display: flex;
  align-items: center;
  margin-top: auto;
}

.child-time {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.35);
  font-family: PingFangSC-Regular;
}

.child-status {
  margin-left: 16rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.child-status.status-pending {
  background-color: rgba(250, 156, 0, 0.1);
}

.child-status.status-approved {
  background-color: rgba(80, 200, 32, 0.1);
}

.child-status.status-rejected {
  background-color: rgba(154, 154, 154, 0.1);
}

.child-status-text {
  font-size: 22rpx;
  font-weight: 500;
}

.status-pending .child-status-text {
  color: rgba(250, 156, 0, 1);
}

.status-approved .child-status-text {
  color: rgba(80, 200, 32, 1);
}

.status-rejected .child-status-text {
  color: rgba(154, 154, 154, 1);
}

.child-cover {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: #f0f0f0;
}

.child-cover.placeholder {
  background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
}

/* 更新时间 */
.update-info {
  margin-top: 24rpx;
  text-align: center;
  padding: 20rpx;
}

.update-label {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.35);
  font-family: PingFangSC-Regular;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: #FFFFFF;
  border-radius: 24rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.45);
  font-family: PingFangSC-Regular;
  margin-bottom: 32rpx;
}

.error-btn {
  padding: 16rpx 48rpx;
  background: rgba(74, 139, 245, 0.1);
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #4A8BF5;
  font-family: PingFangSC-Medium;
}

/* 底部占位 */
.bottom-placeholder {
  height: 160rpx;
}

/* 底部操作按钮区域 */
.action-btn-container {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
  display: flex;
  gap: 24rpx;
}

.action-btn {
  width: 200rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.action-btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 通过按钮 */
.approve-btn {
  background: #FFFFFF;
  border: 2rpx solid rgba(80, 200, 32, 1);
}

.approve-text {
  color: rgba(80, 200, 32, 1);
}

/* 拒绝按钮 */
.reject-btn {
  background: #FFFFFF;
  border: 2rpx solid rgba(255, 77, 79, 1);
}

.reject-text {
  color: rgba(255, 77, 79, 1);
}

/* 编辑按钮 */
.edit-action-btn {
  background: #FFFFFF;
  border: 2rpx solid rgba(67, 100, 204, 1);
}

.edit-text {
  color: rgba(67, 100, 204, 1);
}

/* 删除按钮 */
.delete-btn {
  background: #FFFFFF;
  border: 2rpx solid rgba(255, 77, 79, 1);
}

.delete-text {
  color: rgba(255, 77, 79, 1);
}

/* 弹框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.approval-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  z-index: 1001;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-content {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.form-textarea {
  width: 100%;
  padding: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 180rpx;
  resize: none;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin: 0;
  line-height: normal;
  height: auto;
}

.modal-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border: none;
}

.confirm-btn {
  background-color: #4A8BF5;
  color: #fff;
  border: none;
}

.reject-confirm-btn {
  background-color: rgba(255, 77, 79, 1) !important;
}
