/* pages/school/list/list.wxss */

/* 页面容器 */
page {
  background: #F5F5F5;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
}

view, text, scroll-view, picker, input, button, image {
  box-sizing: border-box;
}

.container {
  width: 100%;
  height: 100vh;
  background: #F5F5F5;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 屏蔽旧的固定高度逻辑 */
.main-scroller {
  flex: 1;
  width: 100%;
  height: 100%;
}

.banner-area {
  background: #3F61CA;
  width: 100%;
}

.sticky-header-container {
  background: #3F61CA;
  width: 100%;
  z-index: 100;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15); /* 默认带一点阴影，让过渡更自然 */
}

.sticky-wrapper {
  position: relative;
  width: 100%;
  background: #F5F5F5;
}



/* 顶部图片区域 */
.banner-area {
  background: #3F61CA;
  width: 100%;
}

/* 顶部图片容器点：用于计算吸顶阈值 */
.top-image-container {
  width: 100%;
  padding: 20rpx 30rpx 10rpx; /* 减小底部间距使过渡更紧凑 */
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.top-image {
  width: 529.49rpx;
  height: 90.3rpx;
  border-radius: 12rpx;
}

/* 搜索栏：优化垂直间距 */
.search-bar {
  padding: 10rpx 26rpx 20rpx;
  box-shadow: none;
  border-bottom: none !important;
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  border-radius: 21.74rpx;
  padding: 16rpx 30rpx;
  height: 74.28rpx;
  background: #304BA0;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-sizing: border-box;
  outline: none;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #FFFFFF;
  font-family: 'PingFang SC', sans-serif;
  border: none;
  outline: none;
  background: transparent;
}

.search-input:focus {
  border: none;
  outline: none;
  box-shadow: none;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.7);
}

.search-left-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
  background: transparent;
}

.search-button {
  width: 128.62rpx;
  height: 45.29rpx;
  background-color: #66B3FD;
  color: #FFFFFF;
  font-size: 24rpx;
  border-radius: 50rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  font-family: 'PingFang SC', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
}


/* 筛选区域：优化吸顶时的形状 */
.filter-section {
  display: flex;
  align-items: center;
  padding: 0 30rpx 20rpx;
  background: #F5F5F5;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
  min-height: 85rpx;
  justify-content: space-around;
  transition: border-radius 0.3s ease;
}

/* 当吸顶时，如果需要更方正的底边，可以取消圆角（可选） */
.is-sticky .filter-section {
  /* border-top-left-radius: 0; */
  /* border-top-right-radius: 0; */
}


.filter-item {
  flex: 1;
  text-align: center;
  font-size: 25.36rpx;
  color: #111313;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 0 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
  position: relative;
}

.filter-arrow {
  font-size: 25.36rpx;
  color: #111313;
}

/* 修复 picker 组件默认下划线问题 */
picker {
  border-bottom: none !important;
  outline: none !important;
  background: transparent !important;
  line-height: normal !important;
  height: auto !important;
  padding: 0 !important;
  margin: 0 !important;
  appearance: none !important;
  -webkit-appearance: none !important;
}

picker text {
  border-bottom: none !important;
  outline: none !important;
  background: transparent !important;
  line-height: normal !important;
  height: auto !important;
  padding: 0 !important;
  margin: 0 !important;
}

picker::after,
picker::before {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

.filter-section::after,
.filter-section::before {
  display: none !important;
  content: none !important;
  border-bottom: none !important;
}

/* 手动下拉刷新 */
.manual-refresher {
  width: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F5F5;
  transition: height 0.2s ease-out, opacity 0.2s;
}

.dot-container {
  display: flex;
  gap: 12rpx;
  padding: 20rpx 0;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #38C7D4;
}

.dot.animating {
  animation: dot-pulse 1s infinite ease-in-out;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes dot-pulse {
  0%, 100% { transform: scale(1); opacity: 0.3; }
  50% { transform: scale(1.5); opacity: 1; }
}

/* 列表滚动容器已融合入 main-scroller，此处仅作为占位 */
.list-scroll-view {
  width: 100%;
}


/* 学校列表 */
.association-list {
  padding: 30rpx 30rpx 20rpx;
  background-color: #F5F5F5;
  min-height: 100%;
  background: #F5F5F5;
  position: relative;
  z-index: 0;
}

/* 底部安全区域 */
.bottom-safe-area {
  height: env(safe-area-inset-bottom);
  padding-bottom: 40rpx;
}

.association-card {
  background-color: #FCFCFC;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 10rpx;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.association-icon {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 3rpx solid #e0e0e0;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-info {
  flex: 1;
  min-width: 0;
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  font-family: 'PingFang SC', 'PingFang SC Semibold', sans-serif;
  color: #111313;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.cert-badge {
  padding: 4rpx 12rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 6rpx;
  flex-shrink: 0;
}

/* 副标题 */
.card-subtitle {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-weight: 500;
  color: #666666;
  margin-bottom: 12rpx;
}

.subtitle-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 位置信息 */
.card-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-weight: 500;
  color: #999999;
  margin-bottom: 12rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

/* 标签 */
.card-tags {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.mini-tag {
  padding: 6rpx 16rpx;
  background-color: #e6f7ff;
  color: #40B2E6;
  font-size: 22rpx;
  border-radius: 6rpx;
}

.next-arrow {
  margin-left: auto;
  font-size: 32rpx;
  color: #e0e0e0;
  font-weight: 300;
}

/* 卡片底部 */
.school-info-actions {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-top: 8rpx;
}

.info-section {
  flex: 1;
  min-width: 0;
}

.action-column {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

.card-action {
  width: fit-content;
  margin-top: 15rpx;
}

.card-meta-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  width: 100%;
  overflow: hidden;
}

.card-level {
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
  flex-shrink: 0;
}

.card-location-wrap {
  display: flex;
  align-items: center;
  margin-left: 38rpx;
  flex: 1;
  min-width: 0;
}

.location-text {
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.follow-btn {
  width: 144.93rpx;
  height: 47.1rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #40B2E6 0%, #6BC5ED 100%);
  color: #ffffff;
  font-size: 24rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  line-height: 30.8rpx;
  font-weight: 500;
  border-radius: 20.83rpx;
  margin-top: 6rpx;
}

.card-footer {
  display: flex;
  align-items: center;
  padding-top: 10rpx;
}

.card-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 24rpx;
  color: #999999;
}

.stat-item {
  display: flex;
  align-items: center;
}

.follow-btn.followed {
  width: 144.93rpx;
  height: 47.1rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: 2rpx solid #40B2E6 !important;
  color: #40B2E6;
  font-size: 24rpx;
  font-family: 'PingFang SC', 'PingFang SC Medium', sans-serif;
  line-height: 30.8rpx;
  font-weight: 500;
  border-radius: 20.83rpx;
}

/* 加载状态 */
.loading-text {
  text-align: center;
  padding: 40rpx 0;
  color: #666666;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #666666;
  font-size: 26rpx;
}

.full-width {
  width: 100%;
}
