/* pages/notification/list/list.wxss */
.notification-page {
  padding: 20rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 18rpx 40rpx rgba(15, 18, 31, 0.08);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.notify-header {
  padding: 28rpx;
}

.notify-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.notify-title {
  font-size: 34rpx;
  font-weight: 600;
}

.notify-subtitle {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 6rpx;
}

.mark-read-btn {
  border-color: #d9d9d9;
  color: #666;
}

.notify-search {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 18rpx 24rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
}

.notify-search input {
  flex: 1;
  font-size: 26rpx;
}

.notify-tabs {
  display: flex;
  margin-bottom: 16rpx;
}

.notify-tab {
  padding: 10rpx 28rpx;
  border-radius: 999rpx;
  background: #fff;
  color: #666;
  margin-right: 14rpx;
  font-size: 26rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.notify-tab.active {
  background: rgba(24, 144, 255, 0.12);
  color: #1890ff;
  font-weight: 600;
}

.notification-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.notification-item {
  padding: 24rpx 28rpx;
}

.notification-item.is-read {
  opacity: 0.7;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.notification-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f1f1f;
  flex: 1;
  margin-right: 10rpx;
}

.badge {
  font-size: 22rpx;
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.12);
  border-radius: 999rpx;
  padding: 4rpx 16rpx;
}

.notification-content {
  font-size: 26rpx;
  color: #595959;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.notification-footer {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #8c8c8c;
}

.empty-state {
  text-align: center;
  color: #8c8c8c;
}

.empty-state image {
  width: 260rpx;
  margin-bottom: 12rpx;
}
