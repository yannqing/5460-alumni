/* pages/shop/detail/detail.wxss */
.shop-detail-page {
  min-height: 100vh;
  margin-top: 0;
  position: relative;
  z-index: 1;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.loading {
  font-size: 28rpx;
  color: #999;
}

/* 多图轮播 */
.shop-swiper {
  width: 100%;
  height: 500rpx;
  background-color: #f0f0f0;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 白色背景内容区域 */
.white-background-content {
  background-color: #f5f5f5;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -30rpx;
  position: relative;
  z-index: 10;
  padding-top: 10rpx;
  min-height: 800rpx;
  padding-bottom: 200rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 24rpx;
  margin: 20rpx 30rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-bottom: 24rpx;
}

/* 基础信息卡片 */
.basic-info-card {
  position: relative;
  z-index: 2;
}

/* 卡片右上角操作图标 */
.card-action-icons {
  position: absolute;
  top: -70rpx;
  right: 3rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  z-index: 10;
}

.action-icon-item {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.icon-text {
  font-size: 36rpx;
  line-height: 1;
}

.icon-text.favorited {
  color: #40B2E6;
}

.shop-header {
  margin-bottom: 32rpx;
}

.shop-avatar-row {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.shop-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
  flex-shrink: 0;
  background-color: #fff;
}

.shop-info-column {
  flex: 1;
  min-width: 0;
}

.shop-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.shop-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.certified-badge-yellow {
  padding: 4rpx 12rpx;
  background-color: rgb(226, 175, 22);
  color: #ffffff;
  border-radius: 6rpx;
  font-size: 22rpx;
  flex-shrink: 0;
  white-space: nowrap;
}

.shop-rating-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

.rating-text {
  color: #ff8a00;
  font-weight: 500;
}

.rating-desc {
  color: #999;
}

.divider {
  color: #ddd;
}

.category-text {
  color: #666;
}

/* 信息项 */
.info-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.link-text {
  color: #40B2E6;
}

.nav-text {
  font-size: 26rpx;
  color: #40B2E6;
  padding: 8rpx 20rpx;
  border: 1rpx solid #40B2E6;
  border-radius: 20rpx;
}

/* 优惠券专区 */
.coupon-section {
  margin-top: 20rpx;
}

.coupon-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.coupon-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #40B2E6, #6BC5ED);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(64, 178, 230, 0.3);
  min-height: 160rpx;
  position: relative;
  cursor: pointer;
}

.coupon-left {
  flex-shrink: 0;
  width: 140rpx;
  padding: 24rpx 20rpx;
  text-align: center;
  color: #fff;
}

.coupon-discount {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.coupon-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.coupon-divider {
  width: 2rpx;
  height: 120rpx;
  background: repeating-linear-gradient(
    to bottom,
    transparent,
    transparent 8rpx,
    rgba(255, 255, 255, 0.5) 8rpx,
    rgba(255, 255, 255, 0.5) 16rpx
  );
  flex-shrink: 0;
}

.coupon-right {
  flex: 1;
  padding: 24rpx 20rpx;
  color: #fff;
  min-width: 0;
}

.coupon-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-expire {
  font-size: 22rpx;
  opacity: 0.8;
}

.coupon-action {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.coupon-btn {
  padding: 12rpx 28rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  white-space: nowrap;
}

.coupon-btn.claimed {
  background-color: rgba(255, 255, 255, 0.5);
}

.coupon-btn.disabled {
  background-color: rgba(255, 255, 255, 0.2);
  opacity: 0.6;
}

/* 校友足迹 */
.alumni-footprint {
  margin-top: 20rpx;
}

.footprint-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.alumni-avatar-wall {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.alumni-avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
  margin-bottom: 12rpx;
}

.avatar-img.blur {
  filter: blur(4rpx);
  opacity: 0.6;
}

.avatar-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.name-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.privacy-text {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

/* 店铺动态 */
.shop-dynamics {
  margin-top: 20rpx;
}

.dynamics-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dynamic-item {
  display: flex;
  gap: 20rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.dynamic-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.dynamic-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.dynamic-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.dynamic-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.dynamic-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dynamic-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 22rpx;
  color: #999;
}

.dynamic-type {
  padding: 4rpx 12rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  color: #666;
}



/* 商家详情信息 */
.merchant-info-card {
  margin-top: 20rpx;
}

.merchant-basic-info,
.merchant-member-info,
.merchant-review-info,
.merchant-status-info,
.merchant-rating-info {
  margin-bottom: 32rpx;
}

.merchant-basic-info:last-child,
.merchant-member-info:last-child,
.merchant-review-info:last-child,
.merchant-status-info:last-child,
.merchant-rating-info:last-child {
  margin-bottom: 0;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  width: 200rpx;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  text-align: right;
  word-break: break-all;
}

/* 会员等级标签 */
.member-tier-tag {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
}

.member-tier-tag.tier-1 {
  background-color: #40B2E6;
}

.member-tier-tag.tier-2 {
  background-color: #6BC5ED;
}

.member-tier-tag.tier-3 {
  background-color: #FFB347;
}

.member-tier-tag.tier-4 {
  background-color: #FF8A00;
}

.member-tier-tag.tier-5 {
  background-color: #FF6B6B;
}

/* 审核状态标签 */
.review-status-tag {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.review-status-tag.status-0 {
  background-color: #FFB347;
  color: #fff;
}

.review-status-tag.status-1 {
  background-color: #52C41A;
  color: #fff;
}

.review-status-tag.status-2 {
  background-color: #FF4D4F;
  color: #fff;
}

/* 状态标签 */
.status-tag {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-tag.status-0 {
  background-color: #FF4D4F;
  color: #fff;
}

.status-tag.status-1 {
  background-color: #52C41A;
  color: #fff;
}

.status-tag.status-2 {
  background-color: #FFB347;
  color: #fff;
}

/* 认证标签 */
.certification-tag {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.certification-tag.certified {
  background-color: #52C41A;
  color: #fff;
}

.certification-tag.not-certified {
  background-color: #FF4D4F;
  color: #fff;
}



/* 门店列表 */
.shops-list-card {
  margin-top: 20rpx;
}

/* 表头容器 */
.section-title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 门店数量标签 */
.shop-count-tag {
  font-size: 24rpx;
  color: #40B2E6;
  font-weight: 500;
  background-color: rgba(64, 178, 230, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.shops-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.shop-item {
  padding: 24rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.shop-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.shop-item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.shop-item-type {
  font-size: 24rpx;
  color: #40B2E6;
  padding: 4rpx 16rpx;
  border: 1rpx solid #40B2E6;
  border-radius: 12rpx;
}

.shop-item-address {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.shop-item-contact {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.shop-item-status {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.shop-status-tag,
.shop-review-tag {
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.shop-status-tag.status-0,
.shop-review-tag.status-2 {
  background-color: #FF4D4F;
  color: #fff;
}

.shop-status-tag.status-1,
.shop-review-tag.status-1 {
  background-color: #52C41A;
  color: #fff;
}

.shop-status-tag.status-2 {
  background-color: #FFB347;
  color: #fff;
}

.shop-review-tag.status-0 {
  background-color: #FFB347;
  color: #fff;
}

/* 小图标 */
.info-icon-small {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.divider-small {
  color: #ddd;
  margin: 0 8rpx;
}

