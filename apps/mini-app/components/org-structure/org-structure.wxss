/* 组织结构骨架屏样式 */
.skeleton-role-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skeleton-role-name {
  width: 180rpx;
  height: 26rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
  margin-left: 12rpx;
}

.skeleton-role-count {
  width: 60rpx;
  height: 28rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 14rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}


.org-tree {
  padding: 12rpx 0;
}

.tree-node {
  margin: 12rpx 0;
}

.tree-node:last-child {
  margin-bottom: 0;
}

/* 顶级角色卡片：圆角 + 阴影 + 渐变背景 */
.level-1 .node-header {
  width: 618rpx;
  height: 101rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.05) 0%, rgba(0, 0, 0, 0) 100%);
  border-radius: 7rpx;
  box-sizing: border-box;
}

/* 子级角色：头部缩进卡片（成员区域不缩进） */
.level-2,
.level-3 {
  margin-left: 0;
}

/* 二级节点头部缩进一格 */
.level-2 .node-header {
  width: 589rpx;
  height: 101rpx;
  margin-left: 30rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.05) 0%, rgba(0, 0, 0, 0) 100%);
  border-radius: 7rpx;
  border: none;
  box-sizing: border-box;
}

/* 三级节点再多缩进一格，层级更明显 */
.level-3 .node-header {
  width: 560rpx;
  height: 101rpx;
  margin-left: 60rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.05) 0%, rgba(0, 0, 0, 0) 100%);
  border-radius: 7rpx;
  border: none;
  box-sizing: border-box;
}

.node-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 28rpx;
  box-sizing: border-box;
  position: relative;
  overflow: visible;
}

.node-title {
  position: relative;
  z-index: 10;
  flex: 1;
  min-width: 0;
  overflow: visible;
}

.role-name,
.member-count-inline {
  position: relative;
  z-index: 10;
}

.node-header:active {
  background-color: #f5f5f5;
}

.node-title {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  flex-wrap: nowrap;
  flex: 1;
  min-width: 0;
}

/* 第二级和第三级缩进图标 */
.level-2 .node-header,
.level-3 .node-header {
  position: relative;
}

.indent-icon {
  position: absolute;
  left: 0; /* 圆点中心在边框线上 */
  top: 50%;
  transform: translate(-70%, -50%); /* 让圆点中心对齐 */
  width: 39.86rpx;
  height: 18.12rpx;
  opacity: 1;
  z-index: 999; /* 层级放到最上面 */
}

/* 左侧旧的展开三角隐藏，只保留右侧箭头 */
.expand-icon {
  display: none;
}

.role-name {
