  opacity: 0.5;
  line-height: 36rpx;
  text-align: left;
  font-style: normal;
  flex-shrink: 0;
  white-space: nowrap;
}

/* 编辑功能样式 */
.edit-header {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: #40B2E6;
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.edit-btn.cancel-btn {
  background-color: #999;
}

.edit-icon {
  font-size: 28rpx;
}

.edit-text {
  font-size: 26rpx;
}

.member-edit-container {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  width: 100%;
}

.member-edit-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.member-edit-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.member-edit-input {
  display: inline-block;
  vertical-align: top;
}

.member-input {
  display: inline-block;
  padding: 8rpx 12rpx;
  border: 2rpx solid #40B2E6;
  border-radius: 8rpx;
  font-size: 26rpx;
  background-color: #fff;
  box-sizing: border-box;
  height: 56rpx;
  line-height: 40rpx;
  vertical-align: middle;
  z-index: 10;
}

.save-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  background-color: #40B2E6;
  border-radius: 50%;
  color: #fff;
  flex-shrink: 0;
}

.save-icon {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.org-member-name.edit-clickable {
  cursor: pointer;
  text-decoration: underline;
  color: #40B2E6;
}

.org-member-name.clickable {
  cursor: pointer;
  text-decoration: underline;
  color: #40B2E6;
}

.add-member-section {
  margin-top: 20rpx;
  padding: 0 28rpx;
}

.add-member-input-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.add-member-input {
  flex: 1;
  padding: 12rpx 16rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 8rpx;
