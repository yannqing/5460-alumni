  background-color: #fafafa;
}

.add-member-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #40B2E6;
  border-radius: 50%;
  color: #fff;
}

.add-icon {
  font-size: 40rpx;
  font-weight: 300;
  line-height: 1;
  display: block;
  text-align: center;
}

/* 编辑按钮包装器 */
.add-member-btn-wrapper {
  display: flex;
  justify-content: flex-end;
  padding: 10rpx 0;
  margin-top: 10rpx;
}

/* 添加成员按钮（圆形加号） */
.add-member-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #40B2E6;
  border-radius: 50%;
  color: #fff;
  font-size: 40rpx;
  font-weight: 300;
  line-height: 1;
  position: relative;
}

.add-member-btn .add-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -62%);
  line-height: 1;
  margin: 0;
  padding: 0;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}