<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmswe.alumni.search.mapper.MerchantTierConfigMapper">

    <!-- 查询所有启用的会员等级配置（按排序） -->
    <select id="selectAllEnabled" resultType="com.cmswe.alumni.common.entity.MerchantTierConfig">
        SELECT * FROM merchant_tier_config
        WHERE status = 1
        ORDER BY sort_order ASC
    </select>

    <!-- 根据等级查询配置 -->
    <select id="selectByTierLevel" resultType="com.cmswe.alumni.common.entity.MerchantTierConfig">
        SELECT * FROM merchant_tier_config
        WHERE tier_level = #{tierLevel}
        LIMIT 1
    </select>

</mapper>
